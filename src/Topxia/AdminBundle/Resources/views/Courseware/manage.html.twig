{% extends 'TopxiaAdminBundle:CategoryManage:layout.html.twig' %}

{% block title %}课件管理 - {{ parent() }}{% endblock %}
{% set nav = 'course' %}
{% set side_nav = 'courseware' %}

{% set script_controller = 'courseware/main' %}

{% block main %}
<div class="page-header clearfix">
  <h1 class="pull-left">课件管理</h1>
    <button class="btn btn-sm btn-info pull-right add-category" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_courseware_create', {categoryId:category.id}) }}">添加课件</button>
</div>
  <form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

    <div class="form-group">
      <input class="form-control" type="text" placeholder="知识点搜索" name="knowledgeId" value="{{ app.request.get('knowledgeId') }}">
      <span class="glyphicon glyphicon-tasks"></span>
    </div>

    <div class="form-group">
      <select class="form-control method-form-group" name="method">
        {{ select_options(dict('courseware'), app.request.query.get('method')) }}
      </select>
    </div>

    <div class="form-group tagIds-form-group">
      {% set tagIds = app.request.get('tagIds') %}
      <input class="form-control" type="text" placeholder="标签搜索" name="tagIds[]" value="{% for tagId in tagIds %}{{ tagId }}{% endfor %}">
      <span class="glyphicon glyphicon-tasks"></span>
    </div>

    <div class="form-group title-form-group hide">
      <input class="form-control" type="text" placeholder="标题关键词搜索" name="title" value="{{ app.request.get('title') }}">
    </div>

    <button class="btn btn-primary">搜索</button>

  </form>
<div class="courseware-list">
  {% block list %}{% endblock %}
  <div>
    <label class="checkbox-inline"><input type="checkbox" data-role="batch-select"> 全选</label>
    <button class="btn btn-danger btn-sm mlm" data-role="batch-delete" data-name=""  data-url=""><i class="glyphicon glyphicon-trash"></i> 删除</button>
  </div>
  {{ web_macro.paginator(paginator) }}
</div>


{% endblock %}