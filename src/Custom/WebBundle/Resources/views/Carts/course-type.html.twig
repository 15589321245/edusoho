{% set courses = itemResult['course']['items'] %}
{% set users = itemResult[type]['extra']['users'] %}
{% for cart in carts %}
  {% set course = courses[cart.itemId] %}
  {% set favouritedCourseId = favoritedCourses[cart.itemId].id|default(null) %}
  <input type="hidden" name="goodIds[course][]" value="{{ course.id|default(0) }}">
    {% include 'CustomWebBundle:Carts:course-list-tr.html.twig' %}
  {% if course.type == 'package' %}
    {% for subcourse in course.subcourses %}
      {% include 'CustomWebBundle:Carts:course-list-tr.html.twig' with { course:subcourse,issubcourse:true } %}
    {% endfor %}
  {% endif %}
{% endfor %}