<table class="table table-hover table-striped {% if style == 'essayMaterial' %}hide{% endif %}" id="essay-table">
  <thead>
    <tr>
      <th width="60%">文章标题</th>
      <th width="">操作</th>
    </tr>
  </thead>
  <tbody>
    {% if essays|default(null) %}
      {% for essay in essays %}
        <tr>
          <td>{{ essay.title }}</td>
          <td>
            <button type="submit" class="btn btn-primary essay-creat" data-loading-text="正在提交" data-url="{{ path('course_create_lecture_note',{courseId:courseId, lessonId:lessonId , style: 'essay', type:type})}}" data-id='{{ essay.id }}' tabindex="5">添加</button>
          </td>
        </tr>
      {% endfor %}
    {% else %}
      <tr><td colspan="20"><div class="empty">暂无页面记录</div></td></tr>
    {% endif %}
  </tbody>
  {{ web_macro.paginator(essayPaginator) }}
</table>