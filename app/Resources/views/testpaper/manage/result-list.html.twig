{% import 'macro.html.twig' as web_macro %}

{% set resultStatus = [] %}
{% include 'testpaper/manage/result-list-search-form.html.twig' %}

{% if paperResults %}

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>{{'姓名'|trans}}</th>
      <th>{{'成绩'|trans}}</th>
      <th>{{'提交时间'|trans}}</th>
      <th>{{'状态'|trans}}</th>
      <th>{{'批阅人'|trans}}</th>
      <th>{{'操作'|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% for paperResult in paperResults %}
      {% set student = users[paperResult.userId]|default(null) %}
      <tr>
        <td>{% if student %}{{ student.nickname }}{% else %}{{'无'|trans}}{% endif %}</td>
        <td>{% if paperResult.status == 'finished' %}{{ paperResult.score }}/{{ testpaper.score }}{% else %} -- {% endif %}</td>
        <td>{% if paperResult.status != 'doing' %}{{ paperResult.endTime|date('Y-m-d H:i:s') }}{% else %}{% endif %}</td>
        <td>
          {% if paperResult.status == 'doing' %}
            <span class="color-danger">{{'进行中'|trans}}</span>
          {% elseif paperResult.status == 'reviewing' %}
            <span class="color-warning">{{'待批阅'|trans}}</span>
          {% else %}
            <span class="color-primary">{{'已批阅'|trans}}</span>
          {% endif %}
        </td>
        {% if paperResult.status == 'finished' %}
          {% set teacher = users[paperResult.checkTeacherId]|default(null) %}
          <td>{% if teacher %}{{ teacher.nickname }}{% else %}{{ '系统批阅'|trans }}{% endif %}</td>
        {% else %}
          <td> -- </td>
        {% endif %}

        <td>
          {% if paperResult.status == 'finished' %}
            <a href="{{ path(paperResult.type ~ '_result_show',{resultId:paperResult.id}) }}" id="show_testpaper_result" class="btn btn-default btn-sm" target="_blank">{{'查看结果'|trans}}</a>
          {% elseif paperResult.status == 'reviewing' %}
            {% if isTeacher is defined and isTeacher %}
              {% if source == 'classroom' %}

              {% else %}
                {% set checkUrl = path('course_manage_' ~ paperResult.type ~ '_check', {id:targetId,resultId:paperResult.id}) %}
              {% endif %}
              <a href="{{ checkUrl }}" class="btn btn-default btn-sm " target="_blank">{{'批阅'|trans}}</a>
            {% else %}
              <a href="javascript;;" class="btn btn-default btn-sm disabled" >{{'批阅'|trans}}</a>
            {% endif %}
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% else %}
  <div class="empty">{{'暂无数据'|trans}}</div>
{% endif %}

<nav class="text-center">
  {{ web_macro.paginator(paginator) }}
</nav>

