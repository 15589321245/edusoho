
<a class="btn gray-darker" href="#" data-toggle="modal" data-target="#modal" data-url="{{ path('course_manage_chapter_manage', {courseId:course.id, chapterId:lesson.id}) }}">
  <i class="es-icon es-icon-edit mrs"></i>
  {{'course.plan_task.edit_btn'|trans}}
</a>
<span class="dropdown">
  <a class="dropdown-toggle dropdown-more btn gray-darker" id="dropdown-more" data-toggle="dropdown" href="#">
    <i class="es-icon es-icon-keyboardarrowdown mrs" aria-haspopup="true" aria-expanded="false"></i>{{ 'course.plan_task.more_btn'|trans }}
  </a>
  <ul class="dropdown-menu pull-right dropdown-menu-more" role="menu" style="margin-top:12px;min-width:144px" aria-labelledby="dLabel" style="display:none;">

    {% set status = lesson.status|default('create') == 'published' ? 1 : 0 %}
    <li>
      <a class='publish-item {% if status == 1 %}hidden{% endif %}' href="javascript:;" data-type="chapter" data-url="{{ path('course_manage_chapter_publish', {courseId:course.id, chapterId:lesson.id}) }}">
        <i class="es-icon es-icon--check-circle mrs"></i>{{'course.plan_task.publish_btn'|trans}}
      </a>
    </li>
    <li>
      <a href="javascript:;" class="delete-item {% if status == 1 %}hidden{% endif %}" data-type="chapter" data-url="{{ path('course_manage_chapter_delete', {courseId:course.id, chapterId:lesson.id}) }}">
        <i class="es-icon es-icon-delete mrs"></i>
        {{'form.btn.delete'|trans}}
      </a>
    </li>
    <li>
      <a class='unpublish-item {% if status != 1 %}hidden{% endif %}' href="javascript:;" data-type="chapter" data-url="{{ path('course_manage_chapter_unpublish', {courseId:course.id, chapterId:lesson.id}) }}">
        <i class="es-icon es-icon-close01 mrm"></i>{{'course.plan_task.unpublish_btn'|trans}}
      </a>
    </li>
  </ul>
</span>