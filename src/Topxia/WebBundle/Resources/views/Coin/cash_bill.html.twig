{% extends 'TopxiaWebBundle:Settings:layout.html.twig' %}

{# {% set script_controller = 'my/orders' %} #}

{% set side_nav = 'my-bill' %}

{% block main %}
<div class="panel panel-default panel-col">
  {% include 'TopxiaWebBundle:Coin:bill-bar.html.twig' %}

  {# <div class="panel-heading">我的现金消费账单</div> #}
    <div class="panel-body">
      
    <form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
      <div class="form-group">
        <select class="form-control" name="lastHowManyMonths"  onchange="submit();">
          {% set options = {'oneWeek':'最近一周','twoWeeks':'最近两周','oneMonth':'最近一个月','twoMonths':'最近两个月','threeMonths':'最近三个月','':'全部记录'} %}
          {{ select_options(options, app.request.get('lastHowManyMonths')) }}
        </select>
      </div>

      {#<button class="btn btn-primary">搜索</button>#}
       <div class="control-label pull-right" style="padding-top: 8px;">
        收入：<a class="success">{{ amountInflow }}</a>RMB
        支出：<a class="danger">{{ amountOutflow }}</a>RMB
        </div>
    </form>

        <br>
    <div class="table-responsive">
      <table class="table table-striped">
        {% if cashes %}
        <tr>
          <th>流水号</th>
          <th>名称</th>          
          <th>成交时间</th>
          <th>名称</th>
          <th>收入</th>
          <th>支出</th>
          <th>支付方式</th>
        </tr>
        {% for cash in cashes %}
           <tr>
            <td>{{cash.sn}}</td>
            <td>{{cash.name}}<br>
                <span class="text-muted text-sm">订单号：{{cash.orderSn}}</span></td>            
            <td>{{cash.createdTime|date('Y-m-d H:i:s')}}</td>
            <td>{{cash.name}}<br>
                <span class="text-muted text-sm">订单号：{{cash.orderSn}}</span>
            </td>
            <td style="color:#1bb974">
              {% if cash.type =="inflow" %}{{cash.amount}} {% endif %}
            </td>
            <td style="color:#ff7b0e">
              {% if cash.type =="outflow" %}-{{cash.amount}} {% endif %}
            </td>
            <td>
              支付宝 
            </td>
          </tr>
        {% endfor %}
        {% else %}
        <div class="empty">暂无记录</div>
        {% endif %}
      </table>
    </div>
 {{ web_macro.paginator(paginator) }}
  </div>
</div>

{% endblock %}