{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}用户认证审核{% endblock %}
{% block body %}

<form id="approve-form"  method="post" action="{{ path('admin_approval_approve', {id:user.id}) }}">

<table class="table table-striped table-condenseda table-bordered">
 
  <tr>
    <th width="15%">真实姓名</th>
    <td width="35%">{{ userApprovalInfo.truename }}</td>
    <th width="15%">性别</th>
    <td width="35%">{{ userApprovalInfo.gender }}</td>
  </tr>

  <tr>    
    <th width="15%">出生年月</th>
    <td width="35%">{{ userApprovalInfo.birthday2 |date('Y-n-d')}}</td>
    <th width="15%">最高学历</th>
    <td width="35%">{{ userApprovalInfo.lastDegree }}</td>
  </tr>

  <tr>
    <th width="15%">毕业院校</th>
    <td width="35%">{{ userApprovalInfo.lastSchool }}</td>
    <th width="15%">所学专业</th>
    <td width="35%">{{ userApprovalInfo.lastMajors }}</td>
  </tr>


  <tr>
    <th width="15%">身份证</th>
    <td width="35%">{{ userApprovalInfo.idcard }}</td>
    <th width="15%">常用邮箱</th>
    <td width="35%">{{ userApprovalInfo.email2 }}</td>
  </tr>

  <tr>
    <th width="15%">联系电话</th>
    <td width="35%">{{ userApprovalInfo.mobile }}</td>
    <th width="15%">邮寄地址</th>
    <td width="35%">{{ userApprovalInfo.postAddr }}</td>
  </tr>

  <tr>
    <th width="15%">所在公司/单位</th>
    <td width="35%">{{ userApprovalInfo.company }}</td>
    <th width="15%">当前职位</th>
    <td width="35%">{{ userApprovalInfo.job }}</td>
  </tr>
 
</table>
<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="10%">身份证照</th>
    <td width="20%" >
      <a href="{{ url('admin_approval_show_idcard', {userId: user.id, type:'face'})}}" target="_blank">
        <img src="{{url('admin_approval_show_idcard', {userId: user.id, type:'face'})}}" width="200" />
      </a>
    </td>
    <td width="20%" >
      <a href="{{url('admin_approval_show_idcard', {userId: user.id, type: 'back'})}}" target="_blank">
        <img src="{{url('admin_approval_show_idcard', {userId: user.id, type: 'back'})}}" width="200" />
      </a>
    </td>
    <th width="10%">正面免冠人头照</th>
    <td width="20%" >
      <a href="{{url('admin_approval_show_head', {userId: user.id, type: 'head'})}}" target="_blank">
        <img src="{{url('admin_approval_show_head', {userId: user.id, type: 'head'})}}" width="200" />
      </a>
    </td>
  </tr>
</table>

   
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="note">备注</label>
      </div>
      <div class="col-md-8">
        <textarea id="note" name="note" class="form-control" rows="3"></textarea>
      </div>
    </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  <input id="form_status" type="hidden" name="form_status" >
</form>
{% endblock %}

{% block footer %}
<div class="pull-right">

  <button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
  <button type="submit" class="btn btn-danger" data-toggle="form-submit" data-status='fail' data-target="#approve-form">审核失败</button>
  <button type="submit" class="btn btn-success" data-toggle="form-submit" data-status='success' data-target="#approve-form">审核成功</button>


  <script>app.load('user/approve')</script>
    
</div>
{% endblock %}