{% extends 'TopxiaAdminBundle:Photo:layout.html.twig' %}

{% block title %}专辑管理 - {{ parent() }}{% endblock %}

{% set menu = 'photo' %}

{% set script_controller = 'photo/manage' %}

{% block main %}
	<div class="page-header">
    <a href="{{ path('photoview_create') }}" class="btn btn-info btn-sm pull-right" target="_blank">创建专辑</a>
    <h1>专辑管理</h1>
  </div>

  <form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
    <div class="form-group">
      <input class="form-control" type="text" placeholder="标题" name="title" value="{{ app.request.get('title') }}">
    </div>
    <button class="btn btn-primary">搜索</button>
  </form>

  <table class="table table-striped table-hover" id="activity-table">
    <thead>
    <tr>

      <th width="80%">专辑名称</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for course in courses %}
        {% include 'TopxiaAdminBundle:Photo:tr.html.twig' %}
      {% else %}
        <tr><td colspan="6"><div class="empty">无专辑记录</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}
{% endblock %}