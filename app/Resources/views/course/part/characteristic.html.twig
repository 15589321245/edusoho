{% set arr = [{
  'icon': "es-icon-download",
  'num': '5',
  'name': "资料"
},
{
  'icon': "es-icon-videocam",
  'num': '1',
  'name': "直播"
}] %}

{% if not arr is empty  %}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">课程特色</h3>
    </div>
    <div class="panel-body pt0">
      <div class="course-features pl0">
        {% for data in arr  %}
          {% if loop.index % 2 == 1 %}
          <div class="course-features-item clearfix">
        {% endif %}
          <div class="media">
            <div class="media-left prm">
              <span class="color-lump bg-primary"> <i class="es-icon {{ data.icon }} media-logo"></i>
              </span>
            </div>
            <div class="media-body media-middle">含{{ data.name }}({{ data.num }})</div>
          </div>
          {% if loop.index % 2 == 0 or loop.index == arr|length %}
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}