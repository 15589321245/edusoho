{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% block title %}站点设置 - {{ parent() }}{% endblock %}

{% set menu = 'site' %}

{% block main %}

<div class="page-header"><h1>站点设置</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" novalidate>
  <fieldset>
    <legend>基础信息</legend>
    
    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label for="name">网站名称</label>
      </div>
      <div class="col-lg-8 controls">
        <input type="text" id="name" name="name" class="form-control" value="{{site.name}}">
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-2 control-label"> 
        <label for="url">网站域名</label> 
      </div>
      <div class="col-lg-8 controls">
       <input type="text" id="url" name="url" class="form-control" value="{{site.url}}">
        <p class="help-block">以"http://"或"https://"开头</p>

    <div class="form-group">
      <div class="col-lg-2 control-label">{{ form_label(form.slogan, '网站副标题') }}</div>
      <div class="col-lg-8 controls">
        {{ form_widget(form.slogan, {attr:{class:'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label for="logo">网站LOGO</label>
      </div>
      <div class="col-lg-8 controls">
        <input type="text" id="logo" name="logo" class="form-control" value="{{site.logo}}">
        <p class="help-block">填写网站logo的文件路径地址。</p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">{{ form_label(form.seo_keywords, 'SEO关键词') }}</div>
      <div class="col-lg-8 controls">
        {{ form_widget(form.seo_keywords, {attr:{class:'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">{{ form_label(form.seo_description, 'SEO描述信息') }}</div>
      <div class="col-lg-8 controls">
        {{ form_widget(form.seo_description, {attr:{class:'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">{{ form_label(form.homepage_template, '首页模版') }}</div>
      <div class="col-lg-8 controls">
        {{ form_widget(form.homepage_template, {attr:{class:'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label for="master_email">管理员邮箱地址</label>
      </div>
      <div class="col-lg-8 controls">
        <input type="text" id="master_email" name="master_email" class="form-control" value="{{site.master_email}}">
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">
         <label for="icp">ICP备案号</label>
      </div>
      <div class="col-lg-8 controls">
        <input type="text" id="icp" name="icp" class="form-control" value="{{site.icp}}">
      </div>
    </div>
  </fieldset>

<br/>
  <fieldset>
    <legend>网站统计分析代码部署</legend>

    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label for="analytics" class="required">统计分析代码</label>
      </div>
      <div class="col-lg-8 controls">

        <textarea id="analytics" name="analytics" class="form-control" rows="4">{{site.analytics}}</textarea>

        <p class="help-block">
          建议使用下列统计分析的一种：
          <a href="http://www.google.cn/intl/zh-CN_ALL/analytics/" target="_blank">谷歌分析</a>、
          <a href="http://tongji.baidu.com/" target="_blank">百度统计</a>、
          <a href="http://ta.qq.com/" target="_blank">腾讯分析</a>、
          <a href="http://www.cnzz.com/" target="_blank">CNZZ</a>。
        </p>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>站点状态</legend>
    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label >网站状态</label>
      </div>
      <div class="col-lg-8 controls">

        <div id="status" class="radios">
          <input type="radio" id="status_0" name="status"  value="open"  
          {% if site.status == 'open' %} checked="checked" {% endif %}>
          <label for="status_0">开放</label>
          <input type="radio" id="status_1" name="status"  value="closed"
          {% if site.status == 'closed' %} checked="checked" {% endif %} >
          <label for="status_1">关闭</label></div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 control-label">
        <label for="closed_note">网站关闭公告</label>
      </div>
        <div class="col-lg-8 controls">
          <textarea id="closed_note" name="closed_note" class="form-control" rows="4">{{site.closed_note}}</textarea>
        <p class="help-block">网站处于关闭状态时，用户访问网站将显示此公告，支持HTML代码。</p>
      </div>
    </div>
  </fieldset>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
  
</form>

{% endblock %}