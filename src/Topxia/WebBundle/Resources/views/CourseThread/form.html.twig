{% extends 'TopxiaWebBundle:Course:dashboard-layout.html.twig' %}

{% set thread = thread|default(null) %}

{% block title %}{% if thread %}编辑话题{% else %}发表话题{% endif %} - {{ parent() }}{% endblock %}

{% set script_controller = 'course/thread-form' %}

{% block dashboard_main %}

{% include 'TopxiaWebBundle:Course:dashboard-nav.html.twig' with {nav:'thread'} %}

<form id="thread-form" class="form-vertical" method="post" 
  {% if thread %}
    action="{{ path('course_thread_edit', {courseId:course.id, id:thread.id}) }}"
  {% else %}
    action="{{ path('course_thread_create', {id:course.id}) }}"
    {% endif %}
  >

  <div class="control-group">
    <div class="controls">
      {% set placeholder = type == 'question' ? '标题，用一句话说请你的问题' : '标题' %}
      {{ form_widget(form.title, {attr:{placeholder:placeholder, 'data-display':'标题'}}) }}
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      {{ form_widget(form.content, {attr:{rows:18, 'data-display':'内容'}}) }}
    </div>
  </div>

  <div class="control-group">
    <div class="controls clearfix">
      {{ form_rest(form) }}
      {% if thread %}
        <button type="submit" class="btn btn-primary btn-fat pull-right">保存</button>
        <a href="{{ path('course_thread_show', {courseId:thread.courseId, id:thread.id}) }}" class="btn btn-link pull-right">取消</a>
      {% else %}
        <button type="submit" class="btn btn-primary btn-fat pull-right">发表</button>
        <a href="{{ path('course_threads', {id:course.id}) }}" class="btn btn-link pull-right">取消</a>
      {% endif  %}
    </div>
  </div>
</form>



{% endblock %}
