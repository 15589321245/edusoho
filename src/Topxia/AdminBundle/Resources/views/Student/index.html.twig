{% extends 'TopxiaAdminBundle:User:layout.html.twig' %}

{% block title %}学生管理 - {{ parent() }}{% endblock %}

{% set menu = 'student' %}

{% set script_controller = 'user/list' %}

{% block main %}
<div class="page-header clearfix">
  <button class="btn btn-info btn-sm pull-right mll" id="add-navigation-btn" data-toggle="modal" data-target="#modal" data-url="{{path('admin_user_create',{type:'student'})}}" >添加</button>
  <a class="btn btn-info btn-sm pull-right" href="{{path('admin_student_import')}}">导入</a>
  <h1 class="pull-left">学生管理</h1>
</div>
<form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate> 
  <div class="form-group">
    <input type="text" id="class" name="class" class="form-control" value="{{ app.request.query.get('class') }}" placeholder="按班级">
  </div>

  <div class="form-group">
    <input type="text" id="truename" name="truename" class="form-control" value="{{ app.request.query.get('truename') }}" placeholder="姓名">
  </div>

  <div class="form-group">
    <input type="text" id="number" name="number" class="form-control" value="{{ app.request.query.get('number') }}" placeholder="学号">
  </div>

  <button class="btn btn-primary">搜索</button>
</form>

<table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
  <thead>
    <tr>
      <th>学号</th>
      <th>姓名</th>
      <th>所属班级</th>
      <th>最近登录</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      {% set userMember = userMembers[user.id]|default(null) %}
      {% if userMember %}
        {% set class = classes[userMember.classId]|default(null) %}
      {% else %}
        {% set class = null %}
      {% endif %}
      {% include 'TopxiaAdminBundle:Student:student-table-tr.html.twig' %}
    {% endfor %}
  </tbody>
</table>
 {{ web_macro.paginator(paginator) }} 
{% endblock %}