{% extends 'TopxiaWebBundle:MyTeaching:layout.html.twig' %}

{% block title %}在教课程 - {{ parent() }}{% endblock %}

{% block main_body %}

  <table class="table table-striped table-hover" id="course-table">
    <thead>
    <tr>
      <th width="50%">名称</th>
      <th>学员数</th>
      <th>收入(元)</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for course in courses %}
        <tr>
          <td><a href="{{ path('course_show', {id:course.id}) }}">{{ course.title }}</a></td>
          <td>{{ course.studentNum }}</td>
          <td>{{ course.income }}</td>
          <td>{{ dict_text('courseStatus:html', course.status) }}</td>
        </tr>
      {% else %}
        <tr><td colspan="5">暂无在教的课程</td></tr>
      {% endfor %}
    </tbody>
  </table>


 {% if courses %}
		{{ render(controller('TopxiaWebBundle:Course:coursesBlock', {courses:courses, view: 'grid', mode:'teach'})) }}
		{{ web_macro.paginator(paginator) }} 
  {% else %}
    <div class="empty"></div>
  {% endif %}
{% endblock %}