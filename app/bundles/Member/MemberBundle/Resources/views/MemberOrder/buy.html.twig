{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}会员购买 - {{ parent() }}{% endblock %}

{% set script_controller = 'memberbundle/controller/order/buy' %}

{% block content %}

<div class="es-row-wrap container-gap" style="min-height:500px;">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header"><h1>会员购买</h1></div>
    </div>
  </div>

  <form class="form-horizontal" id="member-buy-form" method="post" action="{{ path('member_pay') }}">

    <div class="form-group">
      <label class="col-sm-3 control-label">会员类型</label>
      <div class="col-sm-8 radios">
        {{ radios('level', levels, selectedLevel) }}
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">开通时长</label>
      <div class="col-sm-8 radios">
        {{ radios('unit', {month: '按月', year: '按年'}, 'month') }}
      </div>
    </div>  

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8 controls">
        <input type="text" class="form-control width-input width-input-mini" name="duration" value="3"> 月
        <span class="text-success mll dealine-hint hide">会员有效期至<strong class="deadline">2014-6-18</strong></span>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">付款方式</label>
      <div class="col-sm-8 ">
        <input type="radio" checked="checked">
        <img src="{{ asset('assets/img/order/alipay.gif') }}">

      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">应付金额</label>
      <div class="col-sm-8">
        <p class="form-control-static"><strong class="money amount">正在计算...</strong></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-8">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
        <button type="submit" class="btn btn-primary">确认购买</button>
      </div>
    </div>

    <script type="text/plain" data-role="prices">{{ prices|json_encode|raw }}</script>

  </form>


<div class="modal" id="member-buy-confirm-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">确认购买</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" id="member-buy-form">
          <div class="form-group">
            <label class="col-sm-3 control-label">购买会员</label>
            <div class="col-sm-8">
              <p class="form-control-static"><strong class="text-success confirm-level"></strong></p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">应付金额</label>
            <div class="col-sm-8">
              <p class="form-control-static"><strong class="money confirm-amount"></strong></p>
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="member-order-confirm-btn">去支付</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




</div>
{% endblock %}