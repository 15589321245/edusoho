{% extends 'TopxiaWebBundle:MySale:layout.html.twig' %}

{% block title %}单品课程推广 - {{ parent() }}{% endblock %}
{% set side_nav = 'course-list' %}

{% block main %}
<div class="panel panel-default panel-col">
  <div class="panel-heading">
     可推广课程列表
  </div>
  <div class="panel-body">

  <table class="table table-striped table-hover" id="course-table">
    <thead>
    <tr>
      <th width="50%">名称</th>
      <th>销量/浏览量</th>
      <th>价格(元)</th>
      <th>销售期</th>
      <th>佣金</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for course in courses %}
        <tr>
          <td>

          <a class="pull-left" href="{{ path('course_show', {id:course.id}) }}" target="_blank">
            <img class="course-picture" src="{{ file_path(course.middlePicture, 'course-large.png') }}" alt="{{ course.title }}" width="100">
          </a>

          <a href="{{ path('course_show', {id:course.id}) }}" class="mlm" target="_blank">{{ course.title }}</a>

          </td>
          <td>{{ course.studentNum }}/{{ course.hitNum }}</td>
          <td>{{ course.price }}</td>
          <td></td>
           <td>340元</td>
          <td>
                    
          <a href="javascript:;" class="btn btn-default btn-sm"   data-toggle="modal" data-target="#modal" data-url="{{ path('mysale_course_link', {id:course.id}) }}"> 生成推广链接 </a>
        
          </td>
        </tr>
      {% else %}
        <tr><td colspan="20">暂无可推广的课程</td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }} 

  </div>
</div>

{% endblock %}