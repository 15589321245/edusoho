{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_coin_user_records' %}

{% block main %}

  <form id="coin-orders-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

    <input value="{{ app.request.get('flowType') }}" name="flowType" type="hidden"/>
    <input value="{{ app.request.get('timeType') }}" name="timeType" type="hidden"/>
    <div class="form-group">
      <select class="form-control" name="searchType">
        {% set options = {'nickname':'admin.coin.search_type_option.nickname'|trans,'email':'admin.coin.search_type_option.email'|trans} %}
        {{ select_options(options, app.request.get('searchType')) }}
      </select>
    </div>

    <div class="form-group">
      <input type="text" id="keyword" name="keyword" class="form-control" value="{{ app.request.query.get('keyword') }}"
             placeholder="{{'form.placeholder.keyword'|trans}}">
    </div>

    <button class="btn btn-primary">{{'form.btn.search'|trans}}</button>
  </form>

  <div class="well">
    <div>
      {{'time'|trans}}：
      <a type="button"
         class="btn btn-default btn-sm {% if app.request.get('timeType') != "threeMonths" and app.request.get('timeType') != "oneMonth" and  app.request.get('timeType') != "all" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{timeType:"oneWeek",searchType:app.request.get('searchType'),keyword:app.request.get('keyword')}) }}">{{'admin.coin.datagrid.filter.oneWeek'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('timeType') == "oneMonth" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{timeType:"oneMonth",searchType:app.request.get('searchType'),keyword:app.request.get('keyword')}) }}">{{'admin.coin.datagrid.filter.oneMonth'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('timeType') == "threeMonths" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{timeType:"threeMonths",searchType:app.request.get('searchType'),keyword:app.request.get('keyword')}) }}">{{'admin.coin.datagrid.filter.threeMonths'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('timeType') == "all" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{timeType:"all",searchType:app.request.get('searchType'),keyword:app.request.get('keyword')}) }}">{{'admin.coin.datagrid.filter.all_history'|trans}}</a>
      <span class="mll"></span>
      {{'type'|trans}}：
      <a type="button"
         class="btn btn-default btn-sm {% if app.request.get('flowType') != "out" and  app.request.get('flowType') != "in" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{flowType:"",timeType:app.request.get('timeType'),sort:app.request.get('sort')}) }}">{{'admin.coin.datagrid.filter.default'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('flowType') == "out" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{flowType:"out",timeType:app.request.get('timeType'),sort:app.request.get('sort')}) }}">{{'admin.coin.datagrid.filter.consume'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('timeType') == "in" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{flowType:"in",timeType:app.request.get('timeType'),sort:app.request.get('sort')}) }}">{{'admin.coin.datagrid.filter.recharge'|trans}}</a>
      <span class="mll"></span>
      {{'admin.coin.sort'|trans}}：
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('sort') == "up" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{flowType:app.request.get('flowType'),timeType:app.request.get('timeType'),sort:"up"}) }}">{{'admin.coin.datagrid.filter.asc'|trans}}</a>
      <a type="button" class="btn btn-default btn-sm {% if app.request.get('sort') == "down" %}btn-info{% endif %}"
         href="{{ path('admin_coin_user_records',{flowType:app.request.get('flowType'),timeType:app.request.get('timeType'),sort:"down"}) }}">{{'admin.coin.datagrid.filter.desc'|trans}}</a>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <tr>
        <th width="30%">{{'user'|trans}}</th>
        <th>{{'coin.recharge'|trans}}</th>
        <th>{{'coin.consume'|trans}}</th>
        <th>{{'finance.balance'|trans}}</th>
        <th>{{'admin.coin.operation'|trans}}</th>
      </tr>

      {% if userIds %}
        {% for userId in userIds %}
          <tr>
            <td> {{ web_macro.user_link(users[userId] , 'link-muted') }}</td>
            <td style="color:#1bb974;"> {{ userInCash(userId,app.request.get('timeType'))|default("0.00") }}</td>
            <td style="color:#ff7b0e;"> {{ userOutCash(userId,app.request.get('timeType'))|default("0.00") }}</td>
            <td style="color:blue;"> {{ user_account(userId).cash|default(0) }}</td>
            <td>
              <a class= {% if user_account(userId) %} "btn btn-default" {% else %} "btn btn-default disabled"  {% endif %}
              data-toggle="modal" data-target="#modal"
              data-url="{{ path('admin_coin_flow_detail',{userId:userId,timeType:app.request.get('timeType')}) }}"
              href="javascript:;">{{'form.btn.view'|trans}}</a>
            </td>
          </tr>
        {% endfor %}
      {% endif %}

    </table>
    {% if not userIds %}
      <div class="empty">{{'site.datagrid.empty'|trans}}</div>{% endif %}
    {% if paginator|default(null) %}
      {{ admin_macro.paginator(paginator) }}
    {% endif %}
  </div>
{% endblock %}