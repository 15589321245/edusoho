{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}

<div class="col-md-3">
    <div class="open-course-teacher panel panel-default">
      <div class="panel-heading"> 
        <h3 class="panel-title">
          {{'课程教师'|trans}}
        </h3>
      </div>
      <div class="panel-body text-center">
        {% for teacher in teachers if teacher %}
          {% if loop.index == 1 %}
            {% set userProfile = profiles[teacher.id]|default(null) %}
            {{ web_macro.user_avatar(teacher, '', 'avatar-md') }}
            <h3>{{ web_macro.user_link(teacher, '', false) }}</h3>
            <p class="color-gray">{{ teacher.title }}</p>
            <div class="intro">
              {{ userProfile.about|default(null)|raw }}
            </div>
          {% endif %}
        {% else %}
            <div class="empty">{{'暂无教师'|trans}}</div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
