{% import 'TopxiaAdminBundle::macro.html.twig' as admin_macro %}
<tr id="group-table-tr-{{ group.id }}">
   <td>
    {{ group.id}}
  <td>
    <strong>{{ group.title}}</strong>
     {% if group.status==0%}
          <label class="label label-danger">关闭</label>
    {% endif %}
  </td>
  <td>
    {{ group.nickname }}
  </td>
  <td>
    {{ group.memberNum }}
 
  </td>
    <td>
    {{ group.threadNum }}
 
  </td>
    <td>
    {{ group.postNum }}
 
  </td>
  <td>
    {% if group.status==1%}
    开启
    {% else %}
    关闭
    {% endif %}
  </td>
 <td>

  <div class="btn-group">
    <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
      编辑
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
       {% if group.status==1%}
  <li><a href="javascript:" class="close-group" title="关闭小组({{group.title}})" data-url="{{path('admin_close_group',{id:group.id})}}">关闭小组</a></li>
    {% else %}
    <li><a href="javascript:" class="open-group" title="开启小组({{group.title}})" data-url="{{path('admin_open_group',{id:group.id})}}">开启小组</a></li>
    {% endif %}
       
      
    
    </ul>
  </div>
 </td>
</tr>