{% extends 'admin/layout.html.twig' %}
{% set nav = 'admin_my_account' %}
{% set menu = 'admin_my_account' %}

{% block main %}
  <p class="text-muted">
    <span class="mrl">账户余额：<strong class="inflow-num">{{ account.amount/100 }}</strong> 元</span>
    <span class="mrl">现金余额：<strong class="outflow-num">{{ account.cash_amount/100 }}</strong> 元</span>
    <span class="mrl">冻结虚拟余额：<strong class="outflow-num">{{ account.locked_amount/100 }}</strong> 元</span>
  </p>
  <table class="table table-striped table-hover" id="order-table">
    <thead>
      <tr>
        <th width="20%">名称</th>
        <th width="">订单号</th>
        <th width="">支付平台</th>
        <th width="">金额</th>
        <th width="">类型</th>
      </tr>
    </thead>
    <tbody>
      {% if userCashflows %}
        {% for cashflow in userCashflows %}
          <tr>
            <td>{{ cashflow.title }}</td>
            <td>{{ cashflow.order_sn }}</td>
            <td>{{ cashflow.platform }}</td>
            <td>{{ cashflow.amount }}</td>
            <td>{{ cashflow.type }}</td>
          </tr>
        {% endfor %}
      {% else %}
        <tr><td colspan='5'><div class="empty text-center">没有流水记录</div></td></tr>
      {% endif %}
    </tbody>
  </table>
{% endblock %}