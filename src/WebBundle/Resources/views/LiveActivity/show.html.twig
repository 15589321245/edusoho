{% do script(['web/task/live-show.js']) %}
{% block content %} 
	<style type="text/css">
	.btn-primary {
		text-decoration: none;
	    border-color: #34a263;
	    background-color: #46c37b;
	    color: #fff;
	    transition: all 0.3s ease;
	    display: inline-block;
	    font-weight: normal;
	    text-align: center;
	    vertical-align: middle;
	    touch-action: manipulation;
	    cursor: pointer;
	    background-image: none;
	    border: 1px solid transparent;
	    padding: 6px 12px;
	    font-size: 14px;
	    line-height: 1.42857143;
	    border-radius: 4px;
	}
	</style>
	<script type="text/javascript">
	var live_activity_data  = {
		liveStartTimeFormat: '{{activity.startTimeFormat}}',
		liveEndTimeFormat: '{{activity.endTimeFormat}}',
		startTime: '{{activity.startTime}}',
		endTime: '{{activity.endTime}}',
		courseId: '{{activity.fromCourseId}}',
		id: '{{activity.id}}',
		liveId: '{{activity.ext.liveId}}',
		liveProvider: '{{activity.ext.liveProvider}}',
		isTeacher: !!{{activity.isTeacher}},
		replayStatus: null, //'videoGenerated'
		liveMediaError: null,
		replays: null,
		summary: '{{activity.remark}}',
		nowDate : parseInt({{activity.nowDate}})
	};
	
	</script>
	{# <pre>{{activity.remark|raw}}</pre> #}

	<div class="lesson-content lesson-content-text" id="lesson-live-content" data-role="lesson-content"
         style="display:none;">
      <div class="lesson-content-text-body" style="padding-left: 15px;"></div>
    </div>
{% endblock %}