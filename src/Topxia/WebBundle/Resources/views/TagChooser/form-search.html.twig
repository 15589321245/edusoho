  <div class="well well-sm">
    <form class="form-inline" role="form" style="position: relative;">
      <div class="form-control-static tag-search-group">
        标签：<a href="#" class="tag-search-trigger">选择</a>
      </div>

      <div class="form-group">

      </div>

      <input type="submit" value="搜索" class="btn btn-primary btn-sm">

      <div class="tagchooser-overlay">
        <div class="panel panel-default">
          <div class="panel-body">
            <div id="tagchooser-example-3" class="tagchooser">

              <div class="tagchooser-choosed"></div>
              <div class="tagchooser-input">
                <div class="input-group">
                  <input type="text" class="form-control" name="keywords" data-role="tag-input">
                  <div class="input-group-btn">
                    <button type="button" class="btn btn-default" data-role="dropdown-trigger" tabindex="-1">
                      <span class="caret"></span>
