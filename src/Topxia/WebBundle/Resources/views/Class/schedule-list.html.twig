{{ import_javascript({'list':'schedule/schedule-list'}) }}
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" {% if viewType == 'today' %} class="active" {% endif %} data-url="{{ path('class_student_schedule',{classId:classId,userId:app.user.id,viewType:'today'}) }}"><a href="#">今日课表</a></li>
  <li role="presentation" {% if viewType == 'tomorrow' %} class="active" {% endif %} data-url="{{ path('class_student_schedule',{classId:classId,userId:app.user.id,viewType:'tomorrow'}) }}"><a href="#">明日课表</a></li>
  <a href="{{ path('class_schedule', {classId:classId}) }}" class="pull-right">全部课表</a>
</ul>
<ul class="media-list">
  {% for schedule in schedules %}
  {% set lessonUrl = path('course_learn', {id:courses[lessons[schedule.lessonId].courseId].id}) ~ '#lesson/' ~ schedule.lessonId%}
  {% set teacher = teachers[courses[lessons[schedule.lessonId].courseId].teacherIds[0]|default(0)]|default(null) %}
    <li class="media">
      <a class="pull-left img-a" href="{{ lessonUrl }}" target="_blank">
        {% if schedule.status == 'finished' %}
          <span class="glyphicon glyphicon-ok pull-left text-success"></span>
        {% endif %}
        <img class="media-object" src="{{ file_path(courses[lessons[schedule.lessonId].courseId].middlePicture, 'course-large.png') }}" alt="{{ courses[lessons[schedule.lessonId].courseId].title }}">
      </a>
      <div class="media-body" title="{{lessons[schedule.lessonId].title}}">
        <h4 class="media-heading">{{lessons[schedule.lessonId].title}}</h4>
        <span class="name-text">{{ teacher.truename }}</span>
      </div>
    </li>
  {% else %}
    <li class="empty">暂无课表!</li>
  {% endfor %}
</ul>
