{% extends 'TopxiaWebBundle::bootstrap-modal-layout-webpack.html.twig' %}
{% set modal_class= "modal-lg" %}

{% do script(['libs/jquery-validation.js','libs/bootstrap-datetimepicker.js', 'web/course-manage/create/index.js']) %}

{% block title %}
  {% if course|default(false) %}
    {{ '复制' }}{{ '"' ~ course.title ~ '"' }}{{ '为一个新的教学计划'|trans }}
  {% else %}
    {{ '创建一个教学计划'|trans }}
  {% endif %}
{% endblock %}

