{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}创建活动 - {{ parent() }}{% endblock %}

{% set script_controller = 'activity/create' %}

{% block content %}
<div class="row">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="panel panel-default panel-page">
      <div class="panel-heading"><h2>创建活动</h2></div>

      <form id="course-create-form" class="form-horizontal" method="post">

        {{ web_macro.flash_messages() }}

        {{ form_errors(form) }}

        <div class="form-group">
          <div class="col-lg-2 control-label">{{ form_label(form.title, '标题') }}</div>
          <div class="col-lg-8 controls">{{ form_widget(form.title, {attr:{class:'form-control'}}) }}</div>
        </div>

        <div class="form-group">
          <div class="col-lg-2 control-label">{{ form_label(form.actType, '类型') }}</div>
          <div class="col-lg-8 controls">{{ form_widget(form.actType, {attr:{class:'form-control'}}) }}</div>
        </div>

        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-8 controls">
            {{ form_rest(form) }}
            <input id="course-create-btn" class="btn btn-fat btn-primary" type="submit" value="创建">
          </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

      </form>

    </div><!-- /panel -->

  </div>

</div>
{% endblock %}