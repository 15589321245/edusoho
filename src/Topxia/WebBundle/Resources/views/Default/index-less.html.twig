{% set bodyClass = 'homepage' %}

{% block content %}

<div class="es-row-wrap">

  <div class="row">

    <a href="#">
      <img src="{{ asset('/assets/img/placeholder/carousel-1200x256-1.png') }}" class="img-responsive">
