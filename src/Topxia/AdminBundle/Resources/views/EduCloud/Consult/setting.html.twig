{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_cloud_consult_setting' %}

{% block main %}
  {{ web_macro.flash_messages() }}
  <div class="page-heading">
    云客服开关
  </div>
  <form class="form-horizontal" role="form" method="post" novalidate>
    <div class="form-group">
      <label for="" class="col-sm-3 control-label">启用云客服：</label>
      <div class="controls col-md-9 radios">
        <div>
          <span class="text-success">{{ '已启用'|trans }}</span>
          <button type="submit" class="btn btn-default btn-sm mlm" name="cloud_consult_enabled" value="0"><span class="text-muted">{{ '关闭'|trans }}</span></button>
        </div>
        <div class="help-block">
          开启云客服,让您的网络课堂更智能。<a href="{{ path('admin_cloud_show',{'type': 'live'}) }}" target="_blank">登录云客服</a>。
        </div>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}