{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set script_controller = 'teacher/promote-list' %}

{% set menu = 'admin_teacher_promote' %}

{% block main %}

  <form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

    <input class="form-control" name="orgName" id="orgName"
           value="{{ app.request.get('orgName', app.user.orgName|default("--选择组织机构--"|trans) ) }}" autocomplete="off">
    <input type="hidden" class="form-control" name="orgCode" id="orgCode"
           value="{{ app.request.get('orgCode', app.user.orgCode) }}">
    <div id="ztreeContent" class="ztreeContent" style="display:none; position: absolute;">
      <ul id="orgZtree" class="ztree" style="margin-top:0; width:196px;z-index: 10000"
          data-source="{{ path('org_tree') }}"></ul>
    </div>

    <div class="form-group">
      <input type="text" name="nickname" class="form-control" value="{{ app.request.query.get('nickname') }}"
             placeholder="用户名">
    </div>

    <button class="btn btn-primary">搜索</button>

  </form>

  <table class="table table-striped table-hover mtl" id="teacher-promote-table">
    <thead>
    <tr>
      <th>顺序号</th>
      <th width="50%">用户名</th>
      <th>推荐时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
      {% include 'TopxiaAdminBundle:Teacher:teacher-promote-tr.html.twig' %}
    {% else %}
      <tr>
        <td colspan="20">
          <div class="empty">暂无推荐老师</div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}

{% endblock %}