{% extends 'WebBundle:CourseSetManage:layout.html.twig' %}


{% block title %}{{'试卷批阅'|trans}} - {{ parent() }}{% endblock %}

{% set side_nav = 'testpaperCheck' %}
{% set parentId = parentId | default(null)%}

{% block main %}

<div class="panel panel-default panel-col">

  <div class="panel-heading">
    {{'试卷批阅'|trans}}
  </div>
  <div class="panel-body">

    {% if isTeacher is defined and not isTeacher %}
      <span class="text-danger">{{'当前用户不是本课程教师，没有批改试卷的权限。'|trans}}</span>
    {% endif %}

    {{ render(controller('WebBundle:TestpaperManage:checkList',{request:app.request,courseId:course.id,type:'testpaper'})) }}

  </div>
</div>

{% endblock %}