{% extends 'classroom-manage/layout.html.twig' %}
{% block title %}{{'助教设置'|trans}} - {{ parent() }}{% endblock %}
{% set side_nav = 'assistant' %}
{% do script(['app/js/classroom-manage/set-assistants/index.js']) %}
{#{% set script_controller = 'topxiawebbundle/controller/classroom/manage/assistants' %}#}

{% block main %}
<div class="panel panel-default panel-col">
  <div class="panel-heading">{{'助教设置'|trans}}</div>
  <div class="panel-body">
    <form id="teachers-form" class="form-horizontal" method="post">
      {{ web_macro.flash_messages() }}
      <div class="form-group" id="teachers-form-group">
        <label class="col-md-2 control-label">{{'设置助教'|trans}}</label>
        <div class="col-md-8 controls">
          {% set url = path('classroom_assistants_match', {classroomId:classroom.id}) %}
          <div id="classroom-manage-set-assistant" data-url = {{url}} data-assistants = {{ assistants|json_encode|raw }}></div>
          {#<ul class="list-group teacher-list-group sortable-list" id="teacher-list-group" data-role="list" style="display:none;"></ul>
          <div class="input-group">
            {% set url = path('classroom_assistants_match', {classroomId:classroom.id}) ~ '?q={{query}}' %}
            <input class="form-control" id="teacher-input" type="text" data-role="item-input" data-url="{{ url }}">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" data-role="item-add" >{{'添加'|trans}}</button>
            </span>
          </div>
          
          <p class="help-block">
            <div>{{'助教可在【%name%管理】中批阅%classroom%作业和试卷，并且可以在%classroomName%讨论区创建活动'|trans({'%name%':setting('classroom.name')|default('班级'|trans),'%classroom%':setting('classroom.name')|default('班级'|trans),'%classroomName%':setting('classroom.name')|default('班级'|trans)})}}</div>
          </p>
          <script type="text/plain" data-role="model">{{ assistants|json_encode|raw }}</script>
          <script type="text/x-handlebars-template" data-role="item-template">
              {% verbatim %}

              <li class="list-group-item clearfix" data-role="item">
                <span class="glyphicon glyphicon-resize-vertical sort-handle"></span>
                <img src="{{ avatar }}" class="avatar-small">
                <span class="nickname">{{ nickname }}</span>
                <input type="hidden" name="ids[]" value="{{ id }}">     
                <button  class="close delete-btn" data-role="item-delete" type="button">&times; </button>
              </li>
            {% endverbatim %}
          </script>#}
        </div>  
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-8 controls">
          <button type="submit" class="btn btn-fat btn-primary">{{'保存'|trans}}</button>
        </div>  
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

    </form>
  </div>
</div>

{% endblock %}