{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}我要提问{% endblock %}
{% block body %}

  <form id="course-thread-create-form" class="form-vertical" method="post" action="{{ path('course_thread_create', {id:course.id}) }}" data-auto-submit="false">

    {{ web_macro.flash_messages() }}

		<div class="control-group">
			<div class="controls">
		    {{ form_widget(form.title, {attr:{placeholder:'标题，用一句话说请你的问题', 'data-display':'标题'}}) }}
	    </div>
		</div>

		<div class="control-group">
			<div class="controls">
		    {{ form_widget(form.content, {attr:{rows:5, placeholder:'详细描述你的问题', style:'width:100%;'}}) }}
		  </div>
		</div>

    {{ form_rest(form) }}
  </form>

	<script>
		app.load('course/thread-create-modal');
	</script>

{% endblock %}

{% block footer %}
  <input id="course-thread-create-btn" class="btn btn-primary" type="submit" data-toggle="form-submit" data-target="#course-thread-create-form" value="提问">
{% endblock %}