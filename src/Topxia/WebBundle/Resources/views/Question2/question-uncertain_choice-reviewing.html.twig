{% extends 'TopxiaWebBundle:Question2:question-base-layout.html.twig' %}

{% block heading %}
  {{ question.stem|bbCode2Html|raw }}
{% endblock %}

{% block body %}

  {% include 'TopxiaWebBundle:Question2:question-choice-options-result.html.twig' %}

 {% set choiceIndex = (65+result.answer)|chr %}

  <div class="question-result">

    {% if result.status == 'right' %}
     <span class="glyphicon glyphicon-ok question-text-success"></span>
    {% elseif result.status == 'wrong' %}
       <span class="glyphicon glyphicon-remove question-text-danger"></span> 选择了<strong class="question-text-danger">{{ choiceIndex }}</strong>
  {% elseif result.status == 'partRight' %}
       <span class="glyphicon glyphicon-remove question-text-danger"></span> 部分答对,选择了<strong class="question-text-danger">{{ choiceIndex }}</strong>
    {% elseif result.status == 'noAnswer' %}
　　　  <span class="glyphicon glyphicon-remove question-text-danger"></span>未答题，选择了<strong class="question-text-danger" >{{ choiceIndex }}</strong>
    {% endif %}
</div>

{% endblock %}

{% block footer %}

{% endblock %}