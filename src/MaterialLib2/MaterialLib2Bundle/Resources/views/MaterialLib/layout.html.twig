{% extends 'TopxiaWebBundle:My:layout.html.twig' %}

{% block title %}教学资料库 - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" media="screen" href="{{ asset('assets/css/colorbox/colorbox.css') }}" />
{% endblock %}

{% set side_nav = 'material-lib' %}

{% block main %}
<div class="panel panel-default panel-col">

	<div class="panel-heading">
		教学资料库
		<div class="text-sm pull-right">

			<div class="btn-group" role="group">
				<a class="btn btn-default {% if source == "upload" %} active {% endif %}" href="{{ path('material_lib_browsing', {type: type|default('all'), viewMode: viewMode|default('thumb'), source: 'upload'}) }}">来自上传</a>

				<a class="btn btn-default {% if source == "shared" %} active {% endif %}"" href="{{ path('material_lib_browsing', {type: type|default('all'), viewMode: viewMode|default('thumb'), source: 'shared'}) }}">来自分享</a>

				<a class="btn btn-default {% if source == "myShareHistory" %} active {% endif %}"" href="{{ path('material_lib_show_sharing_history') }}">我的分享</a>
			</div>
		</div>
	</div>
	
	<div class="panel-body">
	{% block page_body %}
	{% endblock %}
	</div>
</div>
{% endblock %}