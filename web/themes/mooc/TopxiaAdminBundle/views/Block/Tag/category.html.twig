{% set categories = data('Categories',{group:'course'}) %}
<div class="form-group">
  <label class="control-label col-md-3 col-xs-3" for="data[{{ code }}][{{ dataId }}][categoryId]">分类</label>
    <div class="col-md-7 col-xs-7">
    <select class="form-control" name="data[{{ code }}][{{ dataId }}][categoryId]">
      {% for category in categories %}
        <option value="{{ category.id|default('') }}" {% if data.categoryId == category.id %}selected{% endif %}>{{ category.name|default('') }}</option>
      {% endfor %}
    </select>
    </div>
  </div>

<div class="form-group">
    <label class="control-label col-md-3 col-xs-3" for="data[{{ code }}][{{ dataId }}][src]">图标</label>
    <div class="col-md-7 col-xs-7">
      <input class="form-control" type="text" name="data[{{ code }}][{{ dataId }}][src]" id="data[{{ code }}][{{ dataId }}][src]" data-role="img-url" value="{{ data.src|default('') }}">
    </div>
    <div class="col-md-2 col-xs-2">
      <div class="btn btn-default btn-sm img-upload webuploader-container" id="item-{{ code }}-uploadId-{{ dataId }}" data-url="{{ path('admin_block_picture_upload', {blockId:block.id, code:code}) }}">上传</div>
    </div>
 </div>

