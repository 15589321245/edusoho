{% extends 'TopxiaWebBundle:Question:question-choice-doing.html.twig' %}

{% block body %}

  {% include 'TopxiaWebBundle:Question:question-choice-options.html.twig' %}

{% set itemResultAnswer = itemResult.answer  %}

{# {% if itemResultAnswer in [0,1] %} #}
 {% set answerChoiceIndex = (65+itemResult.answer)|chr %}
{# {% endif %} #}

  <div class="question-choices-inputs">
    {% for key, choice in question.metas.choices %}
      {% set choiceIndex = (65+key)|chr %}
      <label class="radio-inline">
        <input id="question-{{ question.id }}-input-{{ choiceIndex }}" type="radio" data-type="choice" name="answer[{{ question.id }}]" value="{{ key }}" {% if answerChoiceIndex|default('null') == choiceIndex %}checked{% endif %}> {{ choiceIndex }}
      </label>
    {% endfor %}
  </div>


{% endblock %}