{% extends 'TopxiaAdminBundle:Article:layout.html.twig' %}

{% set tab_menus = permissions('admin_operation_article',"tab") %}
{% set menu = 'article' %}
{% set submenu = 'category' %}
{% block title %}{{ parent() }}-{{ admin_macro.title(tab_menus,submenu) }}{% endblock %}

{% block main %}
<div class="mbl">
    {% include 'TopxiaAdminBundle::tab.html.twig' with {menus : tab_menus , type : submenu} %}
</div>

<div class="clearfix mbs">
  {% set btn_menus = permissions("admin_operation_article_category","button") %}
                {% include 'TopxiaAdminBundle::button.html.twig' with {menus : btn_menus} %}
</div>

<table class="table table-hover" id="category-table">
  <thead>
    <tr>
      <th width="45%">栏目名称</th>
      <th width="20%">编码</th>
      <th width="10%">显示序号</th>
      <th width="20%">操作</th>
    </tr>
  </thead>
  {% include 'TopxiaAdminBundle:ArticleCategory:tbody.html.twig' %}
</table>
{% endblock %}