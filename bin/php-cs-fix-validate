#! /bin/bash
echo '------------------------------------------------------------>'
echo '### mkdir -p app/data'
mkdir -p app/data

echo '### git status --untracked-files -s >> app/data/php-cs-fixer-files'
rm -f app/data/php-cs-fixer-files
git status --untracked-files -s >> app/data/php-cs-fixer-files
cat app/data/php-cs-fixer-files

echo '### 检查规范'
while read line
do
    ## 校验的文件
    ##  D app/autoload.php  -- 删除, 不检查
    ##  M bin/fix    -- 修改
    ## ?? tests/Unit/Task/Job/Test.php      -- 新增
    ## ?? tests/Unit/Task/JobTest/Test.php  -- 新增
    ignoreStartLines=' D';  ## 以 空格 + D 开头的，不检查

    if [ ${line:0:2} != $ignoreStartLines ]; then
        i=1
        fixedClass=''
        while((1==1))  
        do  
            split=`echo $line|cut -d " " -f$i`  ## 以空格分割
            if [ "$split" != "" ]; then
                fixedClass="${split}"  # 取最后一个空格的后面的内容
            else  
                break
            fi
            ((i++))
        done

        if [[ $fixedClass = *\.php* ]]; then
            php-cs-fixer fix --config=.php_cs.dist -v --dry-run --using-cache=no --path-mode=intersection $fixedClass
        fi
    fi
done < app/data/php-cs-fixer-files

rm app/data/php-cs-fixer-files
echo '### 结束'
echo '<------------------------------------------------------------'