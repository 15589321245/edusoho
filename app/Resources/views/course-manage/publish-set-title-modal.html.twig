{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modal_class= "modal-lg" %}

{% do script(['libs/jquery-validation.js', 'app/js/course-manage/title/index.js']) %}

{% block title %}
  {{ 'course.teaching_plan.default.title'|trans }}
{% endblock %}

{% block body %}
  <div id="course-title-editor">
    <form class="form-horizontal" id="course-title-form" method="post"
        action="{{path('course_set_manage_course_publish_set_title', {courseSetId: courseSetId, courseId: courseId})}}">
      <div class="form-group">
        {{ 'course.teaching_plan.default.title.set.tip'|trans }}

        <div class="col-sm-2 control-label">
          <label for="title" class="control-label-required">{{ 'course.teaching_plan.default.title.set'|trans }}</label>
        </div>
        <div class="col-sm-8">
          <input type="text" id="planTitle" name="title" class="form-control">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block footer %}
  <button id="course-title-submit" type="button" class="btn btn-primary pull-right" data-loading-text="{{ 'form.btn.publish.submiting'|trans }}">{{ 'form.btn.publish'|trans }}</button>
  <button id="course-title-cancel" type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</button>
{% endblock %}
