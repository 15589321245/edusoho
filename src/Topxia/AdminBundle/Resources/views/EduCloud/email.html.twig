{% extends 'TopxiaAdminBundle::layout.html.twig' %}


{% set menu = 'admin_edu_cloud_email' %} 

{% set script_controller = 'educloud/email-setting' %}
{% block main %}
{{ web_macro.flash_messages() }}
  {% if locked|default(0) == 1 %}
    <div class="alert alert-warning" role="alert">您的云邮件已被锁定，请联系客服人员：0571-86819929。</div>
  {% endif %}
  {% if enabled|default(1) == 0 %}
    <div class="alert alert-danger" role="alert">您的云邮件已被禁用，请联系客服人员：0571-86819929。</div>
  {% endif %}
  <div class="eduyun-main">
  {% if enabled|default(1) == 0 %}
    <div class="mask"></div>
  {% endif %}
  	<div class="page-header clearfix">
  	  <h1 class="pull-left">云邮件</h1>
  	</div>
  	<div class="edu-service ">
  	  <div class="edu-balance">
  			<div class="alert alert-warning" role="alert">云邮件服务免费公测中，将于2015年3月31日结束</div>
  			<div class="controls  radios">
          <form class="form-horizontal" method="post" id="email-form" novalidate="">
          {% if emailStatus.status|default('disable') in  ['disable'] %}
    				<button name="email-open" class="btn btn-primary" >启用云邮件</button>
          {% elseif emailStatus.status == 'enable' and emailStatus.sign|default(null) != "" %}
            <div name="status">
              <span class="text-success">已启用</span>
              <button  class="btn btn-default btn-sm mlm" name="email-close"><span class="text-muted">关闭</span></button>
              <p><span>发件人名称：{{ emailStatus.sign }}</span> <a href="#" name="sign-update">修改</a></p>
            </div>
            <div name="submit-sign" hidden="hidden">
              <span>发件人名称：<input type="text" name="sign"></span><button class="btn btn-primary mlm mrm" >提交</button><a href="">取消</a>
            </div>
          {% elseif emailStatus.status in ['created'] %}
            <span>发件人名称：<input type="text" name="sign"></span><button class="btn btn-primary" >提交</button><span><a href="">取消</a></span>
          {% elseif emailStatus.status|default(null) == 'error' %}
            <div class="row">
              <div class="col-md-2">
                <button name="email-open" class="btn btn-primary" disabled="disabled" >启用云邮件</button>
              </div>
              <div class="col-md-10">
                <span class="text-danger text-sm" >抱歉，您尚未接入教育云，不能使用云邮件服务！</span>
                <a href="http://open.edusoho.com/educloud" target="_blank">立即接入</a>
              </div>
            </div>
          {% endif %}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
          </form>
  				<div class="help-block">提供优质的邮件发送通道，保证邮件发送的稳定可靠；无复杂配置；无每日发送数量限制。</div>
  			</div>

  		</div>
  	</div>
    
  	<div class="page-header clearfix">
  	  <h1 class="pull-left">邮件使用场景</h1>
  	</div>
    {% if emailStatus.status|default(0) != 'error' and level|default('error') != 'error' %}
  	<table class="table table-bordered">

      <thead>
        <tr>
          <th style="width:20%">编号</th>
          <th style="width:30%">应用场景</th>
          <th style="width:30%">发送方式</th>
          <th style="width:20%">状态</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        </tr>
        <tr>
          <td>1</td>
          <td>
            用户注册
            <span class="glyphicon glyphicon-question-sign text-muted pull-right" id="article-property-tips1" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span> 
            <div id="article-property-tips1-html" style="display:none;">
              <div style="width:250px;font-size:14px;">
                <span style="color:blue;"> 用户注册:</span><br>
                这里是用户注册的引导说明
                <br>
              </div>
            </div>
          </td>
          <td>自动单发
          <span class="glyphicon glyphicon-question-sign text-muted pull-right" id="article-property-tips2" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span>
          <div id="article-property-tips2-html" style="display:none;">
              <div style="width:250px;font-size:14px;">
                <span style="color:blue;"> 自助单发:</span><br>
                这里是自助单发的引导说明
                <br>
              </div>
            </div>
          </td>
          <td class="radios" >
            <label>
              <input type="hidden" name="sms_bind" value="on" >默认开启
            </label>
          </td>
        </tr>
        <tr>
          <td>2</td>
          <td>
            重置密码
            <span class="glyphicon glyphicon-question-sign text-muted pull-right" id="article-property-tips3" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span> 
            <div id="article-property-tips3-html" style="display:none;">
              <div style="width:250px;font-size:14px;">
                <span style="color:blue;"> 重置密码:</span><br>
                这里是重置密码的引导说明
                <br>
              </div>
            </div>
          </td>
          <td>自动单发
          <span class="glyphicon glyphicon-question-sign text-muted pull-right" id="article-property-tips4" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span>
          <div id="article-property-tips4-html" style="display:none;">
              <div style="width:250px;font-size:14px;">
                <span style="color:blue;"> 自助单发:</span><br>
                这里是自助单发的引导说明
                <br>
              </div>
            </div>
          </td>
          <td class="radios" >
            <label>
              <input type="hidden" name="sms_bind" value="on" >默认开启
            </label>
          </td>
        </tr>
      </tbody>
    </table>
    {% endif %}
    <input name="email-status" hidden="hidden" data-status ="{{emailStatus.status|default("")}}">
  </div>
 <!--  <button type="submit" class="btn btn-primary">保存设置</button> -->
{% endblock %}
