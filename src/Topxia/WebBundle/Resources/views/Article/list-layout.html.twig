{% extends 'TopxiaWebBundle:Default:layout.html.twig' %}

{% block content %}

	<div class="es-row-wrap container-gap">

		<div class="row">
		    <div class="col-md-12">
		      <div class="page-header"><h1>{{ setting.name }}</h1></div>
		    </div>
	  	</div>

		<div class="row row-9-3 article-row">
		    <div class="col-md-9">
				{% block headerbar %}
			      	<ul class="nav nav-pills article-nav">
				        <li><a href="{{ path('article_show') }}">{{ setting.name }}</a></li>
				        {% for cat in categoryTree %}
					        {% if cat.parentId == 0 %}
					           <li class="{% if menu == cat.code or rootCategory.code == cat.code %}active{% endif %}"><a href="{{ path('article_category', {categoryCode:cat.code}) }}">{{ cat.name }}</a></li>
					        {% endif %}
				        {% endfor %}
			      	</ul>
				{% endblock %}
				{% block main %}{% endblock %}
		    </div>
		    <div class="col-md-3">
		    	{% block sub %}{% endblock %}
		    </div>
		</div>
	</div>

{% endblock %}