{% extends 'WebBundle:Activity:activity-form-layout.html.twig' %}
{% do script(['libs/vendor.js', 'web/activity-manage/live-activity-fields.js']) %}

{% block activity_content %}
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="title">{{ '标题'|trans }}</label>
    </div>
    <div class="col-md-9 controls">
      <input id="title" class="form-control" type="text" name="title" value={{ activity.title|default('') }}></div>
  </div>
  <div class="row form-group expiry-day-js">
    <div class="col-md-2 control-label">
      <label for="startTime">{{ '直播开始时间'|trans }}</label>
    </div>
    <div class="col-md-9 controls">
      <input id="startTime" class="form-control width-input width-input-large" type="text" name="startTime" value={{ activity.startTime|default('') }}></div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="length">{{ '直播时长'|trans }}</label>
    </div>
    <div class="col-md-9 controls">
      <input id="length" class="form-control width-input width-input-large" type="text" name="length" value={{ activity.length|default('') }}>分钟
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="text-remark-field" class="style1">{{ '直播说明'|trans }}</label>
    </div>
    <div class="col-md-9 controls">
      <textarea class="form-control" id="text-remark-field" name="remark" rows="10" data-image-upload-url="{{ path('editor_upload', {token:upload_token('course')}) }}" data-flash-upload-url="{{ path('editor_upload', {token:upload_token('course', 'flash')}) }}" data-image-download-url="{{ path('editor_download', {token:upload_token('course')}) }}"
    >{{ activity.remark|default('') }}</textarea>
    </div>
  </div>
{% endblock %}


{% block activity_finish %}
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="condition">{{ '完成条件'|trans }}</label>
    </div>
    <div class="col-md-9 controls">
      <span>进入观看过直播</span>
    </div>
  </div>
{% endblock %}