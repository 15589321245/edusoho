{% extends 'TopxiaWebBundle:Default:layout.html.twig' %}

{% block title %}搜索：{{ keywords }} - {{ parent() }}{% endblock %}

{% block content %}

<div class="es-row-wrap container-gap">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header"><h1>搜索</h1></div>
    </div>
  </div>

  <div class="row row-3-9">
    <div class="col-md-9" style="min-height:300px;">
      {% if isShowVipSearch  %}
    <form class="well well-sm" action="{{ path('search') }}">
      <div style="float:left;" class="col-md-2.5" >
      <select  class="form-control searchSelect " name="categoryIds" id="select_id">
            {{ select_options(categoryIds, app.request.query.get('categoryIds'), '课程分类') }}
      </select>
      </div>
      <div class="input-group input-group-lg">
      <input type="text" class="form-control" name="q" value="{{ keywords }}" id="searchText">
      <span class="input-group-btn">
      <button class="btn btn-primary" type="submit">搜索</button>
      </span>
      </div>
      {% if currentUserVipLevel  %}
      <div class="checkbox-group" RepeatDirection="Horizontal" id="coursesChoicesList" name="coursesChoicesList" >
      <label>
      <input type="checkbox" name="coursesChoicesList" id="vipCourses" 
         value="1" data-url="{{path('search')}}" {% if coursesChoicesList == 1 %} checked{% endif %} > 仅显示会员课程
      </label>
      <label>
      <input type="checkbox" name="coursesChoicesList" id="liveCourses" 
         value="2" data-url="{{path('search')}}" {% if coursesChoicesList == 2 %} checked{% endif %} >
         仅显示直播课程
      </label>
      </div>
      {% endif %}
      </form>

      {% else %}
      <form class="well well-sm" action="{{ path('search') }}">
      <div style="float:left;" class="col-md-2.5" >
      <select  class="form-control searchSelect " name="categoryIds">
            {{ select_options(categoryIds, app.request.query.get('categoryIds'), '课程分类') }}
      </select>
      </div>
      <div class="input-group input-group-lg">
           <input type="text" class="form-control" name="q" value="{{ keywords }}">
             <span class="input-group-btn">
             <button class="btn btn-primary" type="submit">搜索</button>
      </span>
      </div>

      </form>
      {% endif %}


      {% if keywords  %}
        {% if courses %}
          {{ render(controller('TopxiaWebBundle:Course:coursesBlock', {courses:courses, view: 'list'})) }}
          {{ web_macro.paginator(paginator) }} 
        {% else %}
          <div class="empty">没有搜到相关课程，请换个关键词试试！</div>
        {% endif %}
      {% else %}
        <div class="empty">请输入搜索关键词！</div>
      {% endif %}
    </div>
    <div class="col-md-3">

    </div>
  </div>

</div>
{% endblock %}