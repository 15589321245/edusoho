{% extends 'TopxiaAdminBundle:Course:layout.html.twig' %}

{% block title %}标签管理 - {{ parent() }}{% endblock %}

{% set menu = 'tag' %}
{% set script_controller = 'tag2/list' %}
{% block main %}

<div class="page-header clearfix">
  <button class="btn btn-info btn-sm pull-right" id="add-tag-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_tag_group_create') }}">新增标签</button>
  <h1 class="pull-left">标签管理</h1>
</div>

<table id="tag-table" class="table table-striped">
  <thead>
    <th width="10%">标签组</th>
    <th width="10%">类别</th>
    <th width="60%">标签</th>
    <th width="20%">操作</th>
  </thead>
  <tbody>
    {% for tagGroup in tagGroups %}
    {% set tag = tags[tagGroup.id]|default(null)  %}
      {% include 'TopxiaAdminBundle:Tag2:list-tr.html.twig' %}
    {% else %}
     <tr><td colspan="20"><div class="empty">暂无标签记录</div></td></tr>
    {% endfor %}
  </tbody>
</table>

{{ web_macro.paginator(paginator) }}


{% endblock %}