{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set course = course|default(null) %}

{% block title %}
设置推广佣金
{% endblock %}
{% block body %}
  <form class="form-horizontal" id="course-form" action="{{ path('admin_course_ad_commission', {id:course.id}) }}" method="post">

    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommissionType-field">佣金计算类型</label>
      <div class="col-md-6 controls">
        <div class="controls col-md-8 radios">
          {{ radios('adCommissionType', {'ratio':'比例'}, course.adCommissionType) }}{#'quota':'定额', #}
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommission-field">佣金<span class="{% if course.adCommissionType != 'quota' %} hidden {% endif %} quota-text">额度</span><span class="{% if course.adCommissionType != 'ratio' %} hidden {% endif %} ratio-text ">比例</span></label>
      <div class="col-md-6 controls">
        <input class="form-control" id="course-adCommission-field" type="text" name="adCommission" value="{{ course.adCommission }}" >
        <span class="{% if course.adCommissionType != 'quota' %} hidden {% endif %} small quota-text">单位：元</span>
        <span class="{% if course.adCommissionType != 'ratio' %} hidden {% endif %} small ratio-text ">百分比</span>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommissionDay-field">推广天数</label>
      <div class="col-md-6 controls">
        <input class="form-control" id="course-adCommissionDay-field" type="text" name="adCommissionDay" value="{{ course.adCommissionDay }}" >
      </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
  <script type="text/javascript">app.load('courseAdCommission/save-modal')</script>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
  <button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#course-form">保存</button>
{% endblock %}
