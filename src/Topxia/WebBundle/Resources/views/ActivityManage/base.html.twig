{% extends 'TopxiaWebBundle:ActivityManage:layout.html.twig' %}

{% block title %}基本信息 - {{ parent() }}{% endblock %}

{% set side_nav = 'base' %}
{% set script_controller = 'activity-manage/base' %}
{% set script_arguments = {
  categoryUrl: path('category_all'),
  tagUrl: path('tag_all'),
  locationUrl: path('location_all')
} 
%}
{% block main %}

<div class="panel panel-default panel-col">
	<div class="panel-heading">基本信息</div>
	<div class="panel-body">
		<form class="form-horizontal" id="activity-form" method="post">

		  {{ web_macro.flash_messages() }}

		  {{ form_errors(form) }}

			<div class="form-group">
				<div class="col-lg-2 control-label">{{ form_label(form.title, '标题') }}</div>
				<div class="col-lg-8 controls">{{ form_widget(form.title, {attr:{class:'form-control'}}) }}</div>
			</div>

			<div class="form-group">
				<div class="col-lg-2 control-label">{{ form_label(form.subtitle, '副标题') }}</div>
				<div class="col-lg-8 controls">{{ form_widget(form.subtitle, {attr:{class:'form-control'}}) }}</div>
			</div>

			<div class="form-group">
	          <div class="col-lg-2 control-label">{{ form_label(form.actType, '类型') }}</div>
	          <div class="col-lg-8 controls">{{ form_widget(form.actType, {attr:{class:'form-control  width-input width-input-large'}}) }}</div>
	        </div>

			

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.tags, '标签') }}</div>
			  <div class="col-lg-8 controls"> {{ form_widget(form.tags, {attr:{class:'width-full'}}) }}</div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.categoryId, '分类') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.categoryId, {attr:{class:'form-control width-input width-input-large'}}) }}
			  </div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.city, '举办城市') }}</div>
			  <div class="col-lg-8 controls">{{ form_widget(form.city, {attr:{class:'form-control width-input width-input-large'}}) }}
			  </div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.address, '线下地址') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.address, {attr:{class:'form-control width-input width-input-large width-full'}}) }}
			  </div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.onlineAddress, '直播地址') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.onlineAddress, {attr:{class:'form-control width-input width-input-large width-full'}}) }}
			  </div>
			</div>


			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.form, '活动形式') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.form, {attr:{class:'form-control width-input width-input-large width-full'}}) }}
			  </div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.duration, '时长') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.duration, {attr:{class:'form-control width-input width-input-large width-full'}}) }}
			  </div>
			</div>

			
			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.strstartTime, '开始时间') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.strstartTime, {attr:{class:'form-control width-input width-input-large',value:activity.strstartTime}}) }}
			  </div>
			</div>

			<div class="form-group">
			  <div class="col-lg-2 control-label">{{ form_label(form.strendTime, '结束时间') }}</div>
			  <div class="col-lg-8 controls">
			    {{ form_widget(form.strendTime, {attr:{class:'form-control width-input width-input-large',value:activity.strendTime}}) }}
			  </div>
			</div>

		  <div class="form-group">
		    <div class="col-lg-offset-2 col-lg-8 controls">
		    	{{ form_rest(form) }}
		    	<button class="btn btn-fat btn-primary" id="course-create-btn" type="submit">保存</button>
		    </div>
		  </div>
		   <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
		</form>
	</div>
</div>

{% endblock %}



