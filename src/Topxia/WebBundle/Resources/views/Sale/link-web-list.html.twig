{% extends 'TopxiaWebBundle:Sale:layout.html.twig' %}

{% block title %}网站链接推广 - {{ parent() }}{% endblock %}
{% set side_nav = 'link-web-list' %}



{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">
     网站链接推广管理（ <a class="text-color-red" href="/page/linksalecourse" target="_blank">网站链接推广须知</a>）
  </div>
  <div class="panel-body">




<form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>


  <div class="form-group">
    <input class="form-control" type="text" placeholder="推广链接" name="tUrl" value="{{ app.request.get('tUrl') }}"></div>
  <div class="form-group">
    <input class="form-control" type="text" placeholder="链接描述" name="linkName" value="{{ app.request.get('linkName') }}"></div>


  <button class="btn btn-primary">搜索</button>
</form>

<div id="linksale-table-container">
  <table class="table table-striped table-hover" id="linksale-table">
    <thead>
      <tr >
        
       
        <th width="30%">推广链接</th>
       
        <th width="13%">佣金比例</th>

         <th width="15%">链接有效期</th>
      
        <th width="20%">链接描述</th>

        <th  width="15%">操作</th>
      </tr>
    </thead>
    <tbody>
      {% for linksale in linksales %}
        {% set orders = orderss[linksale.mTookeen]|default(null) %}
        {% set partner = partners[linksale.partnerId]|default(null) %}

        {% include 'TopxiaWebBundle:Sale:link-web-list-tr.html.twig' %}
       
      {% else %}
      <tr>
        <td colspan="10">
          <div class="empty">无记录</div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  
</div>

  </div>
</div>
{{ web_macro.paginator(paginator) }}
{% endblock %}