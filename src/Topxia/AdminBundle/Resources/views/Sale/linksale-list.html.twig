{% extends 'TopxiaAdminBundle:Sale:layout.html.twig' %}

{% block title %}推广链接管理 - {{ parent() }}{% endblock %}

{% set menu = 'admin_linksale' %}

{% set script_controller = 'sale/linksale' %}

{% block main %}
<div class="page-header">
 
  <h1>推广链接管理</h1>
</div>

<form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>


  <div class="form-group">
   
    <select class="form-control" name="saleType">
        {{ select_options(dict('linksaleType'), app.request.query.get('saleType'), '链接类型') }}
    </select>
  </div>


  <div class="form-group">
    <input class="form-control" type="text" placeholder="推广链接" name="tUrl" value="{{ app.request.get('tUrl') }}"></div>
  <div class="form-group">
    <input class="form-control" type="text" placeholder="适用商品" name="prodName" value="{{ app.request.get('prodName') }}"></div>

  <div class="form-group">
    <input class="form-control" type="text" placeholder="渠道" name="nickName" value="{{ app.request.get('nickName') }}"></div>

  <button class="btn btn-primary">搜索</button>
</form>

<div id="linksale-table-container">
  <table class="table table-striped table-hover" id="linksale-table">
    <thead>
      <tr >
        <th width="2%">
          <input type="checkbox" data-role="batch-select"></th>
        <th width="15%">链接类型</th>
        <th width="15%">推广链接</th>
        <th width="8%">所属渠道</th>
        <th width="8%">佣金比例</th>

        <th width="8%">优惠(元)</th>       
        <th width="20%">适用商品</th>
       
        <th width="10%">有效期</th>
       
        <th  width="15%">使用情况</th>
      </tr>
    </thead>
    <tbody>
      {% for linksale in linksales %}
        {% set orders = orderss[linksale.mTookeen]|default(null) %}
        {% set partner = partners[linksale.partnerId]|default(null) %}

        {% include 'TopxiaAdminBundle:Sale:linksale-tr.html.twig' %}
       
      {% else %}
      <tr>
        <td colspan="10">
          <div class="empty">无记录</div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div>
    <label class="checkbox-inline">
      <input type="checkbox" data-role="batch-select">全选</label>
    <button class="btn btn-default btn-sm mlm" data-role="batch-delete"  data-name="推广链接" data-url="{{ path('admin_sale_linksale_delete_batch') }}">删除</button>
  </div>
</div>
{{ web_macro.paginator(paginator) }}
{% endblock %}