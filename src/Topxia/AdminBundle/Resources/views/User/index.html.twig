{% extends 'TopxiaAdminBundle:User:layout.html.twig' %}

{% block title %}用户管理 - {{ parent() }}{% endblock %}

{% set menu = 'user' %}

{% set script_controller = 'user/list' %}

{% block main %}
<div class="page-header">
  <h1>用户管理</h1>
</div>

 <form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
    <div class="form-group">
      {{ form_widget(searchForm.roles, {attr:{class:'form-control'}}) }}
    </div>
    <span class="divider"></span>
    <div class="form-group">
      {{ form_widget(searchForm.keywordType, {attr:{class:'form-control'}}) }}
    </div>
    <div class="form-group">
      {{ form_widget(searchForm.keyword, {attr:{class:'form-control', placeholder:'关键词'}}) }}
    </div>

    <button class="btn btn-primary">搜索</button>
    {{ form_rest(searchForm) }}
  </form>

<table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
  <thead>
    <tr>
      <th>用户名</th>
      <th>用户组</th>
      <th data-field="createdTime" role="order-by">注册时间</th>
      <th data-field="loginedTime" role="order-by">登录时间</th>
      <th>登录IP</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      {% include 'TopxiaAdminBundle:User:user-table-tr.html.twig' with {user:user} %}
    {% endfor %}
  </tbody>
</table>
 {{ web_macro.paginator(paginator) }} 
{% endblock %}