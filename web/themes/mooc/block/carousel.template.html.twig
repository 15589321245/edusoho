<div class="swiper-wrapper nivoSlider" id="slider">
    {% for poster in posters %}
      {% if poster.status == 1 %}
        {% if poster.mode == "img" %}
        <div class="swiper-slide swiper-hidden" style="background: {{poster.background}};">
          <div{% if poster.layout == 'limitWide' %} class="container"{% endif %}>
            <div class="Wleft">
              <a href="{{ poster.href|default('') }}" target="_blank" ><img class="img-responsive" src="{{ poster.src|default('') }}" data-transition="slideInLeft">
              </a>
            </div>
          </div>
        </div>
        {% elseif poster.mode == "html"%}
          {{ poster.html|raw }}
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
  <div class="swiper-pager hidden-xs"></div>
