<div class="panel panel-default other-courses">
    <div class="panel-heading">
        <h3 class="panel-title">其他计划</h3>
        <a class="more link-gray" href="{{ path('course_show',{id: course.id})}}">
            <i class="es-icon es-icon-morehoriz"></i>
        </a>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            {% for course in otherCourses %}
                <li class="pvs text-overflow">
                    <a class="link-gray" href="{{ path('course_show', {id: course.id}) }}">
                       {% if course.status  != 'published'%}(未发布){% endif %} {{ course.title }}
                    </a>
                    {% if course.id in purchasedCourseIds %}
                        <span class="lable label-primary color-white text-sm">已加入</span>
                    {% else %}
                        <span class="lable lable-gray color-white text-sm">未加入</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>