{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_user_learn_statistics' %}

{% set script_controller = '' %}

{% block main %}
    <form id="user-search" class="form-inline well well-sm" action="" method="get" novalidate="">
      <div class="form-group ">
        <input class="form-control" type="text" id="startDate" name="startDate" value="" placeholder="起始时间">
        -
        <input class="form-control" type="text" id="endDate" name="endDate" value="" placeholder="结束时间">
      </div>
      <button class="btn btn-primary">搜索</button>
    </form>
    <table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
      <thead>
        <tr>
          <th>用户名</th>
          <th>加入班级数</th>
          <th>退出班级数</th>
          {# <th>加入课程数</th>
          <th>退出课程数</th> #}
          <th>加入计划数</th>
          <th>退出计划数</th>
          <th>学完任务数</th>
          <th>学习时长(分)</th>
          <th>消费总额(元)</th>
        </tr>
      </thead>
      <tbody>
        {% for statistic in statistics %}
          {% set user = users[statistic.userId] %}
           <tr>
            <td>{{ user.nickname }}</td>
            <td>{{ statistic.joinedClassroomNum }}</td>
            <td>{{ statistic.exitClassroomNum }}</td>
            {# <td>{{ statistic.joinedCourseSetNum }}</td>
            <td>{{ statistic.exitCourseSetNum }}</td> #}
            <td>{{ statistic.joinedCourseNum }}</td>
            <td>{{ statistic.exitCourseNum }}</td>
            <td>{{ statistic.finishedTaskNum }}</td>
            <td>{{ statistic.finishedTaskNum }}</td>
            <td>{{ statistic.actualAmount }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {{ admin_macro.paginator(paginator) }}
{% endblock %}