

{% if log.data.id is defined %}

  {% set classroom = data('Classroom', {classroomId: log.data.id}) %}

  {% set url = path('classroom_show', { id: log.data.id}) %}

  {{ 'log.action.template.classroom.update'|trans({'%url%': url, '%title%': classroom.title })|raw }}

  <a href="#modal" data-toggle="modal" class="btn btn-default"
     data-url="{{path('admin_logs_field_change',{log: log} )}}">
    {{ 'log.field.detail'|trans }}
  </a>

{% else %}

  {{ log_trans(log.message, log.data) }}

{% endif %}
