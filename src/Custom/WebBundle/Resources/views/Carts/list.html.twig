{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}我的购物车 - {{ parent() }}{% endblock %}

{% set script_controller = 'customwebbundle/controller/carts/list' %}

{% set pageNav = pageNav|default('hotSale') %}

{% block content %}

<div id="carts-module">
  <div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-shopping-cart"></span>我的购物车</div>

  {% if groupCarts|default(null) %}
    <table class="table table-hover" id="carts-table">
      <thead>
          <td><input type="checkbox" data-role="batch-select"></td>
          <th class="text-muted" width="60%">商品信息</th>
          <th class="text-center text-muted" width="10%">单价（元）</th>
          <th class="text-center text-muted" width="10%">数量</th>
          <th class="text-center text-muted" width="10%">金额（元）</th>
          <th class="text-center text-muted" width="10%">操作</th>
      </thead>
      <tbody>
      {% for type,carts in groupCarts|default(null) %}
        {% include 'CustomWebBundle:Carts:' ~ type ~ '-type.html.twig' %}
      {% endfor %}
    {% else %}
      <div> <p class="text-center" style="margin-top:30px">您的购物车还是空的，赶紧行动吧！</p></div>
  {% endif %}
      <div class="hide carts-text-help"> <p class="text-center" style="margin-top:30px">您的购物车还是空的，赶紧行动吧！</p></div>
      </tbody>
    </table>
    <br>
  <div class="well well-sm clearfix">
    <div>
      <label class="checkbox-inline"><input type="checkbox" data-role="batch-select"> 全选</label>
      <button type="button" class="btn btn-default btn-sm mlm" data-role="batch-delete-btn" data-url="{{ path('carts_delete')}}" >删除</button>

      <button type="button" class="btn btn-default btn-sm mlm" data-role="batch-favourite-btn" data-url="{{ path('carts_course_favorite') }}" >加入收藏</button>

      <a  type="button" class="btn btn-danger btn-sm mlm disabled pull-right" data-role="batch-account-btn"  href="{{ path('order_verify')}}" style="margin-right:100px">结算</a>
      <sapn class="pull-right" style="margin-right:30px;margin-top:5px" >已选 <strong><span data-role="total-num" class="text-danger">0</span></strong> 门课程：<strong><span class="text-danger">  ¥ </span><span data-role="total-price" class="text-danger">0.00</span></strong></p>
    </div>
  </div>

  </div>
</div>


<div class="es-row-wrap container-gap userpage-body">
  <ul class="nav nav-pills userpage-nav clearfix">
    <li id="hot-sale-btn" class="active"><a href="javascript:;">热卖课程</a></li>
    <li id="favorited-btn" ><a href="javascript:;">收藏的课程</a></li>
  </ul>

  {% block main %}
    {{ render(controller('CustomWebBundle:Carts:CartCourses')) }}
  {% endblock %}

</div>

{% endblock %}