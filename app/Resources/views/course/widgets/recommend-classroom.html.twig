{% set items = data('RecommendClassrooms',{'count': 1}) %}
{% if items|default(null) %}
{% set classroom = items[0] %}
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">推荐班级</h3>
  </div>
  <div class="panel-body recommend-class-list">
    <div class="class-item">
      <div class="class-img-wrap">
        <a class="class-img" href="{{ path('classroom_show', {id:classroom.id}) }}">
          <img src="{{ filepath(classroom.largePicture, 'classroom.png') }}" alt="{{ classroom.title }}" class="img-responsive">
        </a>
        <div class="mask">
          <a href="{{ path('classroom_show', {id:classroom.id}) }}" class="btn btn-warning">查看班级</a>
        </div>
      </div>
      <h3>
        <a class="link-dark" href="{{ path('classroom_show', {id:classroom.id}) }}">{{classroom.title}}</a>
      </h3>
      <div class="metas">共有{{classroom.courseNum}}门课程</div>
    </div>
    <a class="more" href="{{ path('classroom_explore') }}">更多&gt;</a>
  </div>
</div>
{% endif %}