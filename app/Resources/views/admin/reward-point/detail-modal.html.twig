{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}
{% block title %}{{ user.nickname }}{{ '的积分明细'|trans }}{% endblock %}

{% block body %}
  {% if accountFlows %}
    <table class="table table-striped table-hover" id="keyword-table" data-search-form="#keyword-search-form">
      <thead>
      <tr>
        <th width="50%">{{ '行为记录'|trans }}</th>
        <th width="25%">{{ '积分记录'|trans }}</th>
        <th width="25%">{{ '时间'|trans }}</th>
      </tr>
      </thead>
      <tbody>
      {% for accountFlow in accountFlows %}
        <tr>
          <td>{{ accountFlow.name }}<br>备注：{{ accountFlow.note|default('无') }}</td>
          <td>{% if accountFlow.type == 'inflow' %}+{% else %}-{% endif %} {{ accountFlow.amount }}</td>
          <td>{{ accountFlow.createdTime |date_format }}</td>
        </tr>
      {% endfor %}
      </tbody>

    </table>
  {% else %}
    <div class="empty">{{ '暂无积分明细!'|trans }}</div>
  {% endif %}
  {{ web_macro.paginator(paginator) }}

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{ '关闭'|trans }}</button>
{% endblock %}