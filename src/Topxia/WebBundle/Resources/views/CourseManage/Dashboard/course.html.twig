{% extends 'TopxiaWebBundle:CourseManage/Dashboard:layout.html.twig' %}

{% set submenu = 'course_dashboard' %}
{% do load_script('course-manage/dashboard/course') %}

{% block dashboard %}
  <ul class="course-dashboard-header course-dashboard-ul">
    <li>
      <div class="title">{{ '课程学员数'|trans }}</div>
      <span class="number">{{ summary.studentNum }}</span>
    </li>
    <li>
      <div class="title">{{ '完成人数'|trans }}</div>
      <span class="number">{{ summary.finishedNum }}</span>
    </li>
    <li>
      <div class="title">{{ '完课率'|trans }}</div>
      <span class="number">{{ summary.finishedRate }}%</span>
    </li>
  </ul>

  <div id="course-dashboard-container" style="height:400px;" data-days="{{ days|json_encode }}" data-student-num="{{ studentNum|json_encode }}" data-finished-num="{{ finishedNum|json_encode }}" data-finished-rate="{{ finishedRate|json_encode }}"></div>

  <ul class="course-dashboard-footer course-dashboard-ul">
    <li>
      <div class="title">{{ '课程笔记数'|trans }}</div>
      <span class="number">{{ summary.noteNum }}</span>
    </li>
    <li>
      <div class="title">{{ '课程提问数'|trans }}</div>
      <span class="number">{{ summary.askNum }}</span>
    </li>
    <li>
      <div class="title">{{ '课程话题数'|trans }}</div>
      <span class="number">{{ summary.discussionNum }}</span>
    </li>
  </ul>
{% endblock %}