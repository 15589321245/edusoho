{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}
添加关键字
{% endblock %}
{% block body %}
  <form class="form-horizontal" id="keyword-form" action="{{ path('admin_keyword_create') }}" method="post">
    <div class="form-group">
      <label class="col-md-3 control-label" for="keyword-name-field">关键字</label>
      <div class="col-md-6 controls">
        <textarea style="resize:vertical" class="form-control" id="keyword-name-field"  name="name"></textarea>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  <div class="col-md-7 controls radios tac tar">
    <div id="state">
      <input type="radio" id="replaced" name="state" value="replaced" checked="checked" >
      <label for="replaced">替换</label>
      <input type="radio" id="banned" name="state" value="banned" checked="checked" >
      <label for="banned">禁止</label>
    </div>
  </div>
  </form>
   <script type="text/javascript">app.load('customadminbundle/controller/keyword/keyword-modal')</script>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
  <button id="keyword-add-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#keyword-form">保存</button>
{% endblock %}
