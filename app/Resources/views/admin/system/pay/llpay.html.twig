<fieldset>
  <legend>{{ 'admin.payment_setting.llpay'|trans }}</legend>
  <div class="form-group">
    <div class="col-md-3 control-label">
      <label>{{ 'admin.payment_setting.api_status'|trans }}</label>
    </div>
    <div class="controls col-md-3 radios">
      {{ radios('llpay_enabled', {1:'form.radio_btn.open'|trans, 0:'form.radio_btn.close'|trans}, payment.llpay_enabled) }}
    </div>
     <div class="controls col-md-4 radios">
        <a href="http://www.edusoho.com/files/lianlianpay.zip">{{ 'admin.payment_setting.llpay_api_application_word'|trans }}</a>
      </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 control-label">
      <label for="llpay_key">{{ 'admin.payment_setting.llpay_key'|trans }}</label>
    </div>
    <div class="controls col-md-8">
      <input type="text" id="llpay_key" name="llpay_key" class="form-control" value="{{payment.llpay_key}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3 control-label">
      <label for="llpay_accessKey">{{ 'accessKey'|trans }}</label>
    </div>
    <div class="controls col-md-8">
      <textarea name="llpay_accessKey" id="llpay_accessKey" rows="5" cols="80">{{payment.llpay_accessKey}}</textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3 control-label">
      <label for="llpay_secretKey">{{ 'secretKey'|trans }}</label>
    </div>
    <div class="controls col-md-8">
      <textarea name="llpay_secretKey" id="llpay_secretKey" rows="5" cols="80">{{payment.llpay_secretKey}}</textarea>
    </div>
  </div>
</fieldset>