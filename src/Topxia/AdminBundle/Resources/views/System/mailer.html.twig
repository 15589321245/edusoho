{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% set menu = 'mailer' %}

{% block main %}

<div class="page-header"><h1>站点设置</h1></div>


{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" novalidate>
  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.enabled, '邮件发送') }}</div>
    <div class="controls col-lg-8 radios">{{ form_widget(form.enabled) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.host, 'SMTP服务器地址') }}</div>
    <div class="controls col-lg-8">{{ form_widget(form.host) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.port, 'SMTP端口号') }}</div>
    <div class="controls col-lg-8">
      {{ form_widget(form.port) }}
      <p class="help-block">通常端口号为25</p>
    </div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.username, 'SMTP用户名') }}</div>
    <div class="controls col-lg-8">{{ form_widget(form.username) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.password, 'SMTP密码') }}</div>
    <div class="controls col-lg-8">{{ form_widget(form.password) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.from, '发信人地址') }}</div>
    <div class="controls col-lg-8">{{ form_widget(form.from) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.name, '发信人名称') }}</div>
    <div class="controls col-lg-8">{{ form_widget(form.name) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label"></div>
    <div class="controls col-lg-8">
      {{ form_rest(form) }}
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>

{% endblock %}