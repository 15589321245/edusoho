{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% set script_controller = 'customwebbundle/controller/homework/review' %}

{% block content %}
  <div class="question-set homework-set" id="homework-set">

  {% include 'CustomWebBundle:Homework:homework-heading.html.twig' %}

    <div class="row question-set-body">
      {% include 'CustomWebBundle:HomeworkReview:question-set.html.twig' %}

      <div class="col-md-3 question-set-side">
          <div class="panel panel-default question-set-card" data-spy="affix" data-offset-top="300" data-offset-bottom="200">
              <div class="panel-heading">
                <span>您已点评了 <strong class="question-text-danger">{{pairReviewCount}}</strong> 位同学</span><button class="btn btn-default btn-sm pull-right" id="randomize-next-pair-review-btn" data-url="{{path('homework_pair_review_randomize',{homeworkId: homeworkId})}}">下一位</button>
              </div>

              <div class="panel-body">
                {%- for questionId in itemSet.questionIds -%}
                  <a href="javascript:;" class="question-index for-question-{{ questionId }} " data-anchor="{{questionId}}">{{ loop.index }}</a>
                {%- endfor -%}
              </div>

              <div class="panel-footer">
                  <button class="btn btn-success btn-block" data-url="{{ path('homework_pair_review_create',{ homeworkResultId: homeworkResult.id}) }}" id="submit-pair-review-btn" data-goto="{{ path('homework_pair_review_randomize',{homeworkId: homeworkId}) }}">提交互评</button>
              </div>

          </div>
      </div>
    </div>
  </div>
{% endblock %}