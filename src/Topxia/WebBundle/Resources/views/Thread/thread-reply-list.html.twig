{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}
  <div class="reply-post-list-{{postMain.id}}">
    <ul class="media-list">
      {% for post in postReply %}
        <li class="media li-reply-{{postMain.id}}">
          {{ web_macro.user_avatar(postReplyMembers[post.userId], 'pull-left media-object') }} 
          <div class="media-body">
            <div class="metas">
              <strong>{{ web_macro.user_link(postReplyMembers[post.userId]) }}</strong>
              <span class="mhm">{{post.createdTime|smart_time}}</span>
            </div>
            <div class="content">{{post.content|raw}}</div>
            <div class="text-muted text-normal pull-right">
              
<!--               {% if member.role == 'teacher' or app.user.id == thread.userId %}
                 <a href="javascript:" data-action="post-delete"  class="mhm post-delete-btn" data-url="{{ path('thread_post_delete', {targetType:targetType,targetId:targetId,threadId:thread.id, id:post.id}) }}" data-for="#post-{{ post.id }}"> 删除</a>
              {% endif %}  -->


              <a href="javascript:" class="li-reply" parentId="{{postMain.id}}" postName="{{postReplyMembers[post.userId].nickname}}"> 回复</a>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>

    <div class="actions">
      <a class="replyToo btn btn-default btn-xs pull-right" data-status="hidden" parentId="{{postMain.id}}" href="javascript:;">我也要说</a>
    </div>
    <div class="clearfix">
    {% if postReplyPaginator.lastPage > 1 %}
      <ul  class="paginator-{{postMain.id}} pagination pagination-sm pull-left ">
        {% if postReplyPaginator.currentPage == postReplyPaginator.firstPage %}
          <li class="disabled "><span>上一页</span></li>
        {% else %}
          <li class="postReply-page"  parentId="{{postMain.id}}"  data-url="{{path('thread_post_reply',{targetType:targetType,parentId:postMain.id,page:postReplyPaginator.previousPage})}}"><a  style="cursor:pointer;">上一页</a></li>
        {% endif %}
        {% for page in postReplyPaginator.pages %}
          <li {% if page == postReplyPaginator.currentPage %}class="active"{% endif %} class="postReply-page"  parentId="{{postMain.id}}"  data-url="{{path('thread_post_reply',{targetType:targetType,parentId:postMain.id,page:page})}}"><a   style="cursor:pointer;"s>{{ page }}</a></li>
        {% endfor %}

        {% if postReplyPaginator.currentPage == postReplyPaginator.lastPage %}
          <li class="disabled"><span>下一页</span></li>
        {% else %}
          <li class="postReply-page"  parentId="{{postMain.id}}" data-url="{{path('thread_post_reply',{targetType:targetType,parentId:postMain.id,page:postReplyPaginator.nextPage})}}"><a  style="cursor:pointer;">下一页</a></li>
        {% endif %}
      </ul>
    {% endif %}
    </div>
  </div>

