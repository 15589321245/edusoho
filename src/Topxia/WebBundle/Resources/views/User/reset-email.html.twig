{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% set script_controller = 'user/email-reset' %}

{% block title %}{{ '重置邮箱'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
  <div class="es-section login-section">
    <div class="login-main">
      <form id="reset-email-form" method="post" action="">
        <div class="form-group mbl">
          <label class="control-label required" for="register_email">{{ '原邮箱地址'|trans }}</label>
          <div class="controls">
            <input type="email" id="reset_email" name="email" autocomplete="off" required="required" class="form-control input-lg"
                   data-url="{{ path('register_email_check') }}" placeholder="{{ '请输入原来的邮箱地址'|trans }}">
            <p class="help-block"></p>
          </div>
        </div>

        <div class="form-group mbl">
          <label class="control-label required" for="register_password">{{ '密码'|trans }}</label>
          <div class="controls">
            <input type="password" id="password" name="password" required="required" autocomplete="off"
                   class="form-control input-lg" placeholder="{{ '请输入密码'|trans }}">
            <p class="help-block"></p>
          </div>
        </div>

        <div class="form-group mbl">
          <div class="controls">
            <a href="{{ path('login') }}" class="btn btn-primary btn-lg btn-block">{{ '取消'|trans }}</a>
            <button type="submit" id="next-btn" data-submiting-text="{{ '正在提交'|trans }}"
                    class="btn btn-primary btn-lg btn-block">{{ '下一步'|trans }}</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}