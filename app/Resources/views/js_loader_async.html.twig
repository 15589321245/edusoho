<script id="script-loader-async" type="text/javascript">
  "use strict";
  (function() {
    var paths = [
      {% for path in script() %}
        {% if path starts with 'http' %}
          {% if 'js-sdk/uploader' in path %}
            "{{ path ~ '?' ~ random(date().timestamp / 1000) }}",
          {% else %}
            "{{ path ~ '?' ~ asset_version('')}}",
          {% endif %}
        {% else %}
          "{{ asset('static-dist/' ~ path, 'webpack') }}",
        {% endif %}
      {% endfor %}
    ];

    script(paths, function() {
      var node = document.getElementById('script-loader-async');
      node.parentNode.removeChild(node);
    }, document.getElementById('modal'));
  })();
</script>