{% extends 'TopxiaAdminBundle::layout.html.twig' %}
	 {% set menu = 'admin_edu_cloud_attachment' %} 
	 {% set script_controller = 'educloud/attachment-setting' %} 
	 {% block main %}
         <div class="page-header clearfix">
             <h1 class="pull-left">云附件</h1>
         </div>
         <div class="edu-service">
             <div class="edu-balance">
                 {{ web_macro.flash_messages() }}
                 <form id="cloud-attachment" class="form-horizontal" method="post" data-widget-cid="widget-0">
                     <div class="form-group">
                         <div class="col-md-3 control-label">
                             <label>附件功能</label>
                         </div>
                         <div class="controls col-md-8 radios">
                             <label class="">
                                 <input type="radio" name="attachment_enable" id="attachment_enable"
                                        value="1" {% if attachment.attachment_enable %} checked {% endif %}> 开启
                             </label>
                             <label class="radio-inline">
                                 <input type="radio" name="attachment_enable" id="attachment_disaable"
                                        value="0" {% if not attachment.attachment_enable %} checked {% endif %}> 关闭
                             </label>
                         </div>
                     </div>
                     <div class="form-group attachement_detail {% if not attachment.attachment_enable %} hidden {% endif %}">
                         <div class="col-md-3 control-label">
                             <label>业务设置</label>
                         </div>
                         <div class="controls col-md-8 radios">
                             <label class="">
                                 <input type="checkbox" name="article"
                                        value="1" {% if attachment.article %} checked {% endif %}>
                                 资讯
                             </label>
                             <label class="checkbox-inline">
                                 <input type="checkbox" name="thread"
                                        value="1" {% if attachment.thread %} checked {% endif %}>
                                 讨论区
                             </label>
                             <label class="checkbox-inline">
                                 <input type="checkbox" name="group"
                                        value="1" {% if attachment.group %} checked {% endif %}> 小组
                             </label>
                             <label class="checkbox-inline">
                                 <input type="checkbox" name="question"
                                        value="1" {% if attachment.question %} checked {% endif %}> 试题
                             </label>
                         </div>
                     </div>
                     <div class="form-group">
                         <div class="col-md-3 control-label">
                             <label for="fileSize">附件大小</label>
                         </div>
                         <div class="col-md-8 controls">
                             <input type="text" id="fileSize" name="fileSize" class="form-control"
                                    value="{{ attachment.fileSize }}">MB
                             <p class="help-block">当前服务器文件上线为2GB,"0"表示不限制</p>
                         </div>
                     </div>
                     <div class="row form-group">
                         <div class="controls col-md-offset-2 col-md-8">
                             <button type="submit" class="btn btn-primary">提交</button>
                         </div>
                     </div>
                     <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
                 </form>
             </div>
         </div>
     {% endblock %}
