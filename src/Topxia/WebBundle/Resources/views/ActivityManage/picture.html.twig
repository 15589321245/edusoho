{% extends 'TopxiaWebBundle:ActivityManage:layout.html.twig' %}

{% block title %}活动图片 - {{ parent() }}{% endblock %}

{% set side_nav = 'picture' %}
{% set script_controller = 'activity-manage/picture' %}
{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">
    活动海报
  </div>

  <div class="panel-body">
    <form id="course-picture-form" method="post" action="{{ path('activity_manage_picture', {id:activity.id}) }}" enctype="multipart/form-data">
      {{ web_macro.flash_messages() }}

      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <img src="{{ file_path(activity.largePicture, 'course-default-475x250.png') }}" />
        </div>
      </div>

      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <input type="file" name="picture">
          <p class="help-block">你可以上传jpg, gif, png格式的文件。</p>
        </div>
      </div>

      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <button class="btn btn-fat btn-primary" id="upload-picture-btn" type="submit">上传</button>
        </div>
      </div>
       <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
    </form>

  </div>
</div>

{% endblock %}

