{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}编辑用户信息{% endblock %}
{% block body %}

<form id="user-edit-form" class="form-horizontal" method="post" action="{{ url('admin_user_edit', {id:user.id}) }}">
{{ web_macro.flash_messages() }}

<div class="row control-group">
            <div class="col-lg-2 control-label">{{ form_label(form.truename, '姓名') }}</div>
            <div class="col-lg-7 controls">{{ form_widget(form.truename) }}</div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label">{{ form_label(form.gender, '性别') }}</div>
            <div class="col-lg-7 controls radios">{{ form_widget(form.gender) }}</div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.job, '职业') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.job) }} </div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.title, '头衔') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.title) }} </div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.signature, '个人签名') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.signature) }} </div>
          </div>          

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.about, '自我介绍') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.about) }} </div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.site, '个人主页') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.site) }} </div>
          </div>   

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.weibo, '微博') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.weibo) }} </div>
          </div>

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.weixin, '微信') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.weixin) }} </div>
          </div>         

          <div class="row control-group">
            <div class="col-lg-2 control-label"> {{ form_label(form.qq, 'QQ') }} </div>
            <div class="col-lg-7 controls"> {{ form_widget(form.qq) }} </div>
          </div>                         

          <div class="row">
            <div class="col-lg-7 col-offset-2">
              {{ form_rest(form) }}
            </div>
          </div>

      <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
		  <button type="submit" class="btn btn-primary pull-right">保存</button>
</form>
 
  <script>app.load('user/edit-modal')</script>
{% endblock %}

