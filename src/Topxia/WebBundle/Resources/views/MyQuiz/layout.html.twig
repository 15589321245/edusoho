{% extends 'TopxiaWebBundle:My:layout.html.twig' %}

{% block title %}我的题库 - {{ parent() }}{% endblock %}
{% set side_nav = 'my-quiz' %}

{% block main %}
<div class="panel panel-default panel-col">

	<div class="panel-heading">
		我的题库
	</div>
	<div class="panel-body">
		<ul class="nav nav-tabs">
			<li class="{{ myQuizActive|default('') }}"><a href="{{ path('course_manage_my_quiz') }}">做题历史记录</a></li>
			<li class="{{ myWrongQuestionActive|default('') }}"><a href="{{ path('course_manage_my_wrong_question') }}">答错的题</a></li>
			<li class="{{ favoriteActive|default('') }}"><a href="{{ path('course_manage_show_favorite_question') }}">收藏的题目</a></li>
		</ul>
		<br>
		{% block list %}{% endblock %}
		
	</div>
</div>
{% endblock %}