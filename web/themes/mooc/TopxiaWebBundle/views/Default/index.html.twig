<section class="mooc-navset">
 {{ block_show('mooc:category_nav') }}
</section>

<!-- 课程 -->
{% set recommendCourses = data('RecommendCourses',{ count:10 }) %}
<section class="mooc-course">
  <div class="container">
    <div class="mooc-index-title">
      学校课程
    </div>
    <div class="course-list clearfix">
     {% if recommendCourses %}
          {% include 'TopxiaWebBundle:Default:course-item.html.twig' with {courses:recommendCourses}%}
      {% endif %}    
    </div>
    <div class="text-center mvl">
      <a href="{{ path('course_explore') }}"  class="moocindex-more-btn">
        更多课程
      </a>
    </div>
  </div>
</section>

{% set RecommendClassrooms = data('RecommendClassrooms',{'count':4})%}
<section class="mooc-classroom hidden-xs">
  <div class="container">
    {% if RecommendClassrooms %}
      <div class="mooc-index-title">
      学校{{setting('classroom.name')|default("专业") }}
      </div>
      <div class="class-list row swiper-container">
        <div class="swiper-wrapper">
        {% for classroom in RecommendClassrooms %}
          <div class="class-item col-md-3 swiper-slide clearfix">
            <div class="class-wrapper">
              <div class="class-img">
                <a href="{{ path('classroom_show', {id:classroom.id}) }}">
                  {{ lazy_img(filepath(classroom.middlePicture, 'classroom.png'), 'img-responsive', classroom.title, 'lazyload_class.png') }}
                </a>
              </div>
              <div class="metas pbm clearfix">
                <p class="title text-overflow">
                  <a class="link-dark" href="{{ path('classroom_show', {id:classroom.id}) }}">{{ classroom.title }}</a>
                </p>
                {% if classroom.headTeacherId %}
                  {% set user = data('User', {userId:classroom.headTeacherId}) %}
                    {% if user %}
                    <img src="{{ filepath(user.largeAvatar, 'avatar.png') }}" alt="" class="avatar-ss">
                     <span>{{user.nickname}}</span>
                    {% endif %}
                  {% else %}
                  <span>暂无班主任</span>
                {% endif %}
                <span class="num pull-right"><i class="es-icon es-icon-people mrs"></i>
                {{classroom.studentNum + classroom.auditorNum }}人</span>
              </div>
            </div>  
          </div>
        {% endfor %}
        </div>
        <a class="arrow-left" href="#">
          <i class="iconfont icon-icon30"></i>
        </a>
        <a class="arrow-right" href="#">
          <i class="iconfont icon-icon32"></i>
        </a>  
      </div>
    {% endif %}
    <div class="text-center mvl">
          <a href="{{ path('classroom_explore') }}"  class="moocindex-more-btn">
            更多班级
          </a>
        </div>
  </div>
</section>



