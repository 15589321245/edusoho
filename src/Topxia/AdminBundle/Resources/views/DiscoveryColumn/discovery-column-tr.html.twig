<tbody>
	{% for discoveryColumn in discoveryColumns %}
		<tr>
			<td>
				{{ discoveryColumn.title }}
			</td>
		
			<td>
				{% if discoveryColumn.type == 'classroom' %}班级
				{% elseif discoveryColumn.type == 'course' %}课程
				{% else %}直播
				{% endif %}
			</td>

			<td>
				{% if discoveryColumn.orderType == 'recommend' %}推荐
				{% elseif discoveryColumn.orderType == 'hot' %}最热
				{% else %}最新
				{% endif %}
			</td>

			<td>
				{{ discoveryColumn.showCount }}
			</td>

			<td>
				<a href="javascript:;" class="btn btn-default btn-sm edit-btn" data-url="{{ path('admin_discovery_column_edit', {id:discoveryColumn.id}) }}" data-toggle="modal" data-target="#modal"><i class="glyphicon glyphicon-edit"></i> 编辑</a>
		    <a href="javascript:;" class="btn btn-default btn-sm delete-btn" data-url="{{ path('admin_discovery_column_delete', {id:discoveryColumn.id}) }}" data-toggle="modal" data-target="#modal"><i class="glyphicon glyphicon-plus"></i> 删除</a>
			</td>
		</tr>
	{% else %}
		<tr><td colspan="20"><div class="empty">暂无分类记录</div></td></tr>
	{% endfor %}
</tbody>