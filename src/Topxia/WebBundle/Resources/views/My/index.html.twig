{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}个人中心 - {{ parent() }}{% endblock %}

{% set nav = 'index' %}

{% set bodyClass = 'index' %}

{% block content %}

<div class="row">
    
    {% include 'TopxiaWebBundle:My:my-nav.html.twig' %}

    <div class="col-lg-9">
        
        {% include 'TopxiaWebBundle:MyCourses:my-courses-nav.html.twig' %}

        {% if learningCourses is empty %}
           <h3>你还没有学习任何课程，<a href="{{ path('course_explore') }}">来探索更多课程吧！ </a>
        {% else %}

            {% include 'TopxiaWebBundle:MyCourses:my-courses-list.html.twig' with { users: users, courses: learningCourses } %}

        {% endif %}

        {{ web_macro.paginator(paginator) }} 
    </div>

</div>

{% endblock %}
