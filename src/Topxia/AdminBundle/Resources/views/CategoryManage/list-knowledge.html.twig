{% extends 'TopxiaAdminBundle:CategoryManage:layout.html.twig' %}

{% block title %}知识点管理 - {{ parent() }}{% endblock %}
{% set nav = 'course' %}
{% set side_nav = 'knowledge' %}

{% block main %}
<div class="page-header clearfix">
  <button class="btn btn-sm btn-info pull-right add-category" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_knowledge_create', {categoryId:category.id}) }}">添加知识点</button>
  <h1 class="pull-left">知识点管理</h1>
</div>

<table class="table table-hover" id="category-table">
  <thead>
    <tr>
      <th width="50%">名称</th>
      <th width="30%">描述</th>
      <th width="20%">操作</th>
    </tr>
  </thead>
  {% include 'TopxiaAdminBundle:CategoryManage:knowledge-tbody.html.twig' %}
</table>
{% endblock %}