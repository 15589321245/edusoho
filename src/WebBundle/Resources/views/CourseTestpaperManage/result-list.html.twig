{% extends 'WebBundle:CourseSetManage:layout.html.twig' %}
{% import 'TopxiaWebBundle::macro.html.twig' as macro %}

{% block title %}{{'试卷批阅列表'|trans}} - {{ parent() }}{% endblock %}

{% set side_nav = 'testpaperCheck' %}
{% set parentId = parentId | default(null)%}

{% block main %}

<div class="panel panel-default panel-col">

  <div class="panel-heading">
    {{ testpaper.name }}
  </div>
  <div class="panel-body">

    {% if isTeacher is defined and not isTeacher %}
      <span class="color-danger">{{'当前用户不是本课程教师，没有批改试卷的权限。'|trans}}</span>
    {% endif %}

    {{ render(controller('WebBundle:TestpaperManage:resultList',{request:app.request,testpaperId:testpaper.id,source:'course',targetId:course.id})) }}

  </div>
</div>

{% endblock %}