{% extends 'TopxiaWebBundle:Group:layout.html.twig' %}
{% set script_controller = 'group/group' %}
{% block title %}{{groupinfo.title}}小组 - {{ parent() }}{% endblock %}
{% block content %}
  {{ web_macro.flash_messages() }}
  {% include 'TopxiaWebBundle:Group:groupHeader.html.twig' with {
  'groupinfo':groupinfo,
  'is_groupmember':is_groupmember,}
  %}
  {% block group %}
    <div class="es-row-wrap container-gap userpage-body">
      {% include 'TopxiaWebBundle:Group:group.tab.ul.html.twig' with
      {'tab':'index', }%}
      <div class="row">
          
        <div class="col-md-8">
          
          <div class="row">

            {% if paginator.currentPage == paginator.firstPage %}
              <div class="page" style="background:#effcfc;">
                    <br>
                    {% if groupinfo.about%}

                      {{groupinfo.about|raw}}

                    {% else %}
                      无
                    {% endif %} <br> <br>
                    <div class="pull-right"> 创建时间：{{groupinfo.createdTime|date('Y-m-d')}}
                    </div><br>
              </div>

            {% endif %}

              <div class="col-md-12">
                
                <div class="page clearfix">
                  
                  {% if is_groupmember !=0%}
                      <div class="pull-right"><a href="{{path('group_thread_add',{id:groupinfo.id})}}" class="btn btn-primary btn-sm " role="button">发话题</a>
                      </div>
                  {% endif %}

                  <ul class="nav nav-pills nav-mini  pull-left ">

                        <li{% if condition.type == 'all' %} class="active"{% endif %}><a class="js-nav" data-target="#thread-pane" href="{{path('group_index',{id:id,num:condition.num,sort:condition.sort,isElite:0})}}">全部</a></li>
                        
                        <li{% if condition.type == 'elite' %} class="active"{% endif %}><a class="js-nav" data-target="#thread-pane" href="{{path('group_index',{id:id,type:'elite',num:condition.num,sort:condition.sort})}}">精华</a></li>

                        <li><span class="mhm text-muted">|</span></li>

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                              <span class="text-muted">排序：</span>
                              {% if condition.sort == 'byLastPostTime' %}
                                最后回复
                              {% elseif condition.sort == 'byCreatedTime' %}
                                最新发帖
                              {% elseif condition.sort == 'byPostNum' %}
                                回复数
                              {% endif %}
                              <span class="caret"></span>
                            </a>

                            <ul class="dropdown-menu">
                              <li class="{% if condition.sort == 'byCreatedTime' %}active{% endif %}"><a class="js-nav" href="{{path('group_index',{id:id,isElite:condition.type,num:condition.num,sort:'byCreatedTime'})}}">最新发帖</a></li>
                              <li class="{% if condition.sort == 'byLastPostTime' %}active{% endif %}"><a class="js-nav" href="{{path('group_index',{id:id,isElite:condition.type,num:condition.num,sort:'byLastPostTime'})}}">最后回复</a></li>
                              <li class="{% if condition.sort == 'byPostNum' %}active{% endif %}"><a class="js-nav" href="{{path('group_index',{id:id,isElite:condition.type,num:condition.num,sort:'byPostNum'})}}">回复数</a></li>
                            </ul>

                        </li>

                    </ul>
                  
                  </div>

                {% include 'TopxiaWebBundle:Group:thread.table.html.twig' with {
                'threads':threads,
                'owner':owner,
                'lastPostMembers':lastPostMembers,}
                %}
                {{ web_macro.paginator(paginator) }}
                
              </div>
            </div>  
            <br>
          </div>

          <div class="col-md-4">

              {% if is_groupmember==0%}
                  <div class="page-header">
                    <a  role="button" class="btn btn-info" href="{{path('group_join',{id:groupinfo.id,title:groupinfo.title})}}">加入小组</a>
                  </div> 
              {% endif %}
              
              
              <form action="{{path('group_search',{id:groupinfo.id})}}" method="get">
                <div class="input-group">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
                  <input type="text" class="form-control" placeholder="组内搜索" name="keyWord">
                  <span class="input-group-btn">
                  <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
                </div>
              </form>
                
              <br>

              {% if is_groupmember==1 or is_groupmember==2 or is_groupmember==3%}
                  
                  <div class="panel panel-default">
                    <div class="panel-heading">我在小组</div>
                    <div class="panel-body">
                      <div class="media">
                        {{ web_macro.user_avatar(user, ' pull-left media-object media-object-small') }}

                        <div class="media-body">
                          <p>{{ web_macro.user_link(user , 'link-muted') }}

                            {% if is_groupmember==1%}
                            <span class="label label-success">组员</span>
                            {% endif %} 

                            {% if is_groupmember==2%} 
                            <span class="label label-info">组长</span>  
                            {% endif %}

                            {% if is_groupmember==3%} 
                            <span class="label label-info">副组长</span>  
                            {% endif %}  

                            {% if is_granted('ROLE_ADMIN')%} 
                            <span class="label label-warning">管理员</span>  
                            {% endif %}  

                          </p>

                          <span class="group-header-tip ">我的话题: {{userIsGroupMember.threadNum}}&nbsp;我的回复: {{userIsGroupMember.postNum}}</span>

                        </div>

                      </div>
                    </div>
                  </div>
                {% endif %}
                  
                <div class="panel panel-default">
                    <div class="panel-heading">最近加入</div>
                    <div class="panel-body">
                      {% if recentlyJoinMember %}
                          <ul class="user-grids">
                            {% for member in recentlyJoinMember %}
                              <li style="width:22%;">
                                {{ web_macro.user_avatar(members[member.userId] , 'pull-left media-object media-object-small') }}<p >{{ web_macro.user_link(members[member.userId] , 'link-muted') }}</p>
                              </li>
                            {% endfor %}
                          </ul>
                      {% else %}
                        还没有小组成员！
                      {% endif %}
                      <br>
                    </div><br>
                </div>
                  
                {% if is_groupmember==1 or is_groupmember==3 %}
                  <div class="page-header">
                    <a  id="exit-btn" role="button" href="{{path('group_exit',{id:groupinfo.id,title:groupinfo.title})}}">>>退出小组</a>
                  </div>                 
                {% endif %}
                  
                  
                {% if deserveGroup %}
                  {% include 'TopxiaWebBundle:Group:deserveGroup.list.html.twig' with {deserveGroup:deserveGroup} %}
                {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endblock %}
    {% endblock %}