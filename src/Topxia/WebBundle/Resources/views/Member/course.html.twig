{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}
  {% if not level.id %}全部会员课程{% else %}{{ level.name }} 课程{% endif %} 第{{ app.request.get('page', 1)}}页- {{ parent() }}
{% endblock %}

{% block content %}

<div class="es-row-wrap container-gap">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header"><h1>会员专区</h1></div>
      <ol class="breadcrumb">
        <li><a href="{{ path('member') }}">会员中心</a></li>
        <li class="active">会员课程</li>
      </ol>
    </div>
  </div>

  <div class="row row-3-9">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked">
        <li {% if not level.id %}class="active"{% endif %} ><a href="{{ path('member_course_explore') }}">全部会员课程</a></li>
        {% for lev in levels %}
          <li {% if level.id == lev.id %}class="active"{% endif %}>
            <a href="{{ path('member_course_explore', { levelId:lev.id }) }}">
            {{ lev.name }}课程</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="col-md-9">
      <div class="btn-group btn-group-sm">
        <a href="{{ path('member_course_explore', { levelId:level.id, sort:'latest'} ) }}" 
        class="btn btn-info {% if sort == 'latest' %}active{% endif %}">最新</a>        
        <a href="{{ path('member_course_explore', { levelId:level.id, sort:'popular'} ) }}" 
        class="btn btn-info {% if sort == 'popular' %}active{% endif %}">热门</a> 
      </div>

      <div class="es-box-body">
        {% if courses %}
          {{ render(controller('TopxiaWebBundle:Course:coursesBlock', {courses:courses, view: 'grid'})) }}
          {{ web_macro.paginator(paginator) }} 
        {% else %}
          <div class="empty">还没有发布的课程</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% endblock %}
