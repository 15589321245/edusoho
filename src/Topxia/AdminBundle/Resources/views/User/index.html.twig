{% extends 'TopxiaAdminBundle:User:layout.html.twig' %}

{% block title %}用户管理 - {{ parent() }}{% endblock %}

{% set menu = 'user' %}

{% block main %}

<div class="navbar">
 <form id="user-search-form" class="navbar-form row" action="" method="get" novalidate>
    <div class="col-lg-2">
    {{ form_widget(searchForm.roles) }}
    <span class="divider"></span>
    </div>
    <div class="col-lg-2">
    {{ form_widget(searchForm.keywordType) }}
    </div>
    <div class="col-lg-4">
    {{ form_widget(searchForm.keyword, {attr:{placeholder:'关键词'}}) }}
    </div>
    <div class="col-lg-2">
      {{ form_rest(searchForm) }}
      <button class="btn">搜索</button>
    </div>
  </form>

</div>

<table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
  <thead>
    <tr>
      <th>用户名</th>
      <th>用户组</th>
      <th data-field="createdTime" role="order-by">注册时间</th>
      <th data-field="loginedTime" role="order-by">登录时间</th>
      <th>登录IP</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      {% include 'TopxiaAdminBundle:User:user-table-tr.html.twig' with {user:user} %}
    {% endfor %}
  </tbody>
</table>
 {{ web_macro.paginator(paginator) }} 
{% endblock %}