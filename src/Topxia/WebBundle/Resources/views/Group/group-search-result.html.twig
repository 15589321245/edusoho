{% extends 'TopxiaWebBundle:Group:layout.html.twig' %}
{% set script_controller = 'group/group_member' %}
{% block title %}{{groupinfo.title}}小组 - {{ parent() }}{% endblock %}
{% block content %}
      {{ web_macro.flash_messages() }}
      {% include 'TopxiaWebBundle:Group:group-header.html.twig' with {
      'groupinfo':groupinfo,
      'is_groupmember':is_groupmember,}
      %}

      <div class="es-row-wrap container-gap userpage-body">

        <ul class="nav nav-pills userpage-nav clearfix">
          <li><a href="{{path('group_index',{id:groupinfo.id})}}">小组首页</a></li>
        </ul>

        <div class="row">

          <div class="col-md-8">

            <div class="row row-offcanvas row-offcanvas-right">
                <form action="{{path('group_search',{id:groupinfo.id})}}" method="get">
                  <div class="input-group col-md-8 pull-right">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
                    <input type="text" class="form-control" placeholder="组内搜索" name="keyWord" value="{{app.request.get('keyWord') }}">
                    <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                  </div>
                </form>

                <div class="page-header"><span class="glyphicon glyphicon-eye-open"></span> 搜索结果  
                </div>

                <div class="col-md-12">
                  {% include 'TopxiaWebBundle:Group:thread-table.html.twig' with {
                  'threads':threads,
                  'owner':owner,
                  'lastPostMembers':lastPostMembers,}
                  %}
                  {{ web_macro.paginator(paginator) }}
                </div>
                
            </div> 

          </div> 

          </div> 

      </div>
{% endblock %}