{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modal_class= "modal-lg" %}

{% do script(['libs/jquery-validation.js','libs/bootstrap-datetimepicker.js', 'app/js/course-manage/create/index.js']) %}

{% block title %}
  {% if course|default(false) %}
    {{ '复制' }}{{ '"' ~ course.title ~ '"' }}{{ '为一个新的教学计划'|trans }}
  {% else %}
    {{ '创建一个教学计划'|trans }}
  {% endif %}
{% endblock %}

{% block body %}
  <div class="course-create-editor" id="course-create-editor">
      <form class="form-horizontal" id="course-create-form" action="{{path('course_set_manage_course_create', {courseSetId: courseSet.id})}}" method="post">
        <div class="form-group">
          <div class="col-sm-2 control-label">
            <label for="title">{{'新计划名称'|trans}}</label>
          </div>
          <div class="col-sm-8">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
            <input type="hidden" name="courseSetId" value="{{courseSet.id}}">
            <input type="hidden" name="copyCourseId" value="{{course.id|default(0)}}">
            <input class="form-control" type="text" id="title" name="title" class="form-group col-sm-9" placeholder="">
          </div>
        </div>        
        <div class="form-group">
          <label for="learnMode" class="col-sm-2 control-label">{{'学习模式'|trans}}</label>
          <div class="col-sm-8 radios">
            <label for="learnFreeMode">
              <input type="radio" id="learnFreeMode" name="learnMode" value="freeMode" {% if course.learnMode|default('freeMode') == 'freeMode' %}checked{% endif %} data-role="tab" data-tab-content="#learnFreeModeHelp">{{'自由式学习'|trans}}
            </label>
            <label for="learnLockOrder">
              <input type="radio" id="learnLockOrder" name="learnMode" value="lockMode" {% if course.learnMode|default('freeMode') == 'lockMode' %}checked{% endif %} data-role="tab" data-tab-content="#learnLockOrderHelp">
              解锁式学习
            </label>
            <p class="help-block" id="learnFreeModeHelp" data-role="tab-content">{{'学员自由安排学习过程'|trans}}</p>
            <p class="help-block hidden" id="learnLockOrderHelp" data-role="tab-content" >{{'根据既定顺序逐个解锁学习'|trans}}</p>
            <div class="color-warning">{{'确定创建后“学习模式”将不能修改'|trans}}</div>
          </div>
        </div>
        <div class="form-group">
         <label class="col-sm-2 control-label">{{'学习有效期模式'|trans}}</label>
         <div class="col-sm-8 radios">
            <label for="expiryByDays">
              <input  type="radio" id="expiryByDays" name="expiryMode" value="days" {% if course.expiryMode|default('days') == 'days' %}checked{% endif %} data-role="tab" data-tab-content="#expiryByDaysHelp">
              {{'随到随学'|trans}}
            </label>
            <label for="expiryByDate">
              <input type="radio" id="expiryByDate" name="expiryMode" value="date" {% if course.expiryMode|default('days') == 'date' %}checked{% endif %} data-role="tab" data-tab-content="#expiryByDateHelp">
              {{'指定日期学习'|trans}}
            </label>
            <div class="mbm mtm {% if course.expiryMode|default('days') == 'date' %}hidden{% endif %}" id="expiryByDaysHelp" data-role="tab-content">
            {{'学习有效期'|trans}}
              <input class="form-control inline-block width-150 mhl" type="text" name="expiryDays" value="{{course.expiryDays|default('0')}}" {% if course.status|default('draft') == 'published' %}disabled{% endif %}>
              {{'天'|trans}}
              <span class="color-gray mll">{{'设置为0天则无限制'|trans}}</span>
            </div>
            <div class="mbm mtm {% if course.expiryMode|default('days') == 'days' %}hidden{% endif %}" id="expiryByDateHelp" data-role="tab-content">
             {{'开始日期'|trans}}
              <input class="form-control inline-block width-150 mhl" type="text" id="expiryStartDate" name="expiryStartDate" value="{{course.expiryStartDate|default('now'|date('Y-m-d'))}}" {% if course.status|default('draft') == 'published' %}disabled{% endif %}>
             {{'结束日期'|trans}}
              <input class="form-control inline-block width-150 mhl" type="text" id="expiryEndDate" name="expiryEndDate" value="{{course.expiryEndDate|default('')}}"{% if course.status|default('draft') == 'published' %}disabled{% endif %}>
            </div>
            <div class="help-block">{{'过期后将无法观看内容，系统默认会在到期前10天提醒学员。'|trans}}</div>
            <div class="color-warning">{{'教学计划首次发布后“学习有效期方式”将不能再修改'|trans}}</div>
         </div>
        </div>
      </form>
    </div>
{% endblock %}

{% block footer %}
  <button id="course-submit" type="button" class="btn btn-primary pull-right" data-loading-text="{{ '正在创建...'|trans }}">{{ '确定创建'|trans }}</button>
  <button id="course-cancel" type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ '取消'|trans }}</button>
{% endblock %}
