{% extends 'TopxiaWebBundle:ClassroomManage:layout.html.twig' %}

{% block title %}教师管理 - {{ parent() }}{% endblock %}

{% set side_nav = 'teachers' %}
{% set script_controller = 'classroom/teacher' %}
{% block main %}

<style>

.price{

  color: #e57259;
  font-size: 16px;

}
</style>
       
<div class="panel panel-default panel-col">
  <div class="panel-heading">教师管理</div>
  <div class="panel-body">

        <form id="courses-form" class="form-horizontal" method="post">

              {{ web_macro.flash_messages() }}

              <div class="form-group" id="courses-form-group">
                <div class="col-md-3 control-label"><label>设置班级教师顺序</label></div>
                <div class="col-md-8 controls">
                  <ul class="teacher-list-group sortable-list course-wide-list" id="course-list-group" data-role="list" >

                <li class="list-group-item clearfix" data-role="item">
                    <span class="glyphicon glyphicon-resize-vertical sort-handle"></span>
                    <img src="/files/user/2015/01-30/1031346aac95421572.jpg?4.9.0" class="avatar-small">
                    <span class="nickname">测试管理员</span>
                    <input type="hidden" name="ids[]" value="1">     
                </li>

                <li class="list-group-item clearfix" data-role="item">
                    <span class="glyphicon glyphicon-resize-vertical sort-handle"></span>
                    <img src="/files/user/2015/01-30/1031346aac95421572.jpg?4.9.0" class="avatar-small">
                    <span class="nickname">测试管理员</span>
                    <input type="hidden" name="ids[]" value="1">     
                </li>

                  </ul>
                </div>  
              </div>

              <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
                <div class="col-md-6 col-md-offset-3 control-label">相关页面中的老师列举将会按照这里设定的顺序显示。</div>
        </form>

        

  </div>
</div>

{% endblock %}