<li id="chapter-{{chapter.id}}" class="task-manage-item drag task-manage-{{chapter.type}} clearfix">
  <div class="item-content">
    </i>第<span class="number">{{chapter.number}}</span>{% if chapter.type == 'chapter' %}{{ setting('default.chapter_name')|default('章'|trans) }}{% elseif chapter.type == 'unit' %}{{ setting('default.part_name')|default('节'|trans) }}{% endif %}：{{chapter.title}}
  </div>
  <div class="item-actions">
    <span class="dropdown">
      <a class="dropdown-toggle dropdown-more btn btn-gray" id="dropdown-more" data-toggle="dropdown" href="#"><i class="es-icon es-icon-addcircle mrs"></i>添加
      </a>
      <ul class="dropdown-menu pull-right dropdown-menu-more" role="menu" style="margin-top:12px;min-width:144px" aria-labelledby="dLabel" style="display:none;">
        <li>
          <a>添加节</a>
        </li>
        <li>
          <a>添加任务</a>
        </li>
      </ul>
    </span>
    <a class="btn btn-gray">
      <i class="es-icon es-icon-edit mrs"></i>编辑
