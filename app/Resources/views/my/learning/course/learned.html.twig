{% extends 'my/learning/course/layout.html.twig' %}

{% block title %}{{ 'my.learning.course.learned'|trans }} - {{ parent() }}{% endblock %}

{% set tab_nav = 'learned' %}

{% block main %}
  <div class="cd-main ml0">
    <div class="cd-main__heading">
      <div class="cd-main__title">{{ 'my.learning.course'|trans }}</div>
    </div>
    <div class="cd-main__body">
      {% include 'my/learning/course/nav-pill.html.twig' %}
      {% if courses %}
        {{ render(controller('AppBundle:Course/Course:coursesBlock', {courses:courses, view: 'grid', mode:'learn'})) }}
        {{ web_macro.paginator(paginator) }}
      {% else %}
        <div class="empty">{{ 'my.learning.course.learned_empty'|trans }}</div>
      {% endif %}
    </div>
  </div>
{% endblock %}