<div id="my-teaching-carousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    {% set index = 0 %}
    {% set keys = teachCourses|keys %}
    {% for i in 0..((teachCourses|length)//4) if teachCourses|length > 0%}
      <div class="item row {% if i == 0 %} active {% endif %}">
        {% for j in 1..3 if keys[index] is defined %}
        {% set teachCourse = teachCourses[keys[index]] %}
          <div class="col-md-4" data-id="{{ teachCourse.id }}">
            <div class="thumbnail">
              <img src="{{ file_path(teachCourse.middlePicture, 'course-large.png') }}" alt="...">
              <div class="caption">
                <span class="title" >{{ teachCourse.title }}</span>
                <div class="course-rating">
                  <span class="stars-{{ teachCourse.rating|round }}">
                  </span>
                  <a data-toggle="modal" data-target="#modal" data-url="{{ path('my_teaching_course_review_list', {id:teachCourse.id}) }}">详情</a>
                </div>
              </div>
            </div>
          </div>
          {% set index = index +1 %}
        {% endfor %}
      </div>
    {% else %}
      <div class="item active tac">
        <div class="empty" style="margin-right: auto; margin-left: auto;">您还没有课程!</div>
    </div>
    {% endfor %}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#my-teaching-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#my-teaching-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>