{% extends 'v2/layout.html.twig' %}

{% set side_nav = 'my-orders' %}

{% do script(['libs/jquery-confirm.js', 'app/js/my/order/index.js']) %}

{% set pageTitle = 'user.orders.content_title'|trans %}

{% block main_body %}
  <ul class="tabs">
    <li {% if app.request.query.get('status')=='' %}class="active"{% endif %}>
      <a href="{{path('my_orders',{status:''})}}">{{'user.orders.all_orders'|trans}}</a>
    </li>
    <li {% if app.request.query.get('status')=='created' %}class="active"{% endif %}>
      <a href="{{path('my_orders',{status:'created'})}}">{{'user.orders.created_status'|trans}}
        {% if waitToBePaidCount > 0 %}<span class="number">{{waitToBePaidCount}}</span>{% endif %}
      </a>
    </li>
    <li {% if app.request.query.get('status')=='refunding' %}class="active"{% endif %}>
      <a href="{{path('my_orders',{status:'refunding'})}}">{{'user.orders.refunding_status'|trans}}</a>
    </li>
  </ul>
  <form class="form-inline" action="" method="get">
    <div class="form-group form-group-icon">
      <input name="q" type="text" class="form-control form-control-sm" placeholder="{{ 'user.orders.placeholder_order_name'|trans }}">
      <button type="submit"><i class="es-icon es-icon-search"></i></button>
    </div>
  </form>
  <div class="table-responsive">
    <table class="table table-hover" id="orders-table">
      {% include 'order/order-table-v2.html.twig' with {mode: 'my'} %}
    </table>
    {{ web_macro.paginator(paginator) }}
  </div>
{% endblock %}