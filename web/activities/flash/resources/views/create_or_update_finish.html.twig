{% extends 'activity/activity-form-layout.html.twig' %}
{% do script(['libs/ltc-sdk-client.js','flashactivity/js/finish/index.js']) %}
{% block  activity_step %}
  <div class="tab-pane js-course-tasks-pane active js-step2-view">
    <form class="form-horizontal" id="step3-form" >
      <div class=" form-group">
        <div class="col-sm-2 control-label">
          <label for="condition-select">{{ 'course.plan_task.activity_manage.finished_condition'|trans }}</label>
        </div>
        <div class="col-xs-4 form-control-static">
          {{'course.plan_task.activity_manage.doc.watch_time'|trans}}
          <select class="form-control hidden" id="condition-select" name="finishType">
            <option value="time" selected>{{'course.plan_task.activity_manage.doc.watch_time'|trans}}</option>
          </select>
        </div>
      </div>
      <div class="form-group" id="condition-group">
        <div class="col-sm-2 control-label">
          <label for="condition-detail">{{ 'course.plan_task.activity_manage.doc.watch_time_at_least'|trans }}</label>
        </div>
        <div class="col-xs-4 controls">
          <input id="finishDetail" class="form-control" type="text" name="finishDetail"
                 value="{{ flash.finishDetail|default(1) }}">
        </div>

        <div class="col-xs-4 controls">
          <p class="form-control-static">{{'site.date.minute'|trans}}</p>
        </div>
      </div>
    </form>
  </div>
{% endblock %}