{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %} 支付中心 - {{ parent() }}{% endblock %}


{% block content %}
<div class="container order-pay pay-center">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 ptl">
      <div class="panel panel-default panel-page">
        <div class="panel-heading"><h4>{{order.title}}</h4>
          <hr/>
        </div>
        <div class="panel-body">
          <form method="post" action="{{path('pay_center_pay')}}">
            <input type="hidden" name="orderId" value="{{order.id}}"/>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
            <div class="row">
              <div class="form-group">
                <div class="col-md-7 ">
                  {% if order.coupon %}
                  <div class="check">
                    <span>使用优惠码</span>
                    <span class="icon"></span>
                  </div>
                  {% else %}
                  <div class="uncheck">
                    <span>使用优惠码</span>
                    <span class="icon"></span>
                  </div>
                  {% endif %}
                </div>
              </div>
            	<div class="form-group">
                <div class="col-md-7">
                  <div style="padding-bottom: 10px">支付方式</div>
                  {% for payment, options in payments %}
                  <div class="check">
                    <img src="{{ asset('assets/img/order/alipay.gif') }}" width="138px"/>
                    <span class="icon"></span>
                  </div>
                  {% endfor %}
                </div>
              </div>
            </div>
            <hr/>
            <div class="form-group pay pay-amount">
              <div>实付金额：
                <span>￥{{order.amount}}</span>
              </div>

              <div>
                <button style="float:left;margin-top: 15px;" class="btn btn-fat btn-primary btn-lg" id="course-create-btn" type="submit">去支付</button>

                <div class="help">下单后，请在40小时内完成支付。<br>超出40小时再支付可能导致购买失败，需重新下单购买。</div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}