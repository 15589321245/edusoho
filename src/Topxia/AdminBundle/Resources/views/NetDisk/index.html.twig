{% extends 'TopxiaAdminBundle:Content:layout.html.twig' %}

{% block title %}网盘管理 - {{ parent() }}{% endblock %}

{% set menu = 'admin_net_disk' %}

{% set script_controller = 'net-disk/index' %}

{% block main %}

<div class="page-header clearfix">
  <h1 class="pull-left">网盘管理</h1>
</div>

<table id="user-table" class="table table-striped table-hover" data-search-form="#user-search-form">
  <thead>
    <tr>
      <th>文件名</th>
      <th>文件类型</th>
      <th>大小</th>
      <th>修改日期</th>
      <th>修改人</th>
      <th>创建时间</th>
      <th>创建人</th>
    </tr>
  </thead>
  <tbody>
    {% for course in courses %}
      {% set createUser = users[course.userId] %}
      {% include 'TopxiaAdminBundle:NetDisk:disk-table-tr.html.twig' with {course:course, createUser:createUser} %}
    {% endfor %}
  </tbody>
</table>

{{ web_macro.paginator(paginator) }} 

{% endblock %} 