<style type="text/css">
#sms, #sms ul {
padding: 0;
margin-top: -18px;
list-style: none;
}
.mainitems a{
margin-left: 40px;
}
.mainitems .sms-reason{
margin-left: 160px;
}
.contents{
float: left;
word-break:break-all;
display: none;
position: absolute;
border: 1px solid black;
max-width: 54%;
}
#sms li>ul { 
top: auto;
left: auto;
}
#sms li:hover ul, li.over ul { 
display: block;
margin-top: 0px;
margin-left: 165px;
}
</style>
              <div class="col-md-6">
                <div class="panel panel-default">
                  <div class="panel-body">
                    {% set status = sms.status|default('created') %}
                    
                    <h4 class="eduyun-title">云短信{% if sms %}<a href="http://open.edusoho.com/service/sms/account" target="_blank">查看账单</a>{% endif %}</h4>

                     {% if not sms %}
                            <div class="alert alert-warning alert-sm" role="alert" >
                              <!--未开启-->
                               <i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i>您尚未开通云短信，<a href="{{path('admin_edu_cloud_sms')}}" target="_blank">去开通</a>
                           </div>
                      {% else %}

                        {% if status == 'created' %}
                          <div class="alert alert-warning alert-sm" role="alert" >
                              <i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i>您尚未开启云短信功能，<a href="{{path('admin_edu_cloud_sms')}}" target="_blank">去开启</a>
                          </div>
                              <p class="text-muted">昨日用量：{{sms.yestoday|default(0)}}条</p>
                              <p class="text-muted">上月使用：{{sms.lastMonth|default(0)}}条</p>
                        {% endif %}

                        {% if status == 'used' %}
                            <p class="text-muted">昨日用量：{{sms.yestoday|default(0)}}条</p>
                            <p class="text-muted">上月使用：{{sms.lastMonth|default(0)}}条</p>
                        {% endif %}

                      <!--被停用-->
                        {% if status == 'stoped'%}
                            <div class="alert alert-warning alert-sm" role="alert" >
                                <i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i>
                                您的云短信功能已被暂停

                                <ul id="sms">
                                <li class="mainitems">
                                <div class="sms-reason">[<span style="color:green;">?</span>]</div>
                                <ul class="contents">
                                <li style="color:#555;">{{sms.reason|default("")}}<a href="{{path('admin_edu_cloud_sms')}}" target="_blank">申请重新开启</a></li>
                                <!-- <li></li> -->
                                </ul>
                                </li>
                                </ul>

                            </div>
                            <p class="text-muted">昨日用量：{{sms.yestoday|default(0)}}条</p>
                            <p class="text-muted">上月使用：{{sms.lastMonth|default(0)}}条</p>
                        {% endif %}

                      {% endif %}
                  </div>
                </div>
              </div>
