{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_operation_block' %}

{% block page_buttons %}  {% if setting('developer.debug') %}

    <div class="clearfix ">
      <a data-url="{{ path('admin_block_create') }}" data-toggle="modal" data-target="#modal" class=" btn btn-success btn-sm pull-right mls "> 新增编辑区</a>
    </div>
    
  {% endif %}
{% endblock %}

{% set script_controller = 'block/list' %}
{% block main %}

