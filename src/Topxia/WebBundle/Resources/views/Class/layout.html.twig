{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %} - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" media="screen" href="{{ asset('bundles/topxiaweb/css/class.css') }}" />
{% endblock %}

{% block content %}

{% set classNav = classNav|default('threads') %}

<div class="container-gap course-dashboard-container">

  <div class="row class-header">
    <div class="col-md-12">
      <div class="class-header-inner" style="background-image:url({{ asset('files/bg.jpg') }})">
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object" src="{{ asset('assets/img/default/avatar.png') }}" alt="...">
          </a>
          <div class="media-body">
            <h1 class="media-heading">高一（５）班</h1>
            <div class="media-metas">班主任： 王老师</div>
          </div>
        </div>

        <ul class="nav nav-pills">
          <li {% if classNav == 'threads' %}class="active"{% endif %}><a href="{{ path('class_threads', {classId:class.id}) }}">班级讨论区</a></li>
          <li {% if classNav == 'courses' %}class="active"{% endif %}><a href="#">班级课程</a></li>
          <li {% if classNav == 'notes' %}class="active"{% endif %}><a href="#">同学笔记</a></li>
          <li {% if classNav == 'members' %}class="active"{% endif %}><a href="#">班级成员</a></li>
        </ul>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
          {% block class_main %}{% endblock %}
        </div>
      </div>
    </div>

    <div class="col-md-4">
          {% block class_side %}

      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>班级动态</h4>
        </div>
        <div class="panel-body">
        </div>
      </div>



          {% endblock %}
    </div>
  </div>

</div>

{% endblock %}