{% extends 'admin/layout.html.twig' %}
{% set script_controller = 'topxiaadminbundle/controller/bill/index' %}
{% set menu = 'admin_coin_records' %}

{% block main %}  
    {% include 'admin/bill/form-filter.html.twig' with {'exportName': 'bill-coin-flow'} %}
    <p class="text-muted">
      <span class="mrl">{{'coin.online_school_balance'|trans}}：<strong class="amount-num">{{math_format(account.amount, 0.01)|default(0)}}</strong> {{ setting('coin.coin_name') }}</span>
      <span class="mrl">{{ 'finance.income'|trans }}：<strong class="inflow-num">{{ math_format(inflow, 0.01) |default(0)}}</strong> {{ setting('coin.coin_name') }}</span>
      <span class="mrl">{{ 'finance.expense'|trans }}：<strong class="outflow-num">{{ math_format(outflow, 0.01)|default(0)}}</strong> {{ setting('coin.coin_name') }}</span>
    </p>
    <div class="table-responsive">
      <table class="table table-striped text-sm">
        <tr class="text-sm">
          <th width="150">{{ 'order.sn'|trans }}</th>
          <th>{{ 'name'|trans }}</th>  
          <th>{{ 'user.fields.username_label'|trans }}</th>             
          <th width="115">{{ 'cashflow.created_time'|trans }}</th>
          <th class="text-right prl"><span>{{ 'cashflow.number'|trans }}</th>
          <th>{{ 'cashflow.platform'|trans }}</th>
          <th width="150">{{ 'cashflow.trade_sn'|trans }}</th>
        </tr>
        {% for cash in cashes %}
        {% set user = users[cash['buyer_id']]|default() %}
          <tr>
            <td>{{ cash.sn }}</td>
            <td><span>{{ cash.title }}</span><br>
                {% if cash.order_sn %}
                  <span class="text-muted">{{ 'order.id'|trans }}：{{ cash.order_sn }}</span>
                {% else %}
                    <span class="text-muted">{{ 'order.id'|trans }}：--</span>
                {% endif %}
            </td>
            <td><a target="_blank" href="{{ path('user_show', { id:user.id }) }}">
            {{ user.nickname }}</a></td>
            <td>{{ cash.created_time|date('Y-m-d H:i') }}</td>
            <td class="text-right prl">
            {% if cash.type =="inflow" %}
              <span class="text-success">
                +{{ cash.amount }}
              </span>
            {% else %}
             <span class="warning-state">
                -{{ cash.amount }}
              </span>
            {% endif %}
            </td>
            <td>
              {% if cash.type == "outflow" %}
                {{ dict_text('payment', cash.platform) }}
              {% else %}
                {{ 'order.payment_pattern.balance'|trans }}
              {% endif %}
            </td>
            <td>{{ cash.trade_sn }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
 {{ admin_macro.paginator(paginator) }}

{% endblock %}