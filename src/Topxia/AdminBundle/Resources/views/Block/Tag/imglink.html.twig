<div>
  <div>
     <label>图片</label>
     <input type="text" name="data[{{ code }}][{{ dataId }}][src]" value="{{ data.src|default('') }}">
     <button class="btn btn-default btn-sm img-upload" type="button" data-url="{{ path('admin_block_picture_upload', {blockId:block.id, code:code, dataId:dataId}) }}">上传</button>
   </div>
   <div>
     <label>图片描述</label>
     <input type="text" name="data[{{ code }}][{{ dataId }}][alt]" value="{{ data.alt|default('') }}" >
   </div>
   <div>
     <label>图片链接</label>
     <input type="text" name="data[{{ code }}][{{ dataId }}][href]" value="{{ data.href|default('') }}">
   </div>
   <div>
     <label>是否打开新窗口</label>
     <label><input type="radio" name="data[{{ code }}][{{ dataId }}][target]" value="_blank" {% if data.target|default('_self') == '_blank' %} checked="checked" {% endif %}> 是</label>
     <label><input type="radio" name="data[{{ code }}][{{ dataId }}][target]" value="_self" {% if data.target|default('_self') == '_self' %} checked="checked" {% endif %}> 否</label>
   </div>
</div>