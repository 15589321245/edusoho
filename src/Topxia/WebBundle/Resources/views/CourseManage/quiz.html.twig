{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}
{% import 'TopxiaWebBundle::macro.html.twig' as macro %}

{% block title %}详细信息 - {{ parent() }}{% endblock %}

{% set side_nav = 'base' %}
{% set script_controller = 'course-manage/list' %}

{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">题目管理</div>
  <div class="panel-body " id="quiz-table-container">
    <form id="quiz-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
    <div class="form-group">
      查看
    </div>
    <div class="form-group mlm">
      <select class="form-control" name="categoryId">
        {{ select_options(category_choices('course'), app.request.query.get('categoryId'), '按时间') }}
      </select>
    </div>
    <div class="form-group">
      <select class="form-control" name="status">
        {{ select_options(dict('courseStatus'), app.request.query.get('status'), '按题型') }}
      </select>
    </div>
    <div class="form-group">
      <select class="form-control" name="status">
        {{ select_options(dict('courseStatus'), app.request.query.get('status'), '按课时') }}
      </select>
    </div>
    <a href="{{ path('course_create') }}" class="btn btn-info btn-sm pull-right mls" target="_blank"><span class="glyphicon glyphicon-plus"></span>材料题</a>
    <a href="{{ path('course_create') }}" class="btn btn-info btn-sm pull-right mls" target="_blank"><span class="glyphicon glyphicon-plus"></span>问答题</a>
    <a href="{{ path('course_create') }}" class="btn btn-info btn-sm pull-right mls" target="_blank"><span class="glyphicon glyphicon-plus"></span>判断题</a>
    <a href="{{ path('course_create') }}" class="btn btn-info btn-sm pull-right mls" target="_blank"><span class="glyphicon glyphicon-plus"></span>填空题</a>
    <a href="{{ path('course_create') }}" class="btn btn-info btn-sm pull-right mls" target="_blank"><span class="glyphicon glyphicon-plus"></span>选择题</a>
    
    
   
  </form>

  <table class="table table-striped table-hover" id="quiz-table">
    <thead>
    <tr>
      <th><input type="checkbox"  data-role="batch-select"></th>
      <th width="40%">题干</th>
      <th>类型</th>
      <th>从属</th>
      <th>更新人/时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for question in questions %}
            {% include 'TopxiaWebBundle:CourseManage:quiz-tr.html.twig' with {item:question} %}
      {% else %}
        <tr><td colspan="6"><div class="empty">无课程记录</div></td></tr>
      {% endfor %}
      {#% for course in courses %}
        {% set user = users[course.userId]|default(null) %}
        {% set category = categories[course.categoryId]|default(null) %}
        {% include 'TopxiaAdminBundle:Course:tr.html.twig' %}
      {% else %}
        <tr><td colspan="6"><div class="empty">无课程记录</div></td></tr>
      {% endfor %#}
    </tbody>
  </table>
  <div>
    <label class="checkbox-inline"><input type="checkbox" data-role="batch-select"> 全选</label>
    <button class="btn btn-default btn-sm mlm" data-role="batch-delete"  data-name="题目" data-url="{{ path('admin_message_delete_messages') }}">删除</button>
  </div>

  {{ web_macro.paginator(paginator) }}
  </div>
</div>

{% endblock %}



