{% import "TopxiaAdminBundle::macro.html.twig" as admin_macro %}
  {% if notices %}
  <div class="col-md-12">
    <div class="main-system-alert">
      <h2> 站长公告</h2>
        <ul class="alert-list">
        {% for notice in notices %}
          <li><a href="{{notice.detailUrl}}" target="_blank">{{notice.content}}<span>{{notice.createdTime|date("Y-m-d H:i:s")}}</span></a></li>
        {% endfor %}
        </ul>
    </div>
  </div>
  {% endif %}