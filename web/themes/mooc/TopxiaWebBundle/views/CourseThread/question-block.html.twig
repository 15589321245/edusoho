{% if threads%}
<div class="es-panel comment-column">
  <div class="panel-heading">
    最新问答<span class="comment-icon"></span>
  </div>
  <div class="panel-body">
  	<ul class="text-list">
  		{% for thread in threads %}
  		<li>
        <a href="{{ path('course_thread_show', {courseId:course.id, id:thread.id}) }}">{{ thread.title }}</a>
      </li>
  		{% endfor %}
  	</ul>
  </div>
</div>
{% endif %}