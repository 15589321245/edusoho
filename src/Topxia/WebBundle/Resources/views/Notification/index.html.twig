{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}通知 - {{ parent() }}{% endblock %}
{% set script_controller = 'message/notification-list' %}

{% block content %}
<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="panel panel-default panel-page">
      <div class="panel-heading">
        <h2>通知</h2>
      </div>

      <ul class="media-list notification-list">
        {% for notification in notifications %}
          <li class="media">
            <div class="pull-left">
              <span class="glyphicon glyphicon-volume-down media-object"></span>
            </div>
            <div class="media-body">
              <div class="notification-body">
                {{ notification.content.message|raw }}
              </div>
              <div class="notification-footer">
                {{ notification.createdTime | date('Y-n-d H:i:s') }}
              </div>
            </div>
          </li>
        {% else %}
          <li class="empty">暂无通知</li>
        {% endfor %}
      </ul>

      {{ web_macro.paginator(paginator) }}

    </div><!-- /panel -->
  </div>
</div>

{% endblock %}