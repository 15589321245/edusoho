{% extends 'TopxiaWebBundle:MySale:layout.html.twig' %}

{% block title %}单品课程推广 - {{ parent() }}{% endblock %}
{% set side_nav = 'offsale-course-list' %}

{% block main %}
<div class="panel panel-default panel-col">
  <div class="panel-heading">
     可使用优惠码课程列表
  </div>
  <div class="panel-body">

  <table class="table table-striped table-hover" id="course-table">
    <thead>
    <tr>
      <th width="30%">课程名称</th>
      <th>销量/热度</th>
      <th>价格(元)</th>

      <th>佣金(元)</th>
      <th>有效期</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for course in courses %}
        <tr>
          <td>

          <a class="pull-left" href="{{ path('course_show', {id:course.id}) }}" target="_blank">
            <img class="course-picture mrm" src="{{ file_path(course.middlePicture, 'course-large.png') }}" alt="{{ course.title }}" width="70">
          </a>

          <a href="{{ path('course_show', {id:course.id}) }}"  target="_blank">{{ course.title }}</a>

          </td>
          <td>{{ course.studentNum }}/{{ course.hitNum }}</td>
          <td>{{ course.price }}</td>
          
          <td>
            {% if(course.adCommissionType=='quota') %}
                {{course.adCommission}}
            {% elseif (course.adCommissionType=="ratio") %}
                {{ course.adCommission }}%
            {% else %}
               30%
            {% endif %}
          </td>

          <td>{{course.saleValidTime|date('Y-n-d H:i') }}</td>
          <td>
                    
          <a  class="btn btn-default btn-sm"  href="#modal" data-toggle="modal"  data-url="{{ path('mysale_link_course_link', {id:course.id}) }}"> 优惠码管理 </a>


          </td>
        </tr>
      {% else %}
        <tr><td colspan="20">暂无可推广的课程</td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }} 

  </div>
</div>

{% endblock %}