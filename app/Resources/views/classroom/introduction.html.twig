{% extends 'classroom/content-layout.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% set nav = 'introduction' %}
{% block description %}{{ classroomDescription|default('')|plain_text(100) }}{% endblock %}
{% block keywords %}{{ parent() }}{% endblock %}


{% block main %}
  <div class="class-about">
    {% set eventReportOptions = {'user-id': app.user.id} %}
    {{ event_report_twig('classroom.view', 'classroom', classroom.id, eventReportOptions) }}
        {% if introduction is empty %}
            <p class="mvl tac color-gray">{{'暂无介绍'|trans}}</p>
        {% else %}
              {{ introduction|raw }}
        {% endif %}
  </div>

{% endblock %}
