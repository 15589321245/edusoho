<fieldset>
  <legend>连连－快捷支付</legend>
  <div class="form-group">
    <div class="col-md-3 control-label">
      <label>接口状态</label>
    </div>
    <div class="controls col-md-3 radios">
      {{ radios('llquickpay_enabled', {1:'开启', 0:'关闭'}, payment.llquickpay_enabled) }}
    </div>
     <div class="controls col-md-4 radios">
        <a href="http://www.edusoho.com/files/ll.zip">下载接口申请说明文档</a>
      </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 control-label">
      <label for="llquickpay_key">商户账号</label>
    </div>
    <div class="controls col-md-8">
      <input type="text" id="llquickpay_key" name="llquickpay_key" class="form-control" value="{{payment.llquickpay_key}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3 control-label">
      <label for="llquickpay_secret">商户平台Key</label>
    </div>
    <div class="controls col-md-8">
      <input type="text" id="llquickpay_secret" name="llquickpay_secret" class="form-control" value="{{payment.llquickpay_secret}}">
    </div>
  </div>
</fieldset>