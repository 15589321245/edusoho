{% extends 'TopxiaAdminBundle:Sale:layout.html.twig' %}

{% block title %}页面广告管理 - {{ parent() }}{% endblock %}

{% set menu = 'admin_ad_setting' %}

{% set script_controller = 'sale/ad' %}

{% block main %}
<div class="page-header">
  <button class="btn btn-info btn-sm pull-right" id="add-offsale-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_ad_setting_create')}}">新增广告设置</button>
  <h1>广告设置管理</h1>
</div>

<form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

  <div class="form-group">
   
    <select class="form-control" name="showMode">
        {{ select_options(dict('adShowModeType'), app.request.query.get('showMode'), '广告形式') }}
      </select>
  </div>
  
  <div class="form-group">
    <input class="form-control" type="text" placeholder="要设置广告的目标页URL" name="targetUrl" value="{{ app.request.get('targetUrl') }}"></div>
  
  <div class="form-group">
    <input class="form-control" type="text" placeholder="广告页URL" name="showUrl" value="{{ app.request.get('showUrl') }}"></div>

   <button class="btn btn-primary">搜索</button>
</form>

<div id="offsale-table-container">
  <table class="table table-striped table-hover" id="offsale-table">
    <thead>
      <tr >
        <th width="2%">
          <input type="checkbox" data-role="batch-select"></th>
        <th width="30%">网站页URL</th>
        <th width="30%">广告页URL</th>
        <th width="10%">广告显示形式</th>
        <th width="8%">显示时间</th>
         
      </tr>
    </thead>
    <tbody>
      {% for setting in settings %}      

        {% include 'TopxiaAdminBundle:Sale:ad-setting-tr.html.twig' %}
       
      {% else %}
      <tr>
        <td colspan="10">
          <div class="empty">无记录</div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div>
    <label class="checkbox-inline">
      <input type="checkbox" data-role="batch-select">全选</label>
    <button class="btn btn-default btn-sm mlm" data-role="batch-delete"  data-name="优惠码" data-url="{{ path('admin_sale_offsale_delete_batch') }}">删除</button>
  </div>
</div>
{{ web_macro.paginator(paginator) }}
{% endblock %}