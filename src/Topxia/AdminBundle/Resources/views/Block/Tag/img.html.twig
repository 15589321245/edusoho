<div class="form-group">
    <label class="control-label col-md-3" for="data[{{ code }}][{{ dataId }}][src]">图片</label>
    <div class="col-md-7">
      <input class="form-control" type="text" name="data[{{ code }}][{{ dataId }}][src]" id="data[{{ code }}][{{ dataId }}][src]" value="{{ data.src|default('') }}">
    </div>
    <div class="col-md-2">
      <button class="btn btn-default btn-sm img-upload" id="data[{{ code }}][{{ dataId }}][uploadId]" type="button" data-url="{{ path('admin_block_picture_upload', {blockId:block.id, code:code}) }}">上传</button>
    </div>
 </div>

 <div class="form-group">
    <label class="control-label col-md-3" for="data[{{ code }}][{{ dataId }}][alt]">图片描述</label>
    <div class="col-md-8">
      <input class="form-control" type="text" name="data[{{ code }}][{{ dataId }}][alt]" id="data[{{ code }}][{{ dataId }}][alt]" value="{{ data.alt|default('') }}" >
    </div>
    
 </div>

