{% extends 'TopxiaAdminBundle:User:layout.html.twig' %}

{% block title %}会员等级管理 - {{ parent() }}{% endblock %}

{% set menu = 'memberlevel' %}
{% set script_controller = 'memberlevel/list' %}

{% set submenu = 'memberlevel' %}

{% block main %}

{% include 'TopxiaAdminBundle:Memberlevel:level-header.html.twig' %}
  <table id="memberlevel-table" class="table table-striped table-hover" data-search-form="#user-search-form">
    <thead>
      <tr>
        <th></th>
        <th>会员类型名称</th>
        <th>月费价格</th>
        <th>年费价格</th>
        <th>会员数量</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody id="memberlevel-list" data-sort-url="{{path('admin_user_level_sort')}}" class="sortable-list">
      {% for memberlevel in memberlevels %}
        {% include 'TopxiaAdminBundle:Memberlevel:tr.html.twig' with {memberlevel:memberlevel} %}
      {% else %}
        <tr><td colspan="20"><div class="empty">无会员类型记录</div></td></tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="alert alert-info">
    注：会员可购买升级，升级的顺序是就上面列表中由下往上的顺序，请注意价格设置
  </div>
  <div>
      {{ web_macro.paginator(paginator) }}
  </div>
{% endblock %}