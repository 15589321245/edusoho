{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}教学内容分类添加{% endblock %}

{% block body %}
<div id="category-creater-widget" data-upload-url="#">

	<form id="category-form" class="form-horizontal" action="#" method="post">
		<div class="form-group">
			<label class="col-md-3 control-label" for="category-name-field">自定义名称</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="category-name-field" type="text" name="name" value="" tabindex="1">
				<p class="help-block">提示：请将题目控制在十个字符之内。</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-3 control-label">
      	<label for="keyword-name-field">类型</label>
    	</div>
			<div class="col-md-7 controls radios">
        <input type="radio" id="class" name="type" checked="checked">
        <label for="class">课程</label>
        <input type="radio" id="live" name="type">
        <label for="live">直播</label>
        <input type="radio" id="classroom" name="type">
        <label for="classroom">班级</label>
    	</div>
    </div>

		<div class="form-group">
      <label class="col-md-3 control-label">分类</label>
      <div class="col-md-8 controls">
        <select id="" name="categoryId" required="required" class="form-control width-input width-input-large">


        </select>
        <div class="help-block" style="display:none;"></div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">展示数量设置</label>
      <div class="col-sm-4">
	      <select class="form-control width-input-large" name="count">
	        <option value="2">2</option>
	        <option value="4">4</option>
	        <option value="6">6</option>
	      </select>
	      <p class="help-block">提示：一个模块最多显示六门课程。如果有更多的显示要求可以进入更多选项查看更多的课程。</p>
    	</div>
    </div>

		
	</form>
</div>
{% endblock %}

{% block footer %}
  	<button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">取消</button>
	<button id="category-create-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#category-form" tabindex="4">确定</
{% endblock %}