<ul class="question-choices">
 {% set rightAnswerIndex = question.answer %}

  {% for key, choice in question.metas.choices %}
    {% set choiceIndex = (65+key)|chr %}
    <li data-index="{{ choiceIndex }}" data-for="question-{{ question.id }}-input-{{ choiceIndex }}">

      <div class="choice-index " style="{% if key in  rightAnswerIndex %}color:red{% endif %}">{{ choiceIndex }}.</div>
      <div class="choice-body" style="{% if key in  rightAnswerIndex %}color:red{% endif %}">{{ choice|bbCode2Html|raw }}</div>
    </li>
  {% endfor %}
</ul>