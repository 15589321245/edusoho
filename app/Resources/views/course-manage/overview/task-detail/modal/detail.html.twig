{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modal_class= "modal-lg" %}
{% set hide_footer = 1 %}

{% block title %}
    {% if task.isOptional %}
        选修任务
    {% else %}
        任务{{ task.number }}
    {% endif %}
    : {{ task.title }}
{% endblock %}

{% block body %}
    {% if task.type == 'testpaper' %}
        {% include 'course-manage/overview/task-detail/modal/testpaper.html.twig' %}
    {% else %}
        {% include 'course-manage/overview/task-detail/modal/normal.html.twig' %}
    {% endif %}
{% endblock %}
