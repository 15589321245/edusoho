<table class="table table-condensed table-bordered table-striped table-hover">
      {% set status = 0  %}
      {% if systemVersion == "old" %}
      {% for app in apps %}
      {% if app.code=="MAIN" %}
        <tr><td>主系统</td><td>{% if app.package.fromVersion ==app.edusohoNewestVersion|default('') %}
          <img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已是最新版本{% else %}{% set status = 1 %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 最新版本:{{app.edusohoNewestVersion|default('')}} 当前版本:{{app.package.fromVersion}} <a class="pull-right" href="{{path("admin_app_upgrades")}}">马上更新</a>{% endif %}</td></tr>
      {% endif %}
      {% endfor %}
      {% else %}
        <tr><td>主系统</td><td>
          <img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已是最新版本</td></tr>
      {% endif %}

        <tr><td>应用更新</td><td>{% if app_count %}
          {% if status|default(0) == 1 and app_count == 1 %}
          <img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 所有应用都已是最新版本
          {% else %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 还有 <span class="badge" style="background-color:#cc0000;">
          {% if status|default(0) == 1 %}{% endif %}{{app_count - 1}}{% else %}
          {{app_count}}
          {% endif %}</span> 个应用没有更新<a class="pull-right" href="{{path("admin_app_upgrades")}}">马上更新</a>
          {% endif %}
          {% else %}<img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 所有应用都已是最新版本
      {% endif %}</td></tr>

        <tr><td>新应用</td><td>{% if unInstallAppCount>0 %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 还有 <span class="badge" style="background-color:#cc0000;">{{unInstallAppCount}}</span> 个应用没有安装<a class="pull-right" href="{{path("admin_app_center")}}">查看</a>{% else %}<img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已安装了全部应用
      {% endif %}</td></tr>

        <tr><td>云视频</td><td>{% if setting("storage").cloud_bucket=="esdevtest" %}<img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已开通{% if setting("storage").upload_mode != 'cloud' %}(尚未启用)<a class="pull-right" href="{{path("admin_setting_storage")}}">查看</a>{% endif %}{% else %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 还未开通<a class="pull-right" href="{{path("admin_setting_storage")}}">查看</a>
      {% endif %}</td></tr>

        <tr><td>直播</td><td>{% if setting("course").live_student_capacity>0 %}<img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已开通{% if setting("course").live_course_enabled==0 %}(尚未启用)<a class="pull-right" href="{{path("admin_setting_course_setting")}}#live-course-set">查看</a>{% endif %}{% else %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 还未开通<a class="pull-right" href="{{path("admin_setting_course_setting")}}#live-course-set">查看</a>
      {% endif %}</td></tr>

        <tr><td>移动客户端</td><td>{% if setting("mobile").enabled|default(null) %}<img src="{{asset("assets/img/default/yes.png")}}" style="width:16px;height:16px;"/> 已启用{% else %}<img src="{{asset("assets/img/default/info.png")}}" style="width:16px;height:16px;"/> 还未启用<a class="pull-right" href="{{path("admin_setting_mobile")}}">查看</a>
      {% endif %}</td></tr>

</table>