{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% set script_controller = 'homeworkbundle/controller/homework/do' %}

{% if itemSetResult|default(null) %}{% set itemSet = itemSetResult %}{% endif %}

{% block content %}
    <div class="question-set homework-set" id="homework-set">

        <div class="row question-set-heading">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="question-set-type">作业</div>
                        <div class="question-set-title">{{ lesson.title }}</div>
                        <div class="homwork-status">
                            <div class="pull-right label label-success">{% if homeworkResult.status == 'doing' or homeworkResult.status=='editing' %}答题中{% elseif homeworkResult.status == 'reviewing' %}批改中{% elseif homeworkResult.status == 'pairReviewing' %}互评中{% elseif homeworkResult.status=='finished' %}已批改{% else %} 未知作业状态{% endif %}</div>
                        </div>
                        <div class="question-set-description">
                            {{ homework.description |raw }}
                            <p class="text-muted">所属课程 <a href="#">{{ course.title }}</a></p>
                        </div>
                        <hr>
                        {% if 'doing'==homeworkResult.status or 'editing'==homeworkResult.status %}
                            <div class="alert alert-success" style="margin-bottom:0px">
                                <div><strong>作业提交截止时间：{{ homework.completeTime|date("Y-m-d") }}</strong></div>
                            </div>
                        {% endif %}
                        {% if teacherSay|default(null) %}
                            <div class="alert alert-success" style="margin:10px 0">
                                <div><strong>评语：</strong></div>
                                <div class="mtm">{{ teacherSay|default('') }}</div>
                            </div>
                        {% endif %}
                       {#  点评次数显示 #}
                       {% if 'finished' == homeworkResult.status %}
                           <div class="alert alert-success" style="margin-bottom:0px">
                                <p><strong>我的成绩：{{homeworkResult.score | default(0) }}分</strong></p>
                                <p style="margin-top:20px">作业总分：{{homework.fullScore | default(0) }}分 <span style="padding-left:40px">被点评：<strong style="color:#ff0000">{{homeworkResult.pairReviews}}</strong>次</span></p>
                             </div>
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>

        <div class="row question-set-body">
            <div class="col-md-9 question-set-main">
                <div class="panel panel-default">
                    <div class="panel-heading">作业题目
                        <small class="text-muted">共{{ itemSet.total }}题</small>
                    </div>
                    <div class="panel-body">
                        <div class="question-set-items">

                            {% for item in itemSet.items %}
                                {% if item.subItems|default(null) %}
                                    {% include 'CustomWebBundle:Question:question-set-item-have-sub.html.twig' %}
                                {% else %}
                                    {% include 'CustomWebBundle:Question:question-set-item.html.twig' %}
                                {% endif %}
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 question-set-side">
                <div class="panel panel-default question-set-card" data-spy="affix" data-offset-top="300"
                     data-offset-bottom="200">
                    {% if view == 'doing' %}
                        <div class="panel-heading">
                            答题卡
                            {% if now < homework.completeTime %}
                                <button class="btn btn-default btn-sm pull-right" id="homework-save-btn"
                                        data-url="{{ path('course_homework_save',{courseId:course.id,homeworkId:homework.id}) }}">
                                    下次再做
                                </button>
                            {% endif %}
                        </div>
                    {% endif %}

                    <div class="panel-body">
                        {%- for questionId in itemSet.questionIds -%}
                            <a href="javascript:;" class="question-index for-question-{{ questionId }} "
                               data-anchor="{{ questionId }}">{{ loop.index }}</a>
                        {%- endfor -%}
                    </div>

                    <div class="panel-footer">
                        {% if view == 'reviewing'  and canCheckHomework|default('') %}
                            <button class="btn btn-success btn-block" data-toggle="modal" data-target="#modal"
                                    data-url="{{ path('course_homework_check_show',{courseId:course.id,homeworkId:homework.id,userId:userId,source:source|default('course'),targetId:targetId|default(0)}) }}"
                                    id="homework-check-show-btn">完成批改
                            </button>
                        {% endif %}

                        {% if view == 'doing' and now < homework.completeTime %}
                            <button id="homework-finish-btn" class="btn btn-success btn-block"
                                    data-url="{{ path('course_homework_submit',{courseId:course.id,homeworkId:homework.id}) }}"
                                    data-saving-text="正在保存...">提交作业
                            </button>
                        {% elseif view == 'doing' and now > homework.completeTime %}
                            <button id="homework-finish-btn" class="btn btn-success btn-block"
                                    data-saving-text="正在保存..." disabled>已经截止
                            </button>
                        {% endif %}

                        {% if view == 'previewing' %}
                            <button id="homework-finish-btn" class="btn btn-success btn-block"
                                    data-saving-text="正在保存..." disabled>提交作业
                            </button>
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}