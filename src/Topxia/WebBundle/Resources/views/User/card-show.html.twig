{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}

<div id="user-card-{{ user.id }}" class="user-card top">
  <div class="card-header">
    <div class="media">
      <div class="media-left">
        {{ web_macro.user_avatar(user, '', 'avatar-md', true) }}
      </div>
      <div class="media-body">
        {% if not app.user or (app.user.id != user.id) %}
          <a class="btn btn-primary btn-xs pull-right direct-message-btn" herf="javascript:;" data-toggle="modal" data-target="#modal" data-url="{{path('message_create', {toId:user.id})}}">私信</a>
        {% endif %}
        <div class="title">
          {{ web_macro.user_link(user, 'name', false) }}
          {% if not app.user or (app.user.id != user.id) %}
            <a class="follow-btn" href="javascript:;" data-url="{{ path('user_follow', {id:user.id}) }}" data-toggle="tooltip" data-placement="top" title="" data-original-title="关注" {% if isFollowed %} style="display:none;"{% endif %}><i class="es-icon es-icon-addbox"></i></a> 
            <a class="unfollow-btn" href="javascript:;"  data-url="{{ path('user_unfollow', {id:user.id}) }}" data-toggle="tooltip" data-placement="top" title="" data-original-title="取消关注" {% if not isFollowed %}style="display:none;"{% endif %}><i class="es-icon es-icon-checkbox"></i></a>
          {% endif %}           
        </div>
        <div class="content">
          {% if user.title %}
            {{ user.title }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    {% if profile.signature %}
      {{ profile.signature }}
    {% else %}
      <div class="text-muted">还没有签名</div>
    {% endif %}
  </div>
  <div class="card-footer clearfix">
    <span><a class="link-light" href="{{ path('user_learn',{id:user.id}) }}">{{ user.learningNum }}<br>在学</a></span>
    <span><a class="link-light" href="{{ path('user_following',{id:user.id}) }}">{{ user.followingNum }}<br>关注</a></span>
    <span><a class="link-light" href="{{ path('user_follower',{id:user.id}) }}">{{ user.followerNum }}<br>粉丝</a></span>
  </div>


  <!-- 延时加载 -->
  <div class="card-body">
    <div class="card-loader"><span class="loader-inner"><span></span><span></span><span></span></span> 名片加载中</div>
  </div>
  
</div>