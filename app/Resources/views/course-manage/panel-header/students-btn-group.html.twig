{% if app.user.isAdmin() or setting('course.teacher_manage_student', 0) %}
  <button class="cd-btn cd-btn-info cd-btn-sm mhs" id="student-add-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('course_set_manage_course_students_add', {courseSetId:courseSet.id, courseId: course.id}) }}"><i class="glyphicon glyphicon-plus"></i> {{'course.members_manage.add_btn'|trans}}</button>
  {% if course.status == 'published' %}
    <a class="cd-btn cd-btn-info cd-btn-sm mhs" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="{{ path('importer_index', {type: 'course-member', courseId:course.id}) }}"><i class="glyphicon glyphicon-import"></i> {{ 'course.members_manage.batch_import_btn'|trans }}</a>
  {% else %}
    <a class="cd-btn cd-btn-info cd-btn-sm mhs" disabled data-toggle="tooltip" data-placement="top" title="{{ 'course.members_manage.import_failed_tips'|trans }}"><i class="glyphicon glyphicon-import"></i> {{ 'course.members_manage.batch_import_btn'|trans }}</a>
  {% endif %}
{% endif %}
{% if app.user.isAdmin() or setting('course.teacher_export_student', false) %}
  <a class="cd-btn cd-btn-info cd-btn-sm mhs" id="export-students-btn" href="javascript:;" data-url="{{ path('course_set_manage_course_student_export_csv', {courseSetId:courseSet.id,courseId:course.id}) }}" data-datas-url="{{ path('course_set_manage_course_student_export_datas', {courseSetId:courseSet.id,courseId:course.id}) }}" data-loading-text="{{'form.btn.export.submiting'|trans}}">
    <i class="glyphicon glyphicon-export"></i> {{ 'form.btn.export'|trans }}{{ 'site.default.student'|trans }}
  </a>
{% endif %}
