{% extends 'TopxiaWebBundle:Settings:layout.html.twig' %}

{% set script_controller = 'settings/update_pay_password' %} 
{% set side_nav = 'security' %} 
{% set questionOptions = { parents: '你的父母名字', teacher:'你的老师名字', lover:'你的爱人的名字', notSelected:'不指定问题类型'} %} 

{% block main %} 
 {% embed "TopxiaWebBundle:Bootstrap:panel.html.twig" with {class:'panel-col'} %}
    {% block heading %}安全设置 / 找回支付密码{% endblock %}
    {% block body %}

    {{ web_macro.flash_messages() }} 

      <form id="password-reset-update-form" class="form-vertical" method="post" action="{{ path('settings_update_pay_password') }}">

        {{ web_macro.flash_messages() }}

        <div class="form-group">
          {{ form_label(form.payPassword, '新支付密码', {label_attr:{class:'control-label'}}) }}
          <div class="controls">
            {{ form_widget(form.payPassword, {attr:{class:'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.confirmPayPassword, '确认支付密码', {label_attr:{class:'control-label'}}) }}
          <div class="controls">
            {{ form_widget(form.confirmPayPassword, {attr:{class:'form-control'}}) }}
            <p class="help-block">请再输入一次密码</p>
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.currentUserLoginPassword, '用户登陆密码', {label_attr:{class:'control-label'}}) }}
          <div class="controls">
            {{ form_widget(form.currentUserLoginPassword, {attr:{class:'form-control'}}) }}
            <p class="help-block">请输入用户登陆密码</p>
          </div>
        </div>

        <div class="form-group">
          <div class="controls">
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary">重设支付密码</button>
          </div>
        </div>

        <input type="hidden" name="token" value="{{ token.token }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

      </form>    


    {% endblock %}
  {% endembed %}
{% endblock %}