{% block btn %}
  {% if courseSet.status != 'published' %}
    <a class="cd-btn cd-btn-ghost-default cd-mr16" target="_blank" href="{{ path('course_show', {id: courseSet.defaultCourseId, 'previewAs':'guest'}) }}">{{ 'course.preview.course'|trans }}</a>
  {% else %}
    <a class="cd-btn cd-btn-ghost-default cd-mr16" target="_blank" href="{{ path('course_show', {id: courseSet.defaultCourseId}) }}">{{'my.learning.course.watch'|trans}}</a>
  {% endif %}
  <a class="cd-btn cd-btn-ghost-primary" target="_blank" href="{{ courseSet.redirect_path }}">{{ 'course.manage_btn'|trans }}</a>
{% endblock %}

