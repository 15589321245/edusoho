<div style="display:block;height:200px; width:auto;" class="well" id="class-sign" data-records="{{ path('signed_records', {'classId':class.id,'userId':app.user.id})}}" data-signurl="{{ path('user_sign', {'classId':class.id,'userId':app.user.id}) }}">
	<div class="" style="display:block;height:50px;width:180px">
		{% if not isSignedToday %}
		<a class="btn btn-primary" data-role="sign">签到</a>
		{% else %}
		<a class="btn btn-primary" data-role="signed" onclick="return false;">已签到<br><span class="">连续1天</span></a>
		{% endif %}
	</div>
	
		<div class="class_sign_main">
		<div class="">
			<div class="calendar_title_month clearfix">
				<span class="pull-left glyphicon glyphicon-chevron-left title-margin" data-role="previous"></span>
				<span class="pull-right glyphicon glyphicon-chevron-right title-margin" data-role="next"></span>
				<div class="text-center title-month title-margin" data-time="{{ "now"|date('Y/m') }}" id="title-month">{{ "now"|date('Y年m月') }}
				</div>
			</div>
			
			<table class="sign_succ_table ">
				<thead align="center">
					<tr class="sign_succ_canlerdar_head">
						<td>日</td><td>一</td><td>二</td><td>三</td><td>四</td><td>五</td><td>六</td>
					</tr>
				</thead>
				<tbody align="center" class="sign_succ_canlerdar_days j_canlerdar_days">
					
				</tbody>
			</table>
		</div>
		<div class="sign_tip_boards">
			<div class="sign_tip_board sign_tip_board_urank j_sign_ad_mobi">
				<p>签到排名：今日本吧第<span class="" id="todayRank">109</span>个签到</p>
			</div>
			<div class="sign_tip_board sign_tip_board_barrank">
				<p>本吧签到人数：<span class="" id="signedNUm">109</span></p>
			</div>
		</div>
	</div>
</div>





