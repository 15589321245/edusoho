{% extends 'MaterialLibBundle:MaterialLib:layout.html.twig' %}

{% block title %}我的分享历史- {{ parent() }}{% endblock %}

{% set side_nav = 'material-lib' %}
{% set parentId = parentId | default(null)%}
{% set script_controller = 'materiallibbundle/controller/material-lib/share-history' %}

{% block page_body %}

<div id="share-history-table-container">
    <table class="table table-hover table-striped" id="share-history-table">
        <thead>
            <tr>
                <th width="20%"></th>
                <th width="50%" class="text-center"></th>
                <th width="30%">
                    <div class="pull-right">
                        <a class="btn btn-primary btn-sm" href="javascript:;" data-toggle="modal" data-target="#modal" data-url="{{ path('material_lib_my_sharing') }}">
                            <i class="es-icon es-icon-share"></i>
                            分享我的教学资料
                        </a>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for history in shareHistories %}
                <tr class="share-history-record" data-role="item">
                	<td>{{ history['updatedTime']|date('Y-n-d H:i') }}</td>
                	<td>
                	{% if history['isActive'] == '1' %}
                							将资料分享给 {{ (targetUsers[history['targetUserId']])['nickname'] }} 老师。
                	{% else %}
                							取消分享资料给 {{ (targetUsers[history['targetUserId']])['nickname'] }} 老师。
                	{% endif %}
                	
                	</td>
                	<td>
                		{% if history['isActive'] == '1' %}
                            <div class="pull-right">
                    			<a data-url="{{ path('material_lib_cancel_sharing') }}" targetUserId="{{ history['targetUserId'] }}" class="btn btn-default btn-sm cancel-share-btn">取消分享</a>
                            </div>
                		{% endif %}
                	</td>
                </tr>
            {% else %}
                <tr class="empty"><td colspan="3">无资料分享记录</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}