{% if coinSetting.coin_enabled %}

  {% do script(['libs/jquery-validation.js', 'app/js/order/create/index.js']) %}

  <div class="order-item clearfix">

    <div class="order-item-title" style="width:30%">
      <i class="es-icon es-icon-money"></i>
      <span class="title">{{ coinSetting.coin_name }}</span>
      <span>{{ 'order.confirm.exchange_rate'|trans({'%cashRate%':coinSetting.cash_rate,'%coin_name%':coinSetting.coin_name}) }}</span>
    </div>

    <div class="order-item-detail">

      {% if account.password %}
        {{ 'order.confirm.use_tips'|trans }}
        <input id="coinPayAmount" class="form-control text-center inline-block width-input-small mhm" role="coinNum" type="text" name="coinPayAmount" value="">
        {{setting("coin.coin_name")}}
      {% endif %}

      <span class="coin-detail hidden-xs hidden-sm">
      （{{ 'order.confirm.account_cash'|trans }}<span class="color-danger" role="accountCash">{{ balance.amount }}</span> {{ coinSetting.coin_name }}）
      </span>

      <input style="display:none">
      <input type="password" style="display:none">

      {% if not account.password %}
        <div  class="alert alert-warning alert-xs mtm inline-block" style="line-height:20px">
          {{ 'order.confirm.safety_tips'|trans }}
          {{ 'order.confirm.setup_pay_password_tips'|trans({'%setupUrl%':path('settings_set_pay_password')})|raw }}
        </div>
      {% else %}
        <div role="password-input" style="display:none">
          <div class="controls mtm">
            <input id="payPassword" class="form-control width-input-large inline-block"
               name="payPassword" type="password" placeholder="{{ 'order.confirm.input_pay_password_tips'|trans }}"
               data-url="{{ path('pay_password_check') }}" autocomplete="off" data-type="get"
               data-display="{{ 'order.confirm.forget_password_tips'|trans }}" />
            <a href="{{ path('settings_find_pay_password') }}" target='_blank' class="btn-link">{{ 'order.confirm.forget_password_btn'|trans }}</a>
            <br>
          </div>
        </div>
      {% endif %}
    </div>

    <div class="order-item-price" style="width:25%">
      <span class="color-danger" role="cash-discount" style="font-size: 24px" data-default-value="0.00"></span>
    </div>

  </div>


{% endif %}


