<ul class="media-list">
  {% if ownThreads%}
    {% for ownThread in ownThreads%}
       {% if ownThread.status =='open' and groupsAsOwnThreads[ownThread.groupId].status=='open'%}
          <li class="media">
            
              <div class="media-body" style="word-break: break-all;" >
                   <a href="{{path('group_thread_index',{id:ownThread.groupId,threadId:ownThread.id})}}">"{{ownThread.title|plain_text(35)}}"</a> 
                   <div class="pull-right">
                         <a href="{{path('group_index',{id:ownThread.groupId})}}" title="{{groupsAsOwnThreads[ownThread.groupId].title}}" >{{groupsAsOwnThreads[ownThread.groupId].title}}</a>&nbsp;
                     {% if ownThread.postNum %}
                      {{ownThread.postNum}}个回复
                     {% endif %}
                    &nbsp;{{ownThread.createdTime|smart_time}}&nbsp;
                  </div>
                  <br>
                  <div class="text-muted text-normal"><br>
                      {% if ownThread.lastPostTime %}
                        最后回复:{{ web_macro.user_link(lastPostMembers[ownThread.lastPostMemberId] , 'link-muted') }}
                        &nbsp;最后回复时间:{{ ownThread.lastPostTime|smart_time}}
                      {% endif %}
                  </div>

              </div>
          </li>

        {% endif %}
    {% endfor %}
  {% else %}
    还没有话题！
  {% endif %}
</ul>