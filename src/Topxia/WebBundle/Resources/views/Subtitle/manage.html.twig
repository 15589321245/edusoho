<div>
  <div class="text-track-title">
    <div class="row">
      {% set token = uploader_token('subtitle', media.id, 'private') %}
      <div class="col-md-2 caption-uploader js-select-file" id="uploader" style="width: 130px" 
      data-media-id="{{ media.id }}"
      data-media-global-id="{{ media.globalId }}"
      data-subtitle-create-url="{{ url('media_subtitle_create', {mediaId: media.id}) }}"
      data-subtitle-list-url="{{ url('media_subtitles', {mediaId: media.id}) }}"
      data-init-url="{{ url('uploader_init', {token:token}) }}"
      data-finish-url="{{ url('uploader_finished', {token:token}) }}"
      >
      </div>
      <div class="col-md-9 caption-notify" style="width: 250px; padding-left: 0" >
        目前仅支持srt字幕，最多上传4个字幕
      </div>
    </div>
  </div>
  <div class="text-track-list mrm mts ptm">
    <div class="mrm" id="track-select"></div>
    <div class="text-track-overview mrm"></div>
  </div>
</div>
{% do load_script('marker/subtitle') %}