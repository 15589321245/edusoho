{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}已收藏的课程... - {{ parent() }}{% endblock %}

{% set nav = 'my-courses' %}

{% set bodyClass = 'favorite-courses' %}

{% block content %}

<div class="row">
    
    {% include 'TopxiaWebBundle:My:my-nav.html.twig' %}

    <div class="col-lg-9">
        
        {% include 'TopxiaWebBundle:MyCourses:my-courses-nav.html.twig' %}

        {% if favoriteCourses is empty %}
           <h3>你还没有收藏任何课程，<a href="{{ path('course_explore') }}">来收藏更多课程吧！ </a>
        {% else %}
            {% include 'TopxiaWebBundle:MyCourses:my-courses-list.html.twig' with { users: users, courses: favoriteCourses } %}
        {% endif %}
          {{ web_macro.paginator(paginator) }} 

    </div>

</div>


{% endblock %}
