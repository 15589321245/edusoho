{% extends 'TopxiaWebBundle:Question:question-base-layout.html.twig' %}

{% block heading %}
    {% include 'CustomWebBundle:Question:question-header.html.twig' %}
{% endblock %}

{% block body %}
    {% include 'CustomWebBundle:Question:question-essay-answer.html.twig' %}


    </div>
    <div class="question-eassy-form-control">
         {% for rightAnswer in question.answer %}
               <div class="question-eassy-rightanswer"><strong>正确答案</strong></div> <p class="question-text-success">{{ rightAnswer|join(' 或 ')|raw }}</p>
        {% endfor %}

    </div>

    {% if app.user.isTeacher or app.user.id!=homeworkResult.userId %}
        <div class="form-group mc-form-group">
            <div class="control-label mc-label"><label for="review-score-{{question.id}}-field">评分</label></div>
            <div class="controls mc-controls">
                <input class="form-control homework-result-item score" id='review-score-{{question.id}}-field' name="score[{{question.id}}]" data-max-score="{{ question.score}}" data-item-id="{{ itemResult.id }}">
            </div>
        </div>

        <div  class="form-group question-teacher-say-input">
            <div class="teacher-say-text">评语:</div>
            <textarea class="form-control homework-result-item teacher-say"  name="review[{{ itemResult.id }}]"  data-type="essay" data-item-id="{{ itemResult.id }}" data-question-id="{{question.id}}" ></textarea>
        </div>
    {% else %}
        <div class="question-score">
            <div class="question-result-title">老师正在批阅！</div>
        </div>
    {% endif %}

    {% include 'CustomWebBundle:Question:question-review-edit.html.twig' %}

{% endblock %}

