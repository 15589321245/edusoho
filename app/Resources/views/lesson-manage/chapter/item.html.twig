<li id="chapter-{{chapter.id}}" class="task-manage-item drag js-task-manage-{{chapter.type}}  clearfix">
  <div class="item-content">
    {{'course.plan_task.which_chapter'|trans({'%chapterNumber%':chapter.number, '%chapter%':course_chapter_alias(chapter.type)|trans, '%title%':chapter.title|sub_text(30)})|raw }}
  </div>
  {# 章可以创建课时，节
  节只能创建课时 #}
  <div class="item-actions">
    {% if chapter.type == 'chapter' %}
      <span class="dropdown">
        <a class="dropdown-toggle dropdown-more btn gray-darker" id="dropdown-more" data-toggle="dropdown" href="#">
          <i class="es-icon es-icon-anonymous-iconfont mrs"></i>
        </a>
        <ul class="dropdown-menu pull-right dropdown-menu-more" role="menu" style="margin-top:12px;min-width:144px" aria-labelledby="dLabel" style="display:none;">
            <li>
              <a href="#" data-toggle="modal" data-target="#modal" data-position="{{ chapter.id }}" data-type="chapter" data-url="{{ path('course_manage_chapter_manage', {courseId:course.id, type:'unit'}) }}">
                {{'course.plan_task.create_part'|trans({'%partName%': course_chapter_alias('unit')|trans}) }}        
              </a>
            </li>
            <li>
              <a href="#" data-toggle="modal" data-target="#modal" data-position="{{ chapter.id }}" data-type="chapter" data-url="{{ path('course_manage_task_create', {courseId:course.id}) }}">
                {{'course.manage.create_lesson'|trans }}
              </a>
            </li>
        </ul>
      </span>
    {% else %}
      <a class="btn gray-darker" data-position="{{ chapter.id }}" data-type="lesson"  href="#" data-toggle="modal" data-target="#modal" data-url="{{ path('course_manage_task_create', {courseId:course.id}) }}">
        <i class="es-icon es-icon-anonymous-iconfont mrs"></i>
        {{'course.lesson'|trans}}
      </a>
    {% endif %}


    {% include 'lesson-manage/chapter/action.html.twig' with {courseId: course.id, chapterId: chapter.id} %}
  </div>
</li>
