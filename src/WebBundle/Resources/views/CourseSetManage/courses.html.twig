{% extends 'WebBundle:CourseSetManage:layout.html.twig' %}

{% block title %}{{ '教学计划列表'|trans }} - {{ parent() }}{% endblock %}
{% set side_nav = 'plan' %}
{% set use_webapck_loader = true %}

{% block main %}
<!-- 当前课程的教学计划列表 -->
<div class="panel panel-default panel-col lesson-manage-panel">
  <div class="panel-heading">
    {{'教学计划列表'|trans}}
  </div>

  <div class="panel-body">
      <table>
      	<thead>
      	  <th>名称</th>
          <th>任务数</th>
          <th>学员</th>
          <th>价格（元）</th>
          <th>操作</th>
      	</thead>
      	<tbody>
      		{%for course in courses %}
      		<tr>
      			<td>{{course.title}}<span class="label label-warning mll">会员免费</span>
              <span class="label label-warning mll">6折</span></td></td>
      			<td>{{course.status}}</td>
      			<td>course.taskNum</td>
      			<td>course.stuNum</td>
      			<td>course.price</td>
      			<td>
      				<div class="btn-group">
		                <a class="btn btn-default btn-sm" href="{{path('courseset_manage_course_info', {courseSetId: courseSet.id, courseId: course.id})}}">管理</a>
		                <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
		                  <span class="caret"></span>
		                </a>
		                <ul class="dropdown-menu pull-right">
		                  <li>
		                  	<a href="{{path('courseset_manage_course_preview', {courseSetId: courseSet.id, courseId: course.id})}}">预览</a>
		                  </li>
	      				  <li>
	      				  	<a href="javascript:;" data-toggle="modal" data-target="#modal" data-url="{{path('courseset_manage_course_copy', {courseSetId: courseSet.id, courseId: course.id})}}">复制为</a>
	      				  </li>
      				      <li>
      				      	<a href="{{path('courseset_manage_course_close', {courseSetId: courseSet.id, courseId: course.id})}}">关闭</a>
      				      </li>
      				      <li>
      				      	<a href="{{path('courseset_manage_course_delete', {courseSetId: courseSet.id, courseId: course.id})}}">删除</a>
      				      </li>
      				      <li>
      				      	<a href="{{path('courseset_manage_course_publish', {courseSetId: courseSet.id, courseId: course.id})}}">发布</a><!-- 已发布的不能删除，可关闭 -->
      				      </li>
		                </ul>
		            </div>
      			</td>
      		</tr>
      		{% endfor %}
      	</tbody>
      </table>

      <div>
      	<a href="javascript:;" class="btn btn-fat btn-primary" data-toggle="modal" data-target="#modal">创建一个新的教学计划</a>
      </div>
      
  </div>
</div>
{% endblock %}