{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}教学内容分类添加{% endblock %}

{% block body %}
<div id="category-creater-widget" data-upload-url="#">

	<form id="category-form" class="form-horizontal" action="#" method="post">
		<div class="form-group">
			<label class="col-md-3 control-label" for="category-name-field">自定义名称</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="category-name-field" type="text" name="name" value="" tabindex="1">
				<p class="help-block">提示：请将题目控制在十个字符之内。</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-3 control-label">
	        	<label for="keyword-name-field">类型</label>
	      	</div>
			<div class="col-md-7 controls radios">
		        <input type="radio"checked="checked">
		        <label for="replaced">课程</label>
		        <input type="radio">
		        <label for="banned">直播</label>
		        <input type="radio">
		        <label for="banned">班级</label>
	      	</div>
	    </div>

		
	</form>
</div>
{% endblock %}

{% block footer %}
  	<button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">取消</button>
	<button id="category-create-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#category-form" tabindex="4">确定</
{% endblock %}