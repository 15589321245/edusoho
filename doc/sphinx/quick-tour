#重建索引
/usr/local/coreseek/bin/indexer -c /var/www/howzhi/etc/sphinx.conf --all --rotate
/usr/local/coreseek/bin/indexer -c /var/www/howzhi/etc/sphinx_dev.conf --all --rotate

#搜索测试
/usr/local/coreseek/bin/search -c /var/www/howzhi/etc/sphinx.conf 摄影

#启动搜索Daemon进程
/usr/local/coreseek/bin/searchd -c /var/www/howzhi/etc/sphinx.conf
/usr/local/coreseek/bin/searchd -c /var/www/howzhi/etc/sphinx_dev.conf

./configure --prefix=/usr/local/coreseek  --without-unixodbc --with-mmseg --with-mmseg-includes=/usr/local/mmseg3/include/mmseg/ --with-mmseg-libs=/usr/local/mmseg3/lib/ --with-mysql

./configure --prefix=/usr/local/coreseek  --without-unixodbc --with-mmseg --with-mmseg-includes=/usr/local/mmseg3/include/mmseg/ --with-mmseg-libs=/usr/local/mmseg3/lib/ --with-mysql