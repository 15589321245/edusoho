{% block footer %}
  <button id="course-submit" type="submit" class="btn btn-primary pull-right" data-submiting-text="{{ '正在创建...'|trans }}">{{ '确定创建'|trans }}</button>
  <button id="course-cancel" type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ '取消'|trans }}</button>
{% endblock %}
