{% extends 'bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'award-point-exchange-modal  modal-sm' %}

{% do script(['libs/jquery-validation.js','app/js/award-point/exchange/index.js']) %}

{% block title %}
  {{'兑换商品'}}
{% endblock %}

{% block body %}
  <div class="award-point-exchange-modal__detail">
    <div class="award-point-exchange-modal__info">摄影培训课程 x 1</div>
    <div class="award-point-exchange-modal__info">消费 <span class="color-primary">2500积分</span></div>
  </div>
  <form id="award-point-exchange-form" class="form-horizontal award-point-exchange-modal__form" method="post">

    <div class="form-group">
      <div class="col-sm-2 control-label" for="tel">{{'联系电话：'|trans}}</div>
      <div class="col-sm-10 controls">
        <input class="form-control" id="tel" type="text" name="tel" required>
        <div class="help-block"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label" for="email">{{'电子邮箱：'|trans}}</div>
      <div class="col-sm-10 controls">
        <input class="form-control" id="email" type="text" name="mail" required>
        <div class="help-block"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label" for="address">{{'收货地址：'|trans}}</div>
      <div class="col-sm-10 controls">
        <input class="form-control" id="address" type="text" name="address" required>
        <div class="help-block"></div>
      </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
    </div>
  </form>
{% endblock %}

{% block footer %}
  <button class="btn btn-default" type="button">{{'取消'|trans}}</button>
   <button class="btn btn-primary js-btn-pay" type="button">{{'确认'|trans}}</button>
{% endblock %}