{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}

<div class="widget shadow">
  <div class="kytitle clearfix bor-l-green">
    <h3 class="panel-title">讲师</h3>
  </div>
  <div class="panel-body pbz ptz">
    {% if activity.experterId %}
     <ul class="media-list">
            {% for teacherId in activity.experterId  %}
              {% set user = users[teacherId] %}
              {% if profiles %}
              {% set profile = profiles[teacherId] %}
              <li class="media">
                <a class="pull-left" href="{{ path('user_show',{id:user.id}) }}"><img width="150px" class="img-responsive media-object " src="{{ file_path(user.mediumAvatar,'avatar-large.png')  }}" alt="user icon"></a>
                <div class="media-body">
                   <h4 class="media-heading"> <a href="{{ path('user_show', {id:user.id}) }}">{{ user.nickname }}</a></h4>
                   <p class="text-color-gray text-normal">{{ user.title }}</p>                  
                </div>
                <div class="pts" >{% if profile.about %}<strong >介绍：</strong>{% endif %} {{ profile.about | raw }}</div>
               </li>
            {% endif %}
          {% endfor %}
 
      </ul>
    {% else %}
      <div class="empty">该课程尚未设置教师</div>
    {% endif %}
  </div>
</div>