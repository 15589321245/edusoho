{% extends 'TopxiaWebBundle:Group:groupindex.html.twig' %}
{% block group %}

<div class="es-row-wrap container-gap userpage-body">
  <ul class="nav nav-pills userpage-nav clearfix">
        <li><a href="{{path('group_index',{id:groupinfo.id})}}">小组首页</a></li>
        <li  class="active"><a href="{{path('groupthread',{id:groupinfo.id})}}">讨论区</a></li>
        <li><a href="{{path('groupmember',{id:groupinfo.id})}}">小组成员</a></li>
  </ul>
  <div class="row">
<div class="col-xs-12"><div class="row row-offcanvas row-offcanvas-right">
                <div class="page-header"><span class="glyphicon glyphicon-hand-right"></span> 发布话题
               </div>
          
        <form id="user-thread-form" class="form-horizontal" method="post">

          <div class="form-group">
            <label class="col-xs-2 control-label" for="thread_title">标题</label>
            <div class="col-xs-7 controls">
              <input type="text" id="thread_title" name="thread[title]" class="form-control"
             >
              <div class="help-block" style="display:none;"></div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-2 control-label" for="thread_content">内容</label>
            <div class="col-xs-7 controls">
              <textarea name="thread[content]" rows="10" id="thread_content" class="form-control"></textarea>
            </div>
          </div>
          
          {% if checkCodeStatus==1 %}
         <div class="form-group">
          <label class="col-xs-2 control-label" for="thread_check">验证码</label>
        
          <div class="col-xs-5 controls">
            <input name="checkCode" rows="10" id="thread_check" class="form-control">
          </div>
           <div class="col-xs-5 ">
              <img src="{{path('checkcode')}}">
          </div>
        </div>
        {% endif %}
          <div class="row">
            <div class="col-xs-7 col-xs-offset-2">
              <button id="groupthread-save-btn" data-submiting-text="正在创建" type="submit" class="btn btn-primary">发布</button>
            </div>
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
      </form><br>
            </div>   </div>
</div>
</div>
{% endblock %}
