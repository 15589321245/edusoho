{% extends 'TopxiaWebBundle:Course:normal-layout.html.twig' %}

{% set thread = thread|default(null) %}

{% block title %}{% if thread %}编辑话题{% else %}发表话题{% endif %} - {{ parent() }}{% endblock %}

{% set script_controller = 'course/thread-form' %}

{% set tab = 'review' %}

{% block course_main %}

  <ul class="media-list">
  	{% for review in reviews %}
  	  {% set user = users[review.userId] %}
      <li class="media">
      	{{ web_macro.user_avatar(user, 'pull-left') }}
      	<div class="media-body">
      		<div class="media-heading">
      			{{ web_macro.user_link(user) }}
      			<span class="bullet">•</span>
      			<span class="text-muted">{{ review.createdTime|date('Y-m-d') }}</span>
      		</div>

      		<div class="media-content">
      			<div><span class="stars-{{ review.rating }}"></span></div>

      			{{ review.content }}

      		</div>
      	</div>
      </li>
    {% endfor %}
  </ul>

  {% if paginator|default(null) %}
  	{{ web_macro.paginator(paginator) }}
  {% endif  %}

{% endblock %}