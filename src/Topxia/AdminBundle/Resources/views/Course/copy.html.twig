{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}


{% set modalSize = 'large' %}

{% block title %}课程复制{% endblock %}
{% block body %}

 <form id="course-copy-form" class="form-horizontal" method="post" action="{{ path('admin_course_coping',{id:course.id})}}">

          <div class="form-group">
            <div class="col-md-3 control-label"><label for="course_title" class="required">课程新标题</label></div>
            <div class="col-md-8 controls">
              <input type="text" id="course_title" name="title" required="required" class="form-control" data-widget-cid="widget-1" data-explain="">
              <div class="help-block" style="display:none;"></div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-3 control-label"><label for="course_title">课程原标题</label></div>
            <div class="col-md-8 controls">
              <input type="text" id="course_old_title" name="courseOldTitle" class="form-control" data-widget-cid="widget-1" data-explain=""  value="" data-title="{{course.title}}" disabled>
              <div class="help-block" style="display:none;"></div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-3 col-md-8 controls">
              <input id="course-copy-btn" data-submiting-text="正在复制" class="btn btn-fat btn-primary pull-right" type="submit" value="复制" data-toggle="form-submit" data-target="#course-copy-form">
              <a type="button" class="btn btn-fat btn-link pull-right" data-dismiss="modal">取消</a>
            </div>
          </div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

        </form>
  	 <script>app.load('course/copy')</script>
{% endblock %}


