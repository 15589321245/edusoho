{% set mode = mode|default('default') %}
<ul class="page-grids course-grids">
  {% for activity in activitys %}
    <li class="card course-grid ps-re">
      <a  href="{{ path('activity_show',{id:activity.id})}}" class="grid-body">
        <div class="grid-img ps-re">
          <img class="img-responsive thumb" src="{{ file_path(activity.largePicture,'activity-large.jpg') }}" alt="{{ activity.subtitle}}">
          <div class="desc">
           <span class="label label-danger text-large text">{{ activity.subtitle }}</span> 
          </div>          
        </div>

        <div class="title pvm mvz">{{ activity.title }}</div>
         <div class="phm ptz pbs mvz ps-re">
          <span  >时间：</span>{{ activity.startTime }}
          <div class="ps-ab ps-bt ps-rt">
            <img  src="{{ asset('assets/img/default/live.png')}}">  
            <!--span class="label label-info text-large">有直播</span--> 
          </div>
        </div>

        {% if mode in ['default'] %}
         {% set user= activity['userProfiles']|first  %}
      
            {% if user %}
              <span class="teacher clearfix">
                <img src="{{ file_path(user.smallAvatar, 'avatar.png') }}" class="thumb">
                <span class="nickname ellipsis">{{ user.nickname }}</span>
                <span class="user-title ellipsis">{{ user.title }}</span>
              </span>
            {% endif %}
        
        {% endif  %}


      


      </a>

    </li>
  {% endfor %}
</ul>