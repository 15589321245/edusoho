{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% set menu = 'payment' %}

{% block main %}

<div class="page-header"><h1>支付方式</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" novalidate>
  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.enabled, '支付功能') }}</div>
    <div class="controls col-lg-8 radios">{{ form_widget(form.enabled) }}</div>
  </div>

  <div class="row control-group">
    <div class="col-lg-3 control-label">{{ form_label(form.bank_gateway, '网银直连支付网关') }}</div>
    <div class="controls col-lg-8 radios">{{ form_widget(form.bank_gateway) }}</div>
  </div>

  <fieldset>
    <legend>支付宝</legend>
    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.alipay_enabled, '支付宝') }}</div>
      <div class="controls col-lg-8">{{ form_widget(form.alipay_enabled) }}</div>
    </div>

    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.alipay_key, 'App Key') }}</div>
      <div class="controls col-lg-8">
        {{ form_widget(form.alipay_key) }}
      </div>
    </div>

    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.alipay_secret, 'App Secret') }}</div>
      <div class="controls col-lg-8">
        {{ form_widget(form.alipay_secret) }}
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>财付通</legend>
    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.tenpay_enabled, '财付通') }}</div>
      <div class="controls col-lg-8 radios">
        {{ form_widget(form.tenpay_enabled) }}
      </div>
    </div>
    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.tenpay_key, 'App ID') }}</div>
      <div class="controls col-lg-8">
        {{ form_widget(form.tenpay_key) }}
      </div>
    </div>
    <div class="row control-group">
      <div class="col-lg-3 control-label">{{ form_label(form.tenpay_secret, 'App Secret') }}</div>
      <div class="controls col-lg-8">
        {{ form_widget(form.tenpay_secret) }}
      </div>
    </div>
  </fieldset>
</br>
  <div class="row control-group">
    <div class="col-lg-3 control-label"></div>
    <div class="controls col-lg-8">
      {{ form_rest(form) }}
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>

{% endblock %}