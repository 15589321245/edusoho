{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}活动管理 - {{ parent() }}{% endblock %}

{% block content %}

{{ render(controller('TopxiaWebBundle:Activity:header', {course:course, manage: true})) }}

<div class="row">
  <div class="col-lg-3">
    {% block side %}
      {% set side_nav = side_nav|default(null) %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="list-group-panel">
            <div class="list-group-heading">活动信息</div>
            <div class="list-group">
              <a class="list-group-item {% if side_nav == 'base' %}active{% endif %}" href="{{ path('activity_manage_base', {id:course.id}) }}">基本信息</a>
              <a class="list-group-item {% if side_nav == 'detail' %}active{% endif %}" href="{{ path('activity_manage_detail', {id:course.id}) }}">详细信息</a>
              <a class="list-group-item {% if side_nav == 'picture' %}active{% endif %}" href="{{ path('activity_manage_picture', {id:course.id}) }}">活动图标</a>
              <a class="list-group-item {% if side_nav == 'course' %}active{% endif %}" href="{{ path('activity_manage_course', {id:course.id}) }}">活动课程</a>
              <a class="list-group-item {% if side_nav == 'pictures' %}active{% endif %}" href="{{ path('activity_manage_pictures', {id:course.id}) }}">现场图片</a>
              <a class="list-group-item {% if side_nav == 'attachment' %}active{% endif %}" href="{{ path('activity_materials', {id:course.id}) }}">活动附件</a>
            </div>
          </div><!-- /list-group-block -->

          <div class="list-group-panel">
            <div class="list-group-heading">活动设置</div>
            <div class="list-group">
              <a class="list-group-item {% if side_nav == 'price' %}active{% endif %}" href="{{ path('activity_manage_price', {id:course.id}) }}">价格设置</a>
              <a class="list-group-item {% if side_nav == 'teachers' %}active{% endif %}" href="{{ path('activity_manage_teachers', {id:course.id}) }}">活动嘉宾管理</a>
            </div>
          </div><!-- /list-group-block -->
        </div>

      </div>
    {% endblock %}
  </div>
  <div class="col-lg-9">
    {% block main %}{% endblock %}
  </div>
</div>
{% endblock %}