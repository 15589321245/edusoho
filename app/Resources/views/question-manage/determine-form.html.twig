{% extends 'question-manage/question-form-layout.html.twig' %}

{% block question_extra_fields %}

  <div class="form-group">
    <div class="col-md-2 control-label"><label class="control-label-required">{{'course.question_manage.manage.answer'|trans}}</label></div>
    <div class="col-md-8 controls radios ">
      {{ radios('answer[]', {'1':'course.question_manage.manage.true'|trans, '0':'course.question_manage.manage.fault'|trans}, question.answer|default(['-1'])|join) }}
    </div>
  </div>

{% endblock %}
