{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% block title %}电子邮件 - {{ parent() }}{% endblock %}

{% set menu = 'mailer' %}

{% block main %}

<div class="page-header"><h1>站点设置</h1></div>


{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" novalidate>
  <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label >邮件发送</label>
    </div>
    <div class="controls col-lg-8 radios">
      
      <div id="enabled">
        <input type="radio" id="_enabled_0" name="enabled" value="0"
        {% if mailer.enabled == 0 %} checked="checked"  {% endif %}>
        <label for="enabled_0" >关闭</label>
        <input type="radio" id="_enabled_1" name="enabled" value="1" 
        {% if mailer.enabled == 1 %} checked="checked"  {% endif %}>
        <label for="enabled_1" >开启</label>
      </div>

    </div>
  </div>

  <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="host">SMTP服务器地址</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="host" name="host" class="form-control" value="{{mailer.host}}">
    </div>
  </div>
  <p></p>
  <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="port">SMTP端口号</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="port" name="port" class="form-control" value="{{mailer.port}}">
      <p class="help-block">通常端口号为25</p>
    </div>
  </div>
 <p></p>
  <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="username" >SMTP用户名</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="username" name="username" class="form-control" value="{{mailer.username}}">
    </div>
  </div>
 <p></p>

  <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="password" >SMTP密码</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="password" name="password" class="form-control" value="{{mailer.password}}">
    </div>
  </div>
 <p></p>

 <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="from" >发信人地址</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="from" name="from" class="form-control" value="{{mailer.from}}">
    </div>
  </div>
 <p></p>

 <div class="row form-group">
    <div class="col-lg-3 control-label">
      <label for="name" >发信人名称</label>
    </div>
    <div class="controls col-lg-8">
      <input type="text" id="name" name="name" class="form-control" value="{{mailer.name}}">
    </div>
  </div>
 <p></p>
  <div class="row form-group">
    <div class="col-lg-3 control-label"></div>
    <div class="controls col-lg-8">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>

{% endblock %}