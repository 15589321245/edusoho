{% extends 'TopxiaWebBundle:ActivityManage:layout.html.twig' %}

{% block title %}主题内容 - {{ parent() }}{% endblock %}

{% set side_nav = 'detail' %}
{% set script_controller = 'activity-manage/detail' %}

{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">主题内容</div>

  <div class="panel-body">
    <form id="course-base-form" class="form-horizontal" method="post">
      {{ web_macro.flash_messages() }}
      
      <div class="form-group">
       
        <div class="col-lg-12 controls">
          <textarea name="about" rows="15" id="course-about-field" class="form-control">{{ field_value(activity, 'about') }}</textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-2 controls">
            <button class="btn btn-fat btn-primary" id="course-create-btn" type="submit">保存</button>
        </div>
      </div>
       <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
    </form>
  </div>
</div>

{% endblock %}



