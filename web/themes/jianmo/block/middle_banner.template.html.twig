<section class="introduction-section">
  <div class="container">
    <div class="row">
      {% for i in 1..3 %}
        {% set icon = _context['icon' ~ i]%}
        {% set title =_context['icon' ~ i ~ 'title'] %}
        {% set introduction =_context['icon' ~ i ~ 'introduction'] %}
        <a href="{{ icon[0].href|default('') }}" class="col-xs-4 introduction-item" target="{{ icon[0].target|default('') }}">
          <img class="img-responsive" src="{{ icon[0].src|default('') }}" alt={{ icon[0].alt|default('') }}>
          <h3>{{ title[0].value|default('') }}</h3>
          <h5 class="hidden-xs">{{ introduction[0].value|default('') }}</h5>
        </a>
      {% endfor %}
    </div>
  </div>
</section>