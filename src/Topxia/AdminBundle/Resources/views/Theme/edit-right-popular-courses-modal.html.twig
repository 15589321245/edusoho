{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}挂件编辑{% endblock %}
{% block body %}
		<form class="form-horizontal" role="form">
			 <div class="row form-group">
			    <div class="col-md-3 control-label">
			      <label for="name">自定义名称</label>
			    </div>
			    <div class="col-md-7 controls">
			      <input type="text"  class="form-control" >
			    </div>
			 </div>

			 <div class="form-group">
			    <label class="col-sm-3 control-label">课程数量设置</label>
			    <div class="col-sm-4">
			      <select class="form-control width-input-large">
			        <option value="">课程显示数量</option>
			        <option value="1">1</option>
			        <option value="2">2</option>
			        <option value="3">3</option>
			        <option value="4">4</option>
			        <option value="5">5</option>
			        <option value="6">6</option>
			        <option value="7">7</option>
			        <option value="8">8</option>
			        <option value="9">9</option>
			        <option value="10">10</option>
			      </select>
			    </div>
			 </div>

			  <div class="form-group">
			    <label class="col-sm-3 control-label">课程排序方式</label>
			    <div class="col-sm-4">
			      <select class="form-control width-input-large">
			        <option value="">最新</option>
			        <option value="hitNum">按照点击数</option>
			        <option value="recommended">按照推荐时间</option>
			        <option value="Rating">按照评分</option>
			        <option value="studentNum">按照学生数目</option>
			        <option value="recommendedSeq">按照推荐序号</option>
			      </select>
			    </div>
			 </div>

			  <div class="form-group">
			    <label class="col-sm-3 control-label">是否付费课程</label>
			    <div class="col-sm-4">
			      <select class="form-control width-input-large">
			        <option value="price">付费</option>
			        <option value="">免费</option>
			      </select>
			    </div>
			 </div>
			 

		</form>

{% endblock %}
{% block footer %}
  <button data-submiting-text="正在保存" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#">确定</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
  <script>app.load('theme-edit/left-edit-modal')</script>
{% endblock %}