{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set script_controller = 'teacher/promote-list' %}

{% set menu = 'admin_teacher_promote' %}

{% block main %}
  
  <form id="user-search-form" class="form-inline well well-sm" action="" method="get" novalidate>
  <div class="form-group">
    <select id="keywordType" name="keywordType" class="form-control">
      {{ select_options(dict('teacherKeywordType'), app.request.query.get('keywordType'), '--关键词类型--') }}
    </select>
  </div>

  <div class="form-group">
    <input type="text" id="keyword" name="keyword" class="form-control" value="{{ app.request.query.get('keyword') }}" placeholder="关键词">
  </div>

  <button class="btn btn-primary">搜索</button>
  
  </form>
  
  <table class="table table-striped table-hover mtl" id="teacher-promote-table">
    <thead>
    <tr>
      <th>顺序号</th>
      <th width="50%">用户名</th>
      <th>推荐时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for user in users %}
            {% include 'TopxiaAdminBundle:Teacher:teacher-promote-tr.html.twig' %}
      {% else %}
        <tr><td colspan="20"><div class="empty">暂无推荐课程</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}

{% endblock %}