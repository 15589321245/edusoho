{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}文章素材预览{% endblock %}

{% block body %}
  {% if mainKnowledge %}
  <div>
    主知识点：{{ mainKnowledge.name }}
  </div>
  {% endif %}{% if relatedKnowledges %}
  <div>
    关联知识点：{% for relatedKnowledge in relatedKnowledges %}{{ relatedKnowledge.name|default(null) }} {% endfor %}
  </div>
  {% endif %} {% if tags %}
  <div>
    标签：{% for tag in tags %}{{ tag.name|default(null) }} {% endfor %}
  </div>
  {% endif %}
  <div>
    {{ articleMaterial.content|raw }}
  </div>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
{% endblock %}