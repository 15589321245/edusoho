{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modal_class= "modal-lg" %}

{% do script(['libs/jquery-validation.js','libs/bootstrap-datetimepicker.js', 'app/js/course-manage/create/index.js']) %}

{% block title %}
  {% if course|default(false) %}
    {{ '复制' }}{{ '"' ~ course.title ~ '"' }}{{ '为一个新的教学计划'|trans }}
  {% else %}
    {{ '创建一个教学计划'|trans }}
  {% endif %}
{% endblock %}

{% block body %}
  <div class="course-create-editor" id="course-create-editor">
      <form class="form-horizontal" id="course-create-form" 
      {% if course|default(false) %}
        action="{{path('course_set_manage_course_copy', {courseSetId: courseSet.id})}}"
      {% else %}
        action="{{path('course_set_manage_course_create', {courseSetId: courseSet.id})}}"
      {% endif %}
        method="post">
        <div class="form-group">
          <div class="col-sm-2 control-label">
            <label for="title" class="control-label-required">{{'新计划名称'|trans}}</label>
          </div>
          <div class="col-sm-8">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
            <input type="hidden" name="courseSetId" value="{{courseSet.id}}">
            <input type="hidden" name="serializeMode" value="{{courseSet.serializeMode}}">
            <input type="hidden" name="copyCourseId" value="{{course.id|default(0)}}">
            <input type="text" id="title" name="title" class="form-control col-sm-9" placeholder="">
          </div>
        </div>        
        <div class="form-group">
          <label for="learnMode" class="col-sm-2 control-label">
            {{'学习模式'|trans}}
            <a class="es-icon es-icon-help ml5 link-gray text-normal" data-trigger="hover" data-toggle="popover" data-container="body" data-placement="top" 
            data-content="<ul class='pl20'><li class='mb10'>{{'自由式学习：学员自由安排学习过程'|trans}}</li><li>{{'解锁式学习：学员根据既定顺序逐个解锁学习'|trans}}</li></ul>"></a>
          </label>
          <div class="col-sm-8 radios">
            {{ radios('learnMode', { 'freeMode': '自由式学习'|trans, 'lockMode': '解锁式学习'|trans }, course.learnMode|default('freeMode')) }}
            {#<p class="help-block" id="learnFreeModeHelp" data-role="tab-content">{{'学员自由安排学习过程'|trans}}</p>
            <p class="help-block hidden" id="learnLockModeHelp" data-role="tab-content" >{{'根据既定顺序逐个解锁学习'|trans}}</p>#}
            <div class="color-warning">{{'确定创建后“学习模式”将不能修改'|trans}}</div>
          </div>
        </div>
        {#<div class="form-group">
         <label class="col-sm-2 control-label">{{'学习有效期模式'|trans}}</label>
         <div class="col-sm-8 radios">
            {{ radios('expiryMode', { 'days': '随到随学'|trans, 'date': '指定日期学习'|trans }, course.expiryMode|default('days')) }}
            <div class="mbm mtm {% if course.expiryMode|default('days') == 'date' %}hidden{% endif %}" id="expiry-days">
            {{'学习有效期'|trans}}
              <input class="form-control width-150 mhs" type="text" name="expiryDays" value="{{course.expiryDays|default('0')}}">
              {{'天'|trans}}
              <span class="color-gray mll">{{'设置为0天则无限制'|trans}}</span>
            </div>
            <div class="mbm mtm {% if course.expiryMode|default('days') == 'days' %}hidden{% endif %}" id="expiry-date">
             {{'开始日期'|trans}}
              <input class="form-control width-150 mls mrl" type="text" id="expiryStartDate" name="expiryStartDate" value="{{course.expiryStartDate|default('now')|date('Y-m-d')}}">
             {{'结束日期'|trans}}
              <input class="form-control width-150 mhs" type="text" id="expiryEndDate" name="expiryEndDate" value="{{course.expiryEndDate|default('')|date('Y-m-d')}}">
            </div>
            <div class="help-block">{{'过期后将无法观看内容，系统默认会在到期前10天提醒学员。'|trans}}</div>
            <div class="color-warning">{{'教学计划首次发布后“学习有效期方式”将不能再修改'|trans}}</div>
         </div>
        </div>#}
        <div class="form-group">
            <label class="col-sm-2 control-label">
              {{'学习有效期'|trans}}
              <a class="es-icon es-icon-help ml5 link-gray text-normal" data-trigger="hover" data-toggle="popover" data-container="body" data-placement="top" 
                data-content="<ul class='pl10 ul-list-none'>
                  <li class='mb10'>{{'随到随学：有效期从学员加入的当天开始算起'|trans}}</li>
                  <li class='mb10'>{{'固定周期：有固定的学习开始日期和结束日期'|trans}}</li>
                  <li>{{'过期后无法继续学习，系统会在到期前10天提醒学员。'|trans}}</li>
                </ul>">
              </a>
            </label>
            <div class="col-sm-8 radios">
                {{ 
                  radios('expiryMode', 
                    { 'days': '随到随学'|trans, 'date': '固定周期'|trans,'forever':'永久有效' }, 
                    course.expiryMode|default('days')
                  ) 
                }}
                {#随到随学#}
                <div class="mb20 mt20 {% if course.expiryMode|default('days') in ['date', 'forever'] %}hidden{% endif %}" id="expiry-days">
                  {{ 
                    radios(
                      'deadlineType', 
                      { 'end_date': '按截止日期'|trans, 'days': '按有效天数'|trans},
                      course.deadlineType|default('days')
                    )
                  }}
                  <div class="mb20 mt20 {% if course.deadlineType|default('days') != 'end_date' %}hidden{% endif %}" id="deadlineType-date">
                    <input class="form-control width-150 mr10" id="deadline" name="deadline"  
                    value="{{course.expiryEndDate|default(null)|date_format('Y-m-d')}}">{{'在此日期前，学员可进行学习。'|trans}}
                  </div>
                  <div class="mb20 mt20 {% if course.deadlineType|default('days') != 'days' %}hidden{% endif %}" id="deadlineType-days">
                    <input class="form-control mhs width-150" type="text" id="expiryDays" name="expiryDays"  
                    value="{{course.expiryDays|default(1)}}">
                    {{'从加入当天起，在几天内可进行学习。'|trans}}
                  </div>
                </div>
                {#固定周期#}
                <div class="mb20 mt20 {% if course.expiryMode|default('days') in ['days', 'forever'] %}hidden{% endif %}" id="expiry-date">
                  {{'开始日期'|trans}}
                  <input class="form-control mh10 width-150 " id="expiryStartDate" type="text" name="expiryStartDate" 
                  value="{{course.expiryStartDate|default('now'|date('Y-m-d'))}}">
                  {{'结束日期'|trans}}
                  <input class="form-control ml5 width-150 " type="text" id="expiryEndDate" name="expiryEndDate" 
                  value="{{course.expiryEndDate|default('')|date_format('Y-m-d')}}">
                </div>
                <div class="color-warning">{{'教学计划首次发布后“学习有效期”不能再修改'|trans}}</div>
            </div>
          </div>
      </form>
    </div>
{% endblock %}

{% block footer %}
  <button id="course-submit" type="button" class="btn btn-primary pull-right" data-loading-text="{{ '正在创建...'|trans }}">{{ '确定创建'|trans }}</button>
  <button id="course-cancel" type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ '取消'|trans }}</button>
{% endblock %}
