{% extends 'TopxiaWebBundle:ActivityManage:layout.html.twig' %}

{% block title %}详细信息 - {{ parent() }}{% endblock %}

{% set side_nav = 'detail' %}
{% set script_controller = 'activity-manage/detail' %}

{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">详细信息</div>
  <div class="panel-body">
    <form id="course-base-form" class="form-horizontal" method="post">
      {{ web_macro.flash_messages() }}
      
      <div class="form-group">
        <div class="col-lg-2 control-label"><label>活动简介</label></div>
        <div class="col-lg-8 controls">
          <textarea name="about" rows="10" id="course-about-field" class="form-control">{{ field_value(course, 'about') }}</textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-2 controls">
            <button class="btn btn-fat btn-primary" id="course-create-btn" type="submit">保存</button>
        </div>
      </div>

    </form>
  </div>
</div>

{% endblock %}



