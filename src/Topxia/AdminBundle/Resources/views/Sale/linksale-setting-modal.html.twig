{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set block = block|default(null) %}
{% set modal_class = 'modal-lg' %}

{% block title %}
  推广链接单独设置
{% endblock %}
{% block body %}
<form class="form-horizontal" id="offsale-form"  action="{{ path('admin_sale_linksale_setting',{id:linksale.id})  }}" method="post">


  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="adCommission">佣金比例</label>
    </div>
    <div class="col-md-8 controls">
      <div class="input-group">
        <input class="form-control" type="text" id="adCommission" value="{{linksale.adCommission}}" name="adCommission" required/>
        <span class="input-group-addon">%</span>
      </div>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="adCommissionDay">推广有效期</label>
    </div>
    <div class="col-md-8 controls">
      <div class="input-group">
        <input class="form-control" type="text" id="adCommissionDay" value="{{linksale.adCommissionDay}}" name="adCommissionDay" required/>
        <span class="input-group-addon">天</span>
      </div>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="reducePrice">优惠幅度</label>
    </div>
    <div class="col-md-8 controls">
      <div  class="input-group">
        <input class="form-control" type="text" id="reducePrice" value="{{linksale.reducePrice}}" name="reducePrice" required/>
        <span class="input-group-addon">元</span>
      </div>
    </div>
  </div>  

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="validTime">优惠截止期</label>
    </div>
    <div class="col-md-8 controls">
      <div class="input-group">
        <input class="form-control" type="text" id="strvalidTime" value="{{linksale.validTime}}" name="strvalidTime" >
        <p class="help-block" id="prod_info">格式：yyyy-mm-dd hh:mm 空表示无限制期限</p>
      </div>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="linkName">备注描述</label>
    </div>
    <div class="col-md-8 controls">
      <input class="form-control" type="text" id="linkName" value="{{linksale.linkName}}" name="linkName" required/>
    </div>
  </div>

 
   <input type="hidden" name="adCommissionType" value="ratio">  
   <input type="hidden" name="customized" value="1">
   <input type="hidden" name="reduceType" value="quota"> 
  

 

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}"></form>

<script type="text/javascript">app.load('sale/linksale-setting-modal')</script>
{% endblock %}

{% block footer %}
<button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
<button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#offsale-form">保存</button>
{% endblock %}