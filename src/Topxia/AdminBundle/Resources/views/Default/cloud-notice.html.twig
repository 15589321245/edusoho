{% import "TopxiaAdminBundle::macro.html.twig" as admin_macro %}
  {% if notices and canTrial is null %}
  <div class="col-md-12">
    <div class="main-system-alert">
      <h2> 站长公告</h2>
        <ul class="alert-list">
        {% for notice in notices %}
          <li class="glyphicon glyphicon-bell" style="color:#fed032;font-size:16px;"><a href="{{notice.detailUrl}}" style="margin-left:22px;" target="_blank">{{notice.content}}<span>{{notice.createdTime|date("Y-m-d H:i:s")}}</span></a></li>
        {% endfor %}
        </ul>
    </div>
  </div>
  {% else %}
  <div class="row form-group">
    <div class="help-block">

      <p style = "text-align: left;font-size:18px">&nbsp&nbsp欢迎使用，试用将于<span style="color:#fed032;"> {{trialTime.endTime|date("Y年m月d日")}} </span>到期,剩余<span style="color:#fed032;"> {{trialTime.remainDays}}</span> 天。您可以联系销售人员购买授权版本，或者延长试用期限。
      <img src="{{ asset('bundles/topxiaadmin/img/iconfont-dianhua.png') }}"> 0571-86819929 或 <span id="BizQQWPA" onclick="_hmt.push(['_trackEvent', 'advisory', 'click', 'qq'])"><img class="img-service" src="{{ asset('bundles/topxiaadmin/img/iconfont-qq.png') }}"></span>
      </p>
      </br>
    </div>
  </div>


  {% endif %}

