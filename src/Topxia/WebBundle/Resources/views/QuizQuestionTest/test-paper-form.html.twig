<div class="form-group">
  <div class="col-md-2 control-label"><label for="test-percentage-field">生成方式</label></div>
  <div class="col-md-8 controls radios">
       {{ radios('isDifficulty', {'0':'随机生成', '1':'按难易程度'}, 0) }}
  </div>
</div>

<div class="form-group difficulty-html hidden">
  <div class="col-md-2 control-label"><label for="test-percentage-field">试卷难度</label></div>
  <div class="col-md-8 controls form-control-static">
      <div class="noUiSlider" data-url="{{ path('course_manage_test_paper_create_check',{courseId:course.id})}}"  ></div>
      <div class="help-block">
          <span id="value-0" data-text="简单">简单30%</span> <span id="value-1" data-text="一般">一般40%</span> <span id="value-2" data-text="困难">困难30%</span>
      </div>
  </div>
</div>

<br />
<div class="test-sort-body">

{% for key,type in dict('questionType') %}
    <div class="form-group type-item">

        <div class="col-md-1 control-label"><label for="test-stem-field"></label></div>

        <div class="form-inline">
            <div class="col-md-10 controls pls">

                <div class="col-md-1 controls ">
                    <button type="button" class="btn btn-link test-sort-handle"><span class="glyphicon glyphicon-move hidden-lt-ie8"></span></button>
                </div>

                <div class="form-control-static pull-left prm">
                    {{type}} 
                </div>

                <div class="form-control-static pull-left plm">题目数量:</div>
                <div class="col-md-2">
                    <input type="text" class="form-control item-number input-sm" data-key="{{key}}" name="itemCounts[{{key}}]"  value="{% if testPaper.itemCounts[key] | default(null) %}{{testPaper.itemCounts[key]}}{% else %}0{% endif %}" />
                </div>

                <div class="form-control-static pull-left plm">题目分值:</div>
                <div class="col-md-2">
                    <input type="text" class="form-control item-number input-sm" data-key="{{key}}" name="itemScores[{{key}}]"  value="{% if testPaper.itemScores[key]  | default(null) %}{{testPaper.itemScores[key]}}{%else%}2{% endif %}" />
                </div>

                {% if type == '多选题' %}
                  <div class="form-control-static pull-left plm">漏选分值:</div>
                  <div class="col-md-2">
                      <input type="text" class="form-control item-number input-sm" data-key="{{key}}" name="itemMissScores[{{key}}]"  value="0" />
                  </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endfor %}

</div>
<br />

<div class="form-group">
    <div class="col-md-2  controls">
    </div>
    
    <button type="submit" class="btn btn-primary" >保存，下一步</button>
    <a href="{{ path('course_manage_test_paper',{courseId:course.id}) }}" class="btn btn-link  ">返回</a>
    
</div>

<input type="hidden" id="perventage-1" name="perventage[]" value="30">
<input type="hidden" id="perventage-2" name="perventage[]" value="70">

<input type="hidden" name="target" value="{{ testPaper.target }}">

{% if testPaperId %}
    <input type="hidden" name="testPaperId" value="{{ testPaperId }}">
{% endif %}

<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">