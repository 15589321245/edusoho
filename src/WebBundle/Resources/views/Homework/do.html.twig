{% extends 'WebBundle:Testpaper:testpaper-layout.html.twig' %}

{% block paper_body %}
  <div class="panel panel-default">
    <div class="panel-heading">
      {{ title|default('作业')|trans }}{{'题目'|trans}} <small class="text-muted">{{ '共%itemCount%题'|trans({'%itemCount%':0}) }}</small>
    </div>

    <div class="panel-body">
      <div class="question-set-items">
        {% for question in questions %}
          {% if question.isDelete|default(false) %}
            {% include 'WebBundle:Question/Part:question-delete.html.twig' with {showScore:0,question:question}%}
          {% else %}
            {% include question.template with {showScore:0} %}
          {% endif %}

        {% endfor %}
      </div>
    </div>

  </div>
{% endblock %}

{% block paper_sidebar %}
  {% include 'WebBundle:Homework/Part:paper-card.html.twig' %}
{% endblock %}
