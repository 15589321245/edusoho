{% extends 'ClassroomBundle:ClassroomManage:layout.html.twig' %}

{% block title %}服务设置 - {{ parent() }}{% endblock %}

{% set side_nav = 'service' %}
{% block main %}
   
<div class="panel panel-default panel-col">
  <div class="panel-heading">服务设置</div>
  <div class="panel-body">
    <form id="services-form" class="form-horizontal" method="post">
          {{ web_macro.flash_messages() }}
          <div class="form-group" id="services-form-group">
            <label class="col-md-2 control-label">
              提供的服务
            </label>
            <div class="col-md-3 controls checkboxs">
                  {{ checkboxs('service', dict('classroomService'), classroom.service|default(null)) }}
                  
                  {% if is_plugin_installed('ClassroomPlan') %}
                    <label><input name="service[]" value="studyPlan" type="checkbox" {% if 'studyPlan' in classroom.service %}checked="checked"{% endif %}> 学习计划</label>
                  {% endif %}
            </div>  
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-8 controls">
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
              <button type="submit" class="btn btn-fat btn-primary">保存</button>
            </div>
          </div>
    </form>
  </div>
</div>

{% endblock %}