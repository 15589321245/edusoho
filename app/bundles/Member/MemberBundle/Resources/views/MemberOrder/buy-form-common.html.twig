<div class="form-group">
  <label class="col-sm-3 control-label">开通时长</label>
  <div class="col-sm-8 radios">
    {{ radios('unit', {month: '按月', year: '按年'}, 'month') }}
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-8 controls">
    <input type="text" class="form-control width-input width-input-mini" name="duration" value="3">
    <span class="unit-label unit-label-month">个月</span>
    <span class="unit-label unit-label-year" style="display:none;">年</span>
    <span class="text-success mll dealine-hint hide">会员有效期延长至<strong class="deadline"></strong></span>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">付款方式</label>
  <div class="col-sm-8 ">
    <input type="radio" checked="checked">
    <img src="{{ asset('assets/img/order/alipay.gif') }}">

  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">应付金额</label>
  <div class="col-sm-8">
    <p class="form-control-static"><strong class="money amount">正在计算...</strong></p>
  </div>
</div>

<input type="hidden" name="type" value="{{ type }}">
<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
<script type="text/plain" data-role="prices">{{ prices|json_encode|raw }}</script>