{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set tagGroup = tagGroup|default(null) %}

{% block title %}
  {% if tagGroup.name %}{{'编辑标签组'|trans}}{% else %}{{'添加标签组'|trans}}{% endif %}
{% endblock %}
{% block body %}
  <form class="form-horizontal" id="tag-form" action="{% if tagGroup.name %}{{ path('admin_tag_group_update',{groupId:groupId}) }}{% else %}{{ path('admin_tag_group_create') }}{% endif %}" method="post">
    <div class="form-group">
      <label class="col-md-3 control-label">{{'标签组名称'|trans}}</label>
      <div class="col-md-6 controls">
        <input class="form-control" id="tag-name-field" type="text" name="name" value="{{ tagGroup.name }}">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">{{'用于'|trans}}</label>
      <div class="col-md-6 controls">
        <input type="checkbox" data-role="batch-select" name="scope" value="course">
        <label class="required" {% if tagGroup.scope in [classroom, course] %}checked="checked"{% endif %}>课程筛选</label>
        <input type="checkbox" data-role="batch-select" name="scope" value="classroom" {% if tagGroup.scope in [classroom, course] %}checked="checked"{% endif %}>
        <label class="required">班级筛选</label>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-md-3 control-label">包含标签</label>
      <div class="col-md-6 controls">
        
      </div>
      <div class="help-block">
        回车可添加标签，标签组内添加的标签也会添加到标签管理中
      </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
  <script type="text/javascript">app.load('tag-group/save-modal')</script>
{% endblock %}

{% block footer %}
 
    <button class="btn btn-default pull-left delete-tag" data-url="" data-target="" data-tag-id=""><i class="glyphicon glyphicon-trash"></i> {{'删除'|trans}}</button>

  <button type="button" class="btn btn-link" data-dismiss="modal">{{'取消'|trans}}</button>
  <button id="tag-create-btn" data-submiting-text="{{'正在提交'|trans}}" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#tag-form">{{'保存'|trans}}</button>
{% endblock %}
