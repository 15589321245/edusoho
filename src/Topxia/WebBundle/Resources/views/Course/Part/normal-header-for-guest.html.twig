{% extends 'TopxiaWebBundle:Course:Part/normal-header-layout.html.twig' %}

{% set layoutClass = 'before' %}

{% block content %}

  {{ header_macro.picture(course) }}

  {{ header_macro.info(course, member, userVipStatus) }}

  <div class="course-operation">
    {{ header_macro.student_num(course) }}
    <ul class="course-data clearfix active">
      {{ header_macro.favorite_btn(course, hasFavorited) }}
      {{ header_macro.share_btn(course) }}
      {% if courseVip %}
        <li class="hidden-xs color-w icon-vip" title="会员课程" data-content="{% include 'TopxiaWebBundle:Course:Part/normal-header-vip.html.twig' %}">
          <i class="es-icon es-icon-crown"></i><br>会员
        </li>
      {% endif %}
    </ul>
    <div class="buy">
      {% include 'TopxiaWebBundle:Course:Part/normal-header-buy-btn.html.twig' %}
    </div>
  </div>

{% endblock %}

{% block after_content %}
  {% include 'TopxiaWebBundle:Course:Part/normal-header-recommend-classrooms.html.twig' with {type:'course'} %}
{% endblock %}


