{% extends 'TopxiaWebBundle:Course:dashboard-layout.html.twig' %}

{% block title %} 发表话题 - {{ parent() }}{% endblock %}

{% set script_controller = 'course/dashboard-thread-create' %}

{% block dashboard_main %}

{% include 'TopxiaWebBundle:Course:dashboard-nav.html.twig' with {nav:'thread'} %}

<form id="thread-create-form" class="form-vertical" method="post" action="{{ path('course_thread_create', {id:course.id}) }}" data-auto-submit="false" novalidate>

  {{ web_macro.flash_messages() }}

  <div class="control-group">
    <div class="controls">
      {% set placeholder = type == 'question' ? '标题，用一句话说请你的问题' : '标题' %}
      {{ form_widget(form.title, {attr:{placeholder:placeholder, 'data-display':'标题'}}) }}
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      {{ form_widget(form.content, {attr:{rows:18, 'data-display':'内容'}}) }}
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary btn-fat">发表</button>
      <a href="{{ path('course_threads', {id:course.id}) }}" class="btn pull-right">取消</a>
    </div>
  </div>

  {{ form_rest(form) }}
</form>



{% endblock %}
