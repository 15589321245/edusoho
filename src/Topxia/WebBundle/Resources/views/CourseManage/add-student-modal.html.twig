{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}添加学员--课程名： {{course.title}}{% endblock %}
{% block body %}

  <div class="help-block"> 
    <strong> 注意：新增之后，学员即可免费学习本课程，请慎重添加 </strong>
  </div><hr>

<form id="add-student-form" class="form-horizontal" method="post" action="{{ path('course_manage_student_add', {id:course.id}) }}">

	<div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="nickname">学员昵称</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="nickname" name="nickname" class="form-control" 
      data-url="{{ path('course_manage_student_add_nickname_check',{courseId:course.id})}}" >
    	<div class="help-block">只能添加系统中已注册的用户</div>
  	</div>
  </div>

  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="remarks">备注</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="remarks" name="remarks" class="form-control">
      <div class="help-block">选填内容</div>
    </div>
  </div>

</form>

{% endblock %}

{% block footer %}
  <button type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#add-student-form">保存</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
  <script>app.load('course-manage/add-student')</script>
{% endblock %}
