{% extends 'old-layout.html.twig' %}

{% block title %}{{'searching.content_title'|trans}}{% if keywords %}{{ keywords }}{% else %}{{'searching.all_courses'|trans}}{% endif %} - {{ parent() }}{% endblock %}
{% set bodyClass = 'bg-blank' %}
{% do load_script('search/search') %}

{% block top_content %}
  <div class="course-banner es-banner">
    <div class="container">
      <div class="title">
        <span>{{'searching.content_title'|trans}}</span>{% if app.request.locale == 'zh_CN' %}SEARCH{% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}

  <div class="course-filter search-filter" id="course-filter">
    <div class="result-declare">
  {% if keywords %}
    {{'searching.result_relevant_course_copy'|trans({'%count%': count, '%keywords%': keywords})|raw}}
  {% else %}
    {{'searching.result_course_copy'|trans({'%count%': count})|raw}}
    {% endif %}
    </div>
    <ul class="nav nav-pills hidden-xs" role="tablist">
      <li role="presentation" class="{% if not filter %}active{% endif %}"><a href="{{ path('search', {q:keywords}) }}">{{'searching.all_courses'|trans}}</a></li>
      {% if isShowVipSearch  %}
        {% if currentUserVipLevel  %}
          <li role="presentation" class="{% if filter == 'vip' %}active{% endif %}">
            <a href="{{ path('search',{filter:'vip', q:keywords}) }}">{{'searching.vip_courses'|trans}}</a>
          </li>
        {% endif %}
      {% endif %}
      <li role="presentation" class="{% if filter == 'free' %}active{% endif %}">
          <a href="{{ path('search',{filter:'free', q:keywords}) }}">{{'searching.free_courses'|trans}}</a>
      </li>
      <li role="presentation" class="{% if filter == 'live' %}active{% endif %}">
          <a href="{{ path('search',{filter:'live', q:keywords}) }}">{{'searching.live_courses'|trans}}</a>
      </li>
    </ul>
    <div class="btn-group visible-xs">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">{{ dict_text('searchCourseType',filter|default('all')) }}
      <span class="caret"></span></button>

      <ul class="dropdown-menu" role="menu">
        <li role="presentation" class="{% if not filter %}active{% endif %}"><a href="{{ path('search') }}">{{'searching.all_courses'|trans}}</a></li>
        {% if isShowVipSearch  %}
            {% if currentUserVipLevel  %}
              <li role="presentation" class="{% if filter == 'vip' %}active{% endif %}">
                <a href="{{ path('search',{filter:'vip'}) }}">{{'searching.vip_courses'|trans}}</a>
              </li>
          {% endif %}
        {% endif %}
        <li role="presentation" class="{% if filter == 'free' %}active{% endif %}">
            <a href="{{ path('search',{filter:'free'}) }}">{{'searching.free_courses'|trans}}</a>
        </li>
        <li role="presentation" class="{% if filter == 'live' %}active{% endif %}">
            <a href="{{ path('search',{filter:'live'}) }}">{{'searching.live_courses'|trans}}</a>
        </li>
      </ul>
    </div>

  </div>

  <!-- 课程列表 -->
  <div class="course-list">
    {% if courseSets %}
      <div class="row">
        {% for courseSet in courseSets %}
          <div class="col-lg-3 col-md-4 col-xs-6">
            {% include 'course/widgets/course-grid.html.twig' with { courseSet: courseSet} %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty">{{'searching.empty'|trans}}</div>
    {% endif %}
  </div>

  <nav class="text-center">
    {% if courseSets %}
    {{ web_macro.paginator(paginator) }}
    {% endif %}
  </nav>

{% endblock %}