
<div class="order-detail">
    <div class="col-md-4">
        <a href="{{path('classroom_show',{id:classroom.id})}}">
          <img class="img-responsive" src="{{ default_path('classroom-default-213-142.png', classroom.middlePicture, '')|default(asset('assets/img/default/classroom-default-213-142.png')) }}" alt="" width="213" height="142">
        </a>
    </div>

    <div class="col-md-8">
	    <h3><a href="{{path('classroom_show',{id:classroom.id})}}">{{ classroom.title }}</a></h3>
	    <span class="course-text">总课程数：{{ courses|length }} </span>
	    {% set teacher = users|first|default(null) %}
	    {% if teacher %}
	      <span class="course-text">
	        授课老师：<a href="{{ path('user_show', {id:teacher.id}) }}">{{ teacher.nickname }}</a>
	      </span>
	    {% endif %}
	    {% if headTeacher %}
	    <span class="course-text">
	        班主任：<a href="{{ path('user_show', {id:headTeacher.id}) }}">{{ headTeacher.nickname }}</a>
	    </span>
	    {% endif %}
	</div>

</div>