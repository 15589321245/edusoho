{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}登录 - {{ parent() }}{% endblock %}

{% set script_controller = 'default/login' %}

{% set bodyClass = 'login-page' %}

{% block body %}

<div class="login-box">
  <div class="login-header">
    {% if setting('site.logo') %}
      <img src="{{ asset(setting('site.logo')) }}" class="logo">
    {% else %}
      <h1>{{ setting('site.name', 'EDUSOHO') }}</h1>
    {% endif %}
  </div>
  <div class="login-body">
    <div class="login-picture" style="background-image: url({{ file_url(setting('school.homepagePicture'),'login-picture.jpg') }})"></div>
    <div class="login-main">
      <div class="login-avatar"></div>
      <form id="login-form" class="login-form" method="post" action="{{ path('login_check') }}">

        <div class="form-group">
            <input class="form-control" id="login_username" type="text" name="_username" value="{{ last_username }}" placeholder="学号/工号/Email" />
        </div>
        <div class="form-group">
          <input class="form-control" id="login_password" type="password" name="_password" placeholder="密码" />
        </div>

        <div class="form-group">
          {% if error %}
            <div class="pull-right text-danger">{{ error.message|trans }}</div>
          {% endif %}
          <label class="login-checkbox"> <input type="checkbox" name="_remember_me" checked="checked"> 记住密码 </label>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-fat btn-success btn-block">登录</button>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
        </div>

          

      </form>
    </div>

  </div>

</div>




<div class="row row-6" style="display:none;">
  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-default panel-page">
      <div class="panel-heading"><h2>登录</h2></div>



      {% include 'TopxiaWebBundle:Login:social-logins-block.html.twig' %}
    </div>

  </div>
</div>
{% endblock %}