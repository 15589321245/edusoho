{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% import "macro.html.twig" as web_macro %}

{% block title %}
    任务运行日志
{% endblock %}

{% block body %}

    {% if jobFires %}
        <table id="job-fires-table" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{'执行时间'|trans}}</th>
                <th>{{'状态'|trans}}</th>
                <th>{{'操作'|trans}}</th>
            </tr>
            </thead>
            <tbody>
            {% for jobFire in jobFires %}
                <tr>
                    <td>{{ jobFire.fired_time|date('Y-m-d H:i:s') }}</td>
                    <td>{{ jobFire.status }}</td>
                    <td>
                        <button type="button" class="btn btn-default btn-sm">
                            {{'日志查看'|trans}}
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% else %}
        <div class="empty">{{'暂无任务信息!'|trans}}</div>
    {% endif %}

    {{ web_macro.ajax_paginator(paginator) }}
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-link" data-dismiss="modal" >{{'关闭'|trans}}</button>
    <script>app.load('topxiaadminbundle/controller/jobs/fires');</script>
{% endblock %}