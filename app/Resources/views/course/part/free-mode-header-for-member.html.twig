<!-- 2、加入后：自由式学习 -->
<div class="container">
  <ol class="breadcrumb breadcrumb-o">
    <li><a href="{{ path('homepage') }}">首页</a></li>
    <li class="active">{{ courseSet.title }} </li>
  </ol>
  <div class="es-section course-detail-section clearfix">
    <div class="course-detail-top">
      <div class="course-detail-heading gray-darker text-24">{{ course.title }}</div>
      <ul class="course-operation clearfix ">
        <li>
          <span class="btn btn-xs">
            <i class="es-icon es-icon-people text-16"></i>
            <span class="mls">{{ course.studentNum }}人</span>
          </span>
        </li>
        <li id="unfavorite-btn" data-url="/course/2/unfavorite" style="display:none;">
          <a class="btn btn-default btn-xs" href="javascript:;"> <i class="es-icon es-icon-bookmark"></i>
          </a>
        </li>
        <li id="favorite-btn" data-url="/course/2/favorite">
          <a class="btn btn-default btn-xs" href="javascript:;">
            <i class="es-icon es-icon-bookmarkoutline"></i>
          </a>
        </li>

        <li class="es-share top">
          <a class="btn btn-default btn-xs dropdown-toggle" href="" data-toggle="dropdown">
            <i class="es-icon es-icon-share"></i>
          </a>

          <div class="dropdown-menu  js-social-share-params" data-title="sdfdsf " data-summary="大神"
               data-message="我正在学习《sdfdsf 》，收获巨大哦，一起来学习吧！" data-url="http://www.esdev.com/course/2"
               data-picture="/assets/img/default/courseSet.png">

            <a href="javascript:;" class="js-social-share" data-cmd="weixin" title="分享到微信" data-share="weixin"
               data-qrcode-url="/common/qrcode?text=http%3A//www.esdev.com/course/2">
              <i class="es-icon es-icon-weixin"></i>
            </a>
            <a href="javascript:;" class="js-social-share" data-cmd="tsina" title="分享到新浪微博" data-share="weibo">
              <i class="es-icon es-icon-weibo"></i>
            </a>
            <a href="javascript:;" class="js-social-share" data-cmd="qq" title="分享到QQ好友" data-share="qq">
              <i class="es-icon es-icon-qq"></i>
            </a>
            <a href="javascript:;" class="js-social-share" data-cmd="qzone" title="分享到QQ空间" data-share="qzone">
              <i class="es-icon es-icon-qzone"></i>
            </a>
          </div>
        </li>
        {% if canAccess %}
          <li class="pull-left">
            <a class="btn btn-default btn-xs " href="{{ path('course_set_manage',{id:courseSet.id}) }}" title="课程管理">
              <i class="es-icon es-icon-setting"></i>
            </a>
          </li>
        {% endif %}
      </ul>
    </div>
    <section class="course-freelearn-section">
      <div class="row">
        <div class="col-sm-3">
          <div class="course-progress">
            <div class="cricle-progress" id="freeprogress" data-percent="{{ progress }}">
              <span class="percent"></span>
            </div>
          </div>
        </div>
        <div class="col-sm-7">
          <ul class="course-learn-list text-12">
            <li>
              <p class="mb15 color-gray">
                <i class="es-icon es-icon-iccheckcircleblack24px mrm"></i>已完成
              </p>
              <span class="text-16"><span class="color-primary">{{ taskResultCount }}</span>
              ／
              <span class="mrl">{{ taskCount }}</span>
              课时</spn>
            </li>
            <li>
              <p class="mb15 color-gray">
                <i class="es-icon es-icon-today mrm"></i>学习有效期
              </p>
              <span class="text-16">
                {% if course.expiryMode == 'days' and course.expiryDays == 0 %}
                  <span class="progress-learn-time">不限</span>
                {% elseif course.expiryMode == 'date' %}
                  {{ course.expiryEndDate|date('Y-m-d ') }}剩余{{ course.expiryEndDate|time_diff }} 天
                {% else %}
                {{ member.createdTime|date_modify("+#{course.expiryDays} days") }}
                {{ member.createdTime|time_diff(course.expiryDays) }} 天
              </span>
            {% endif %}
            </li>
            <li>
              <p class="mb15 color-gray">
                <i class="es-icon es-icon-book mrm"></i>下一课
              </p>
              <span class="text-16">
                {% for toLearnTask in toLearnTasks %}
                {{ toLearnTask.title }}
                {% else %}
                暂无任务
                {% endfor %}
              </span>
            </li>
          </ul>
        </div>
        <div class="col-sm-2 text-center">
          {% for toLearnTask in toLearnTasks %}
            <a class="btn btn-primary btn-lg"
               href="{{ path('course_task_show',{courseId: course.id, id: toLearnTask.id}) }}">继续学习</a>
          {% endfor %}

        </div>
      </div>
    </section>
  </div>
</div>