{% extends 'v2/layout.html.twig' %}

{% set isMobileDevice = true %}

{% if isMobileDevice %}
  {% block header %}
  {% endblock %}
{% endif %}

{% block full_content %}
  <div class="cd-login-section">
    <div class="cd-panel third-party-panel">
      {% block panel %}
        <div class="cd-panel-heading third-party-panel__heading">
          {% block panel_heading %}
            <div class="cd-panel-title">
              {% block page_title %}{% endblock %}
            </div>
          {% endblock %}
        </div>
        <div class="cd-panel-body third-party-panel__body">
          {% block panel_body %}
          {% endblock %}
        </div>
      {% endblock %}
    </div>
  </div>
{% endblock %}

{% if isMobileDevice %}
  {% block footer %}
  {% endblock %}
{% endif %}