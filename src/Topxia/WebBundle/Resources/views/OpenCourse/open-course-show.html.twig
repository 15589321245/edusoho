{% extends 'TopxiaWebBundle::layout.html.twig' %}
{% set script_controller = 'open-course/open-course' %}

{% block full_content %}
  {% block top_content %}{% endblock %}
  
  <div class="container">
    {% block content %}
      <ol class="breadcrumb breadcrumb-o">
        <li><a href="{{ path('homepage') }}">首页</a></li>
        <li><a href="">公开课</a></li>
        <li>{{ course.title }}</li>
      </ol>
      <div class="row" style="margin:0">
        <!-- <div class="col-md-9 open-course-views">
          <img class="img-responsive" src="/assets/img/default/open-course-bg.jpg" alt="">
          <div class="mask">
            <div class="mask-content">
              <button class="btn btn-warning btn-lg mask-btn" style="margin-top:60px;">
                开始播放<i class="es-icon es-icon-playcircleoutline"></i>
              </button>
            </div>
          </div>
        </div> --> 
        {{ render(controller('TopxiaWebBundle:OpenCourse:header',{course:course})) }}
        
        <div class="col-md-3 open-course-tab">
          <ul class="clearfix">
            <li class="tab-header active"><i class="es-icon es-icon-staroutline prm"></i>推荐课程</li>
            {% if course.type == 'open' %}
              <li class="tab-header"><i class="es-icon es-icon-videocam prm"></i>课时列表</li>
            {% endif %}
          </ul  >
          <div id="content">
            <ul id="recommand-tab" >
              {% include 'TopxiaWebBundle:OpenCourse:recommend-course-list.html.twig'%}
            </ul>
            <ul id="live-tab" style="display:none">
              {% include 'TopxiaWebBundle:OpenCourse:open-course-lesson-list.html.twig'%}
            </ul>
          </div>
        </div>
      </div>
      <div class="open-course-detail row">

        {{ render(controller('TopxiaWebBundle:OpenCourse:infoBar',{courseId:course.id})) }}

        <div class="col-md-9">
          <div class="es-section gray-darker">
            {{ course.about|raw }}
            <img src="{{ filepath(course.smallPicture|default(''), 'course.png') }}" alt="{{ course.title }}" class="intro-img">
          </div>

          {{ render(controller('TopxiaWebBundle:OpenCourse:comment',{courseId:course.id})) }}
          
        </div>
        
        {{ render(controller('TopxiaWebBundle:OpenCourse:teachers',{courseId:course.id})) }}
    {% endblock %}
  </div>
  
  {% block bottom_content %}{% endblock %}
{% endblock %}
    