{% extends 'TopxiaAdminBundle:Classroom:layout.html.twig' %}
{% set menu = 'classroom' %}
{% block title %}班级管理{% endblock %}
{% set script_controller='classroom/classroom' %}
{% block main %}
  <div class="page-header">
    <a href="{{url('admin_classroom_add')}}" class="btn btn-info btn-sm pull-right" target="_blank">创建班级</a>
    <h1>班级管理</h1>
  </div>

  <form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

    <div class="form-group">
      <input class="form-control" type="text" placeholder="班级名称" name="title" value="{{ app.request.get('title') }}">
    </div>

    <button class="btn btn-primary">搜索</button>

  </form>
  {% if classroomInfo%}
  <table class="table table-striped table-hover" id="group-table">
    <thead>
    <tr>
      <th width="20%">班级名称</th>
      <th>课程数</th>
      <th>学员数</th>
      <th>价格</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>

   {% for classroom in classroomInfo %}

      {% include 'TopxiaAdminBundle:Classroom:table-tr.html.twig' with {classroom:classroom} %}

   {% endfor %}

    </tbody>

  </table>
  {% else %}
    <div class="empty">暂无班级信息!</div>
  {% endif %}
  <div class="pull-right">
 {{ web_macro.paginator(paginator) }}
</div>
{% endblock %}