{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block top_content %}
  <!--首页幻灯片开始-->

            {% set blocks = data('Blocks',{'codes':['qiushi:home_top_banner'] }) %}
  {% if blocks['qiushi:home_top_banner'] %}
  <div class="container jumbotron" style="position: relative;padding:0px!important">
<div class="hidden-xs hidden-sm col-md-3 col-lg-3" style="position: absolute; top:0; right:15px; z-index:1;">
          <div class="panel newcourse-list">
          <div class="cover"></div>
            <div class="panel-heading">最新课程列表</div>
            <div class="panel-body">
              <ul class="list-group">
              {% set lastestCourses = data('LatestCourses',{'count':7}) %}
                 {% for lastcourses in lastestCourses %}
                    <li class="list-group-item">
                      <span class="badge pull-left">{{ loop.index }}</span>
                      <a href="{{ path('course_show', {id:lastcourses.id}) }}" class="pull-left">{{ lastcourses.title | plain_text(9) }}</a>
                    {% if lastcourses.teachers %}
                              {% for teacher in lastcourses.teachers %}
                                {% if loop.index <= 5%}

                                   <a href="{{ path('user_show', {id:teacher.id}) }}" class="pull-right">{{ teacher.nickname }}</a>
                                 {% endif %}
                              {% endfor %}
                          {% endif %}
                      
                    </li>
                  {% endfor %}
              </ul>
            </div>
          </div>
        </div>
</div>

      <div id="carousel" class="carousel slide " data-ride="carousel">

{{ blocks['qiushi:home_top_banner']|raw }}

    </div>

  {% endif %}
              <!--首页幻灯片结束-->
{% endblock %}


