{% extends 'TopxiaAdminBundle:Course:layout.html.twig' %}

{% block title %}专栏管理 - {{ parent() }}{% endblock %}

{% set menu = 'column' %}
{% set script_controller = 'customadminbundle/controller/column/list' %}
{% block main %}

<div class="page-header clearfix">
  <button class="btn btn-info btn-sm pull-right" id="add-column-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_column_create') }}">新增专栏</button>    
  <h1 class="pull-left">专栏管理</h1>
</div>

<table id="column-table" class="table table-striped">
    <thead>
        <th width="10%">ID</th>
        <th width="10%">名称</th>
        <th width="30%">描述</th>
        <th width="30%">图片</th>
        <th width="10%">添加时间</th>
        <th width="10%">操作</th>
    </thead>
    <tbody>
      {% if columns %}
        {% for column in columns %}
          {% include 'CustomAdminBundle:Column:list-tr.html.twig' %}
        {% endfor %}
      {% else %}
       <tr><td colspan="20"><div class="empty">暂无专栏记录</div></td></tr>
      {% endif %}

    </tbody>
</table>

{{ web_macro.paginator(paginator) }}


{% endblock %}