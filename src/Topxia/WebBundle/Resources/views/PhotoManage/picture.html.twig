{% extends 'TopxiaWebBundle:PhotoManage:layout.html.twig' %}

{% block title %}相册图片 - {{ parent() }}{% endblock %}

{% set side_nav = 'picture' %}
{% set script_controller = 'photo-manage/file' %}
{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">
    相册照片
  </div>

  <div class="panel-body">
    <form id="course-picture-form" method="post" action="{{ path('photoview_manage_picture', {id:course.id}) }}" enctype="multipart/form-data">
      {{ web_macro.flash_messages() }}

      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <img src="/assets/img/default/course-default-475x250.png" />
        </div>
      </div>
      
      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <input type="file" name="picture">
          <p class="help-block">你可以上传jpg, gif, png格式的文件。</p>
        </div>
      </div>

      <div class="form-group clearfix">
        <div class="col-lg-offset-2 col-lg-8 controls">
          <button class="btn btn-fat btn-primary" id="upload-picture-btn" type="submit">上传</button>
        </div>
      </div>
       <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
      
    </form>

  </div>


  <div class="panel-heading">
    相册
  </div>

  <div class="panel-body">
      <ul class="photo-manage-list">
        {% for course in courses %}
          <li>
          <img  src="{{ file_path(course.url,'avatar.png') }}" class="photo-manage-img"/>
          <div class="photo-manage-tools btn-toolbar">
            <a class="btn-group photo-manage-item-del" href="javascript:"
              data-url="{{ path('photoview_manage_file_delete', {id:course.id}) }}"
            >
              <span class="glyphicon glyphicon-trash"></span>
            </a>
            <a class="btn-group photo-manage-item-set" href="#modal"
              data-toggle="modal" data-target="#modal" data-url="{{ path('photoview_manage_picture_info',{id:course.id}) }}"
            >
              <span class="glyphicon glyphicon-cog"></span>
            </a>
          </div>
        </li>
        {% else %}
          <tr><td colspan="6"><div class="empty">无专辑记录</div></td></tr>
        {% endfor %}
      </ul>
  </div>
</div>

{% endblock %}

