{% extends 'CustomWebBundle:FreeLimitCourse:layout.html.twig' %}


{% block content %}

<div class="es-row-wrap container-gap">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header"><h1>限免课程</h1></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="category-filters">
          <a href="{{ path('free_now_explore') }}" {% if type == 'freeNow' %}class="selected"{% endif %}>正在限免</a>        
          <a href="{{ path('free_coming_explore') }}" {% if type == 'freeComing' %}class="selected"{% endif %}>即将限免</a>
        </div>

        {% if courses %}
          {{ render(controller('TopxiaWebBundle:Course:coursesBlock', {courses:courses, view: 'list'})) }}
          {{ web_macro.paginator(paginator) }} 
        {% else %}
          <div class="empty">暂无限免无课程</div>
        {% endif %}
      </div>
    </div>
</div>

{% endblock %}