<tr>
  <td><input type="checkbox"  data-role="single-select" data-courseware-id="{{courseware.id}}"></td>
  <td>{{ courseware.title }}</td>
  <td>{{ knowledge.name|default(null) }}</td>
  <td>
    <a class="btn btn-link update-courseware-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_courseware_edit',{categoryId:category.id,id:courseware.id}) }}" data-toggle="tooltip" data-placement="bottom" title="编辑">
        <span class="glyphicon glyphicon-pencil"></span>
    </a>

    <a class="btn btn-link preview-courseware-btn" data-url="{{ path('admin_courseware_preview',{categoryId:category.id,id:courseware.id}) }}" data-toggle="modal" data-target="#modal" data-toggle="tooltip" data-placement="bottom" title="预览">
        <span class="glyphicon glyphicon-eye-open"></span>
    </a>

    <a class="btn btn-link delete-courseware-btn" data-url="{{ path('admin_courseware_delete',{id:courseware.id}) }}" data-toggle="tooltip" data-placement="bottom" title="删除">
        <span class="glyphicon glyphicon-trash"></span>
    </a>
  </td>  
</tr>