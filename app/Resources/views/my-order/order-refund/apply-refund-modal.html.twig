{% extends 'bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'cd-modal-dialog' %}

{% block title %}
  {{'申请退款'|trans}}
{% endblock %}

{% block body %}
  <form method="post"  id="refund-apply-form" action="{{path('my_order_refund_apply', {id: order.id })}}">
    <div class="form-group cd-form-group cd-form-group-action">
      <label for="reason">退款原因</label>
      <input type="text" id="reason" name="reason" required="required" class="form-control" placeholder="请输入退款原因">
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}

{% block footer %}
  <button class="btn cd-btn cd-btn-flat-default cd-btn-lg" type="button" data-dismiss="modal">取消</button>
  <button id="card-use-btn" class="btn cd-btn cd-btn-primary cd-btn-lg" type="submit" data-target="#card-use-form" data-toggle="form-submit" data-loading-text="{{ '正在提交' | trans }}">确定</button>
{% endblock %}
