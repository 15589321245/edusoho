
<div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="title">{{'标题'|trans}}</label>
    </div>
    <div class="col-md-9 controls">
		<input id="title" class="form-control" type="text" name="title" value={{activity.title|default('')}}>
	</div>
</div>

<div class="row form-group">
    <div class="col-md-2 control-label">
    	<label for="text-content-field" class="style1">{{'内容'|trans}}</label>
    </div>
    <div class="col-md-9 controls">
      <textarea class="form-control" id="text-content-field" name="content"
      data-image-upload-url="{{ path('editor_upload', {token:upload_token('course')}) }}"
      data-flash-upload-url="{{ path('editor_upload', {token:upload_token('course', 'flash')}) }}" data-image-download-url="{{ path('editor_download', {token:upload_token('course')}) }}"
      >
      	{{activity.content|default('')}}
      </textarea>
    </div>
</div>

<script>app.load('activitybundle/controller/activity-manage/text-activity-fields')</script>