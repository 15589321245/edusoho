<div class="toolbar toolbar-open">
	<form class="form-inline well well-sm" style="margin-top:20px;"action="" method="get" novalidate>
		<div class="form-group">
			<select class="form-control" name="target" style="width:150px;">
				{{ select_options(targetChoices, app.request.query.get('target'))}}
			</select>
		</div>

		<div class="form-group">
			<input type="text" id="keyword" name="keyword" class="form-control" value="{{ app.request.query.get('keyword') }}" placeholder="关键词"></div>

		<button class="btn btn-primary btn-sm">搜索</button>
	</form>

      <table class="table table-striped table-hover" id="quiz-table">
      	<thead>
      		<tr>
      			<th width="10%"></th>
      			<th width="40%">题干</th>
      			<th>类型</th>
      			<th>难度</th>
      			<th>操作</th>
      		</tr>
      	</thead>
      	<tbody>
      		{# {% for question in questions %}
           {% include 'TopxiaWebBundle:Marker:question-tr.html.twig' %}
        {% else %}
      		<tr>
      			<td colspan="20">
      				<div class="empty">一道题都没有，请点击右上角按钮，按不同的题型录入题目</div>
      			</td>
      		</tr>
      		{% endfor %} #}
      	</tbody>
      </table>
</div>

