{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}通知 - {{ parent() }}{% endblock %}
{% set script_controller = 'message/notification-list' %}

{% block content %}
<div class="row row-8">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default panel-page">
      <div class="panel-heading">
        <h2> 通知 </h2>
      </div>
      <ul class="media-list notification-list">
      {% if batchnotification %}
        <div class="row form-group">
		    <div class="col-md-2 control-label">
		      <label for="title">标题</label>
		    </div>
		    <div class="col-md-7 controls">
		      {{ batchnotification.title }}
		    </div>
		  </div>

  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="content">正文</label>
    </div>
    <div class="col-md-7 controls">
      {{ batchnotification.content|raw }}
    </div>
  </div>

        {% else %}
          <li class="empty">暂无通知</li>
        {% endif %}
      </ul>


    </div><!-- /panel -->
  </div>
</div>

{% endblock %}