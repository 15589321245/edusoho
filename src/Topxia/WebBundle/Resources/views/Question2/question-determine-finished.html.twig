{% extends 'TopxiaWebBundle:Question2:question-base-layout.html.twig' %}

{% block heading %}
  {{ question.stem|bbCode2Html|raw }}
{% endblock %}

{% block body %}

{% endblock %}

{% block footer %}
	 {% set rightAnswerIndex = question.answer %}

	  <div class="question-result">
		 正确答案是: <strong style="color:red">{% if rightAnswerIndex == 1 %} 正确 {% else %} 错误 {% endif %}</strong>，
	    {% if result.status == 'right' %}
		   <span class="glyphicon glyphicon-ok question-text-success"></span> 你答对了
	    {% elseif result.status == 'wrong' %}
	       <span class="glyphicon glyphicon-remove question-text-danger"></span> 你答错了
	    {% elseif result.status == 'noAnswer' %}
	　　　  <span class="glyphicon glyphicon-remove question-text-danger"></span> 你未答题
	    {% endif %}
	</div>
	{% include 'TopxiaWebBundle:Question2:question-actions.html.twig' with {flags:['mark','favorite', 'analysis']}%}
{% endblock %}