{% extends 'courseset-manage/layout.html.twig' %}
{% block title %}{{'营销设置'|trans}} - {{ course.title }} - {{ parent() }}{% endblock %}

{% set side_nav = 'marketing' %}
{% do script(['libs/jquery-validation.js','libs/perfect-scrollbar.js','libs/bootstrap-datetimepicker.js','app/js/course-manage/marketing/index.js']) %}


{% block main %}
  <div class="panel panel-default">
      {% include 'course-manage/panel-header/course-publish-header.html.twig' with {code: side_nav} %}
    <div class="panel-body">
      <form id="course-marketing-form" class="form-horizontal"
        action="{{path('course_set_manage_course_marketing', {courseSetId: courseSet.id, courseId: course.id})}}" method="post">
        <div class="form-group">
          <label class="col-sm-2 control-label">{{'收费免费'|trans}}</label>
          <div class="col-sm-8 radios">
            {{ radios('isFree', {'1': '免费'|trans,'0': '收费'|trans}, course.isFree|default(0)) }}
          </div>
        </div>

        <div class="form-group js-is-free {% if course.isFree|default(0) == 1 %}hidden{% endif %}"  data-role="tab-content">
          <label class="col-sm-2 control-label" for="course_price" >{{'价格'|trans}}</label>
          <div class="col-sm-6">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
            <input class="form-control width-150 mrs" id="course_price" type="text" name="originPrice" value="{{course.originPrice|default(0)}}" >{{'元'|trans}}
          </div>
        </div>

        {{ slot('course.marketing.setting', {'course':course}) }}

        <div class="form-group js-is-free {% if course.isFree|default(0) == 1 or courseSet.type == 'live' %} hidden {% endif %}">
          <label class="col-sm-2 control-label">{{'设置免费学习任务'|trans}}</label>
          <div class="col-sm-8">
            <ul class="list-group mb0 pb0 task-price-setting-group js-task-price-setting"> 
              {% for task in canFreeTasks %}             
              <li class="list-group-item {% if freeTasks[task.id]|default(null) %} open {% endif %} {% if loop.index == canFreeTasks|length %} mb5 {% endif %}">
                <input type="checkbox" class="mr10" name="freeTaskIds[]" value="{{ task.id }}" {% if freeTasks[task.id]|default(null) %}checked {% endif %}>
                {% set meta = activity_meta(task.type) %}
                <i class="{{ meta.icon }} color-gray" data-toggle="tooltip" data-placement="top" title="" data-container="body" data-original-title="{{ meta.name }}任务"></i>
                <span class="inline-block vertical-middle text-overflow title">任务{{ loop.index }}：{{ task.title }} </span>
                <span class="label label-warning pull-right price">免费</span>
              </li>
              {% endfor %}
            </ul>
            <div class="help-block ">免费任务仅支持图文、视频、音频、flash、文档、PPT </div>            
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">设置购买截止日期</label>
          <div class="col-sm-8 radios">
            {{ radios('enableBuyExpiryTime', {'1': '是', '0': '否'}, course.buyExpiryTime|default(0) > 0 ? 1 : 0 ) }}
          </div>
        </div>

        <div class="form-group {% if course.buyExpiryTime == 0 %}hidden{% endif %} " id="buyExpiryTime" >
          <label class="col-sm-2 control-label">购买截止日期</label>
          <div class="col-sm-8">
            <input type="text" class="form-control width-input width-input-large" name="buyExpiryTime" value="{% if course.buyExpiryTime > 0 %}{{course.buyExpiryTime|date_format('Y-m-d')}}{% endif %}">
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">{{'加入方式'|trans}}</label>
          <div class="col-sm-10 radios">
            {{ radios('buyable', { '1': '学员自己加入学习，也可以由老师来添加学员。'|trans, '0': '只能由老师添加／移除学员，学员自己无法加入，常用于封闭型教学。'|trans }, course.buyable|default(1)) }}
          </div>
        </div>

        {% if courseSet.type|default('normal') != 'live' %}
          <div class="form-group">
            <label class="col-sm-2 control-label">{{'开启视频试看'|trans}}</label>
            <div class="col-sm-8 radios">
              {{ radios('tryLookable', { '1': '是'|trans, '0': '否'|trans }, course.tryLookable|default(0)) }}
              <div class="help-block">{{'常用于收费视频内容的前几分钟免费试看'|trans}}</div>
            </div>
          </div>
        {% endif %}
        <div class="form-group js-enable-try-look {% if course.tryLookable|default(0) == 0 %}hidden{% endif %}">
          <label class="col-sm-2 control-label" for="tryLookLength">{{'试看时长'|trans}}</label>
          <div class="col-sm-8 ">
            <input class="form-control width-150 mrs" type="text" id="tryLookLength"  name="tryLookLength"   value="{% if course.tryLookLength|default(1) <= 0 %}1{% else %}course.tryLookLength|default(1){% endif %}">分钟
          </div>
        </div>
        {% if setting('magic.lesson_watch_limit') %}
        <div class="form-group">
          <label class="col-sm-2 control-label">{{'视频观看时长限制'|trans}}</label>
          <div class="col-sm-8">
            <input class="form-control width-150 mrs" type="text" name="watchLimit" value="{{course.watchLimit|default(0)}}">{{'倍单视频总时长'|trans}}
            <div class="help-block">{{'0表示无限制'|trans}}</div>
          </div>
        </div>
        {% endif %}
        <div class="form-group">
          <label class="col-sm-2 control-label">实名认证</label>
          <div class="col-sm-8 radios">
            {{ radios('approval', { '1': '是'|trans, '0': '否'|trans }, course.approval|default(0)) }}
            <div class="help-block">设置该值后，学员购买课程前，必须先去申请实名认证。</div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">{{'承诺提供服务'|trans}}</label>
          <div class="col-sm-8 form-control-static">
            {% set serviceTags = services(course.services|default([])) %}
            {% for tag in serviceTags %}
              <a
              class="label label-md js-service-item mr10 mb10 inline-block {% if tag.active %}label-primary{% else %}label-default{% endif %}"data-container="body"
              data-toggle="popover"
              data-trigger="hover"
              data-placement="top"
              data-content="{{tag.summary}}"
              >{{ tag.full_name }}</a>
            {% endfor %}
            <input type="hidden" id="course_services" name="services" value="{{course.services|default([])|json_encode_utf8()}}">
            </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <button id="course-submit" type="button" class="btn btn-primary" data-loading-text="{{ '正在保存...'|trans }}">{{ '保存'|trans }}</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block course %}
{% endblock %}
