<div class="form-group">
  <label class="control-label col-md-3">链接文本</label>
  <div class="col-md-9">
    <input class="form-control" type="text" name="data[{{ code }}][items][{{ dataId }}][value]" value="{{ data.value|default('') }}">
  </div>
 </div>
 <div class="form-group">
  <label class="control-label col-md-3">链接地址</label>
  <div class="col-md-9">
    <input class="form-control" type="text" name="data[{{ code }}][items][{{ dataId }}][href]" value="{{ data.href|default('') }}" >
  </div>
 </div>
 <div class="form-group">
  <label class="control-label col-md-3">打开新窗口</label>
  <label class="checkbox-inline"><input type="radio" name="data[{{ code }}][items][{{ dataId }}][target]" value="_blank" {% if data.target|default('_self') == '_blank' %} checked="checked" {% endif %}> 是</label>
  <label class="checkbox-inline"><input type="radio" name="data[{{ code }}][items][{{ dataId }}][target]" value="_self" {% if data.target|default('_self') == '_self' %} checked="checked" {% endif %}> 否</label>
 </div>
