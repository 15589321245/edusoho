{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set script_controller = 'user/approved' %}

{% set menu = 'admin_approval_approving' %}

{% block main %}

      <div class="btn-group">
          <a type="button" class="btn btn-default btn-sm" href="{{ path('admin_approval_approving') }}"> {{'审核中'|trans}}</a>

          <a type="button" class="btn btn-default btn-sm btn-primary" href="{{ path('admin_approval_approved') }}"> {{'审核成功'|trans}}</a>

      </div>

{% if users %}
<table id="user-table" class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th> {{'用户昵称'|trans}}</th>
      <th> {{'真实姓名'|trans}}</th>
      <th> {{'身份证号码'|trans}}</th>
      <th> {{'邮件'|trans}}</th>
      <th> {{'申请时间'|trans}}</th>
      <th> {{'操作'|trans}}</th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}
    <tr id="user-table-tr-{{ user.id }}">
        <td>{{user.id }}</td>
        <td><strong>{{ admin_macro.user_link(user) }}</strong></td>
        <td>{{userProfiles[user.id].truename}}</td>
        <td>{{userProfiles[user.id].idcard}}</td>
        <td>{{user.email}}</td>
        <td>{{user.approvalTime | date('Y-m-d H:i')}}</td>
        <td>
            <div class="btn-group">
              <a href="#modal" data-toggle="modal" data-url="{{ path('admin_approval_info_view', {id:user.id}) }}" class="btn btn-default btn-sm"> {{'查看'|trans}}</a>

              <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </a>
              
              <ul class="dropdown-menu">
                <li><a data-url="{{ path('admin_approval_cancel', {id:user.id}) }}" class ="btn cancel-approval"> {{'撤销'|trans}}</a></li>
              </ul>
            </div>
        </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{{ web_macro.paginator(paginator) }}
{% else %}
  <div class="empty"> {{'暂无已经审核成功的实名认证用户'|trans}}</div>
{% endif %}

{% endblock %}
