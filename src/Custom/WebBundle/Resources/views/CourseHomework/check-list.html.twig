{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}
{% import 'TopxiaWebBundle::macro.html.twig' as macro %}

{% block title %}作业批改 - {{ parent() }}{% endblock %}

{% set side_nav = 'homeworkCheck' %}
{% set parentId = parentId | default(null) %}
{% set script_controller = 'test-paper/index' %}

{% block main %}

    <div class="panel panel-default panel-col">

        <div class="panel-heading">
            作业批改
        </div>
        <div class="panel-body">
            <ul class="nav nav-tabs">
                <li class="{% if status == 'reviewing' %}active{% endif %}">
                    <a href="{{ path('course_homework_check_list', {courseId:course.id, status:'reviewing'}) }}">未批改
                        <span class="badge">{{ reviewingCount }}</span></a>
                </li>
                <li class="{% if status == 'finished' %}active{% endif %}">
                    <a href="{{ path('course_homework_check_list', {courseId:course.id, status:'finished'}) }}">已批改
                        <span class="badge">{{ finishedCount }}</span></a>
                </li>
                <li class="{% if status == 'pairReviewing' %}active{% endif %}">
                    <a href="{{ path('course_homework_check_list', {courseId:course.id, status:'pairReviewing'}) }}">互评中
                        <span class="badge">{{ pairReviewingCount }}</span></a>
                </li>
            </ul>
            <br>

            <table class="table table-striped table-hover">
                <tbody>

                {% if homeworkResults|default(null) %}
                    {% for key,homeworkResult in homeworkResults %}
                        {% set userId = users[homeworkResult.userId].id %}
                        {% set user = users[homeworkResult.userId] %}
                        {% set lesson = lessons[homeworkResult.lessonId]|default(null) %}
                        {% if lesson %}
                            {% set lessonUrl = path('course_learn', {id:course.id}) ~ '#lesson/' ~ lesson.id %}
                        {% endif %}
                        <tr>
                            <td class="media">
                                {{ web_macro.user_avatar(user, 'pull-left') }}
                                <a target="_blank" href="{{ path('user_show', {id:user.id}) }}">{{ user.nickname }}</a>

                                <div class="clear-fix text-sm">
                                    {% if lesson %}
                                        <div class="pull-left"><a class="text-success"
                                                                  href="{{ lessonUrl }}">第 {{ lesson.number }}课时</a>
                                        </div>
                                    {% endif %}
                                    <div class="mll text-muted pull-left">
                                        提交时间：{{ homeworkResult.usedTime|date('Y-n-d H:i') }}</div>
                                </div>
                            </td>

                            <td>
                                {% if status == 'reviewing' or status == 'pairReviewing' %}
                                    <a href="{{ path('homework_review_create', {homeworkResultId:homeworkResult.id}) }}"
                                       class="btn btn-default btn-sm pull-right">批改</a>
                                {% else %}
                                    <a class="btn btn-default btn-sm pull-right"
                                       href="{{ path('course_homework_result',{courseId:course.id,homeworkId:homeworkResult.homeworkId,resultId:homeworkResult.id, userId:userId }) }}"
                                       target="_blank">查看</a>
                                {% endif %}
                            </td>

                        </tr>
                    {% endfor %}

                {% else %}
                    {% if status == 'reviewing' %}
                        <div class="empty">没有需要批改的作业</div>
                    {% else %}
                        <div class="empty">没有已批改的作业</div>
                    {% endif %}
                {% endif %}

                </tbody>
            </table>

            {{ web_macro.paginator(paginator) }}
        </div>
    </div>

{% endblock %}