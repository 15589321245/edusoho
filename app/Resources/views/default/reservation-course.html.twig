{% if is_plugin_installed('reservation') %}
  {% set count = config.count|default(12) %}
  {% set orderBy = config.orderBy|default('')%}
  {% set courseSets = data('ReservationCourseSets',{'count':count, 'orderBy':orderBy}) %}

  {% if courseSets %}
    <section class="course-list-section reservation-course-list-section {{config.background|default("")}}" id="reservation-course-list-section">

      <div class="container">
        <div class="text-line">
          <h5><span>{{ config.title|default(config.defaultTitle|default('')) }}</span><div class="line"></div></h5>
          <div class="subtitle">{{ config.subTitle|default(config.defaultSubTitle)|trans }}</div>
        </div>

        <div class="course-list">
          <div class="row">
            {% for courseSet in courseSets %}
              <div class="col-lg-3 col-md-4 col-xs-6">
                {% include 'course/widgets/course-grid.html.twig' with {courseSet: courseSet} %}
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="section-more-btn">
          <a href="{{ path('course_set_explore', {filter: {type: 'reservation',price: 'all',currentLevelId: 'all'},orderBy: orderBy}) }}" class="btn btn-default btn-lg">
            {{'site.datagrid.filter.course_more'|trans}} <i class="mrs-o es-icon es-icon-chevronright"></i>
          </a>
        </div>
      </div>
    </section>
  {% endif %}

{% endif %}
