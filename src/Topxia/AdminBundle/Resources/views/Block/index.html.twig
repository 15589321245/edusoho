  <thead>
    <tr>
      <th width="50%">标题</th>
      <th width="25%">最近更新</th>
      <th width="25%">操作</th>
    </tr>
  </thead>
  <tbody>
    {% if blocks %}
      {% for block in blocks %}
        {% include 'TopxiaAdminBundle:Block:list-tr.html.twig' %}
      {% endfor %}
  {% else %}
        <tr><td colspan="20"><div class="empty">暂无编辑区记录</div></td></tr>
  {% endif %}
   </tbody>
</table>

 {{ web_macro.paginator(paginator) }} 
