{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{% if category.id %}编辑分类{% else %}添加分类{% endif %}{% endblock %}

{% block body %}
	<form id="category-form" class="form-horizontal" action="{% if category.id %}{{ path('admin_category_edit', {id:category.id}) }}{% else %}{{ path('admin_category_create') }}{% endif %}" method="post">
		<div class="form-group">
			<label class="col-lg-2 control-label" for="category-name-field">名称</label>
			<div class="col-lg-8 controls">
				<input class="form-control" id="category-name-field" type="text" name="name" value="{{ category.name }}">
			</div>
		</div>

		<div class="form-group">
			<label class="col-lg-2 control-label" for="category-weight-field">序号</label>
			<div class="col-lg-8 controls">
				<input class="form-control" id="category-weight-field" type="text" name="weight" value="{{ category.weight }}">
				<div class="help-block">序号需为整数，分类按序号的顺序排序。</div>
			</div>
		</div>

		<div class="form-group">
			<label class="col-lg-2 control-label" for="category-code-field">编码</label>
			<div class="col-lg-8 controls">
				<input class="form-control" id="category-code-field" type="text" name="code" value="{{ category.code }}" data-url="{{ path('admin_category_checkcode', {exclude:category.code}) }}">
				<div class="help-block">选填，建议使用分类名称的英文单词或缩写作为编码。</div>
			</div>
		</div>
		<input type="hidden" name="groupId" value="{{ category.groupId }}">
		<input type="hidden" name="parentId" value="{{ category.parentId }}">
	</form>

	<div>

	</div>


	<script type="text/javascript"> app.load('category/save-modal') </script>
{% endblock %}

{% block footer %}
	{% if category.id %}
		<button type="button" class="btn btn-default pull-left delete-category" data-url="{{ path('admin_category_delete', {id:category.id}) }}"><i class="glyphicon glyphicon-trash"></i> 删除</button>
	{% else %}

	{% endif %}
  <button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
	<button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#category-form">保存</button>
{% endblock %}