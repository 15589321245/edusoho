{% extends 'activity-layout.html.twig' %}

{% block head_scripts %}
  {{ parent() }}
  <base target="_blank">
{% endblock %}

{% do script(['libs/ltc-sdk.js', 'libs/perfect-scrollbar.js', 'textactivity/js/show/index.js']) %}
{% set enableCopy  = setting('course.copy_enabled') %}
{% block body %}
  <div class="iframe-parent-content iframe-parent-full" id="text-activity" data-finish-time="{{ activity.ext.finishDetail }}" data-disable-copy="{{ enableCopy }}">
    <div class="text-activity-content">{{ activity.content|raw }}</div>
  </div>
{% endblock %}