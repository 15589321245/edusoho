{% extends 'TopxiaAdminBundle:App:layout.html.twig' %}

{% block title %}已安装应用 - {{ parent() }}{% endblock %}

{% set script_controller = 'app/installed' %}

{% set menu = 'installed' %}

{% block main %}
  <div class="page-header">
    <h1>已安装应用</h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>应用描述</th>
        <th>开发者</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      {% for app in apps %}
      <tr>
        <td>
          <div><strong class="text-primary">{{ app.name }} - </strong><span class="text-info">{{ app.version }}</span></div>
          <div class="">{{ app.description|plain_text(100) }}</div>
          <div class="text-muted"><small>最后更新： {{ app.updatedTime|date('Y-m-d') }}</small></div>
        </td>
        <td>
          {{ app.developerName }}
        </td>
        <td>
          <a href="#" class="btn btn-primary">管理</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}