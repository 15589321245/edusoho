{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% block title %}{% if essay|default(null) %}编辑{% else %}添加{% endif %}文章{% endblock %}
{% block body %}
	<div id="essay-creater-widget">
	<form id="essay-form" class="form-horizontal" action="{% if essay|default(null) %}{{ path('admin_essay_edit',{categoryId:category.id,id:essay.id}) }}{% else %}{{ path('admin_essay_create',{categoryId:category.id}) }} {% endif %}" method="post">

		<div class="form-group">
			<label class="col-md-2 control-label" for="essay-title-field">
				标题
			</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="essay-title-field" type="text" name="title" value="{{ essay.title|default(null) }}" >
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-2 control-label" for="essay-description-field">
				简介
			</label>
			<div class="col-md-8 controls">
				<textarea class="form-control" id="essay-description-field" type="text" name="description" value="{{ essay.description|default(null) }}" >{{ essay.description|default(null) }}</textarea>
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-2 control-label" for="essay-source-field">来源</label>
			<div class="col-md-8 controls">
				<input class="form-control" id="essay-source-field" name="source" tabindex="4" value="{{ essay.source|default(null) }}">
			</div>
		</div>


		<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
	</form>

</div>
<script type="text/javascript">
app.load('essay/modal')
</script>
{% endblock %}

{% block footer %}

	<button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">取消</button>
	<button id="essay-operate-btn" data-loading-text="正在提交" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#essay-form" tabindex="5" data-url="{% if essay|default(null) %}{{ path('admin_essay_edit',{categoryId:category.id,id:essay.id}) }}{% else %}{{ path('admin_essay_create',{categoryId:category.id}) }} {% endif %}">{% if essay|default(null) %}确认编辑{% else %}创建文章并添加内容{% endif %}</button>

{% endblock %}