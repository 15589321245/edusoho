<div class="form-group">
    <label for="testpaper-choose" class="col-sm-2 control-label">试卷选择</label>
    <div class="col-sm-10">

      <div class="testpaper-chooser-bar hide">
          <span data-role="testpaper-placeholder" {% if testpaper|default(null) %} data-id="{{ testpaper.id }}"{% endif %}>{{ testpaper.title|default('') }}</span>
          <div class="btn btn-link btn-sm" data-role="testpaper-trigger"><i class="glyphicon glyphicon-edit"></i>编辑</div>
      </div>

      <div class="testpaper-chooser">

        <div class="form-group">
          <label class="col-md-2 control-label" for="testpaper-mainKnowledgeId-field">
            主知识点
          </label>
          <div class="col-md-8 controls">
            {% include 'CustomWebBundle:Tag:tagchooser-knowledge.html.twig' with {id: 'mainKnowledge-chooser-for-testpaper', categoryId: category.id} %}
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-2 control-label" for="testpaper-relatedKnowledgeIds-field">
            标签
          </label>
          <div class="col-md-8 controls">
            {% include 'CustomWebBundle:Tag:tagchooser.html.twig' with {id: 'tag-chooser-for-testpaper', type: 'question'} %}
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-2  control-label">
            关键词
          </label>
          <label class="col-md-8 controls">
            <input type="text" id="testpaperKeyword" name="testpaperKeyword" class="form-control" value="{{ app.request.query.get('testpaperKeyword') }}" placeholder="请输入标题关键词">
          </label>
            <div  class="btn btn-primary" data-role="search-testpapers-btn" data-url="{{ path('json_testpaper_search') }}"　data-loading-text="正在搜索...">搜索</div>
        </div>
        <div class="search-testpaper-result">
          <table class="table table-hover table-condensed table-bordered search-testpaper-result-table">
            <thead>
              <tr><th>名称</th></tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
<input type="hidden" name="flag"  data-role="operate-flag-testpaper" value="{{ testpaper.id|default(0) }}">