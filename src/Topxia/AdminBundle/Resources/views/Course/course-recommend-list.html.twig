{% extends 'TopxiaAdminBundle:Course:layout.html.twig' %}

{% block title %}{{ getTitle('admin_course_recommend')}}{% endblock %}


{% set script_controller = 'course/recommend-list' %}

  {% set menu = 'admin_course_show' %}
  {% set type = 'admin_course_recommend'  %}
  {% set menus = permissions('admin_course_show', 1) %}

{% block main %}

{% include 'TopxiaAdminBundle::tab.html.twig' with {menus:menus,type:type} %}
  <table class="table table-striped table-hover mtl" id="course-recommend-table">
    <thead>
    <tr>
      <th>顺序号</th>
      <th width="50%">课程名称</th>
      <th>创建者</th>
      <th>推荐时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for course in courses %}
        {% set user = users[course.userId]|default(null) %}
        {% set category = categories[course.categoryId]|default(null) %}
        {% include 'TopxiaAdminBundle:Course:course-recommend-tr.html.twig' %}
      {% else %}
        <tr><td colspan="20"><div class="empty">暂无推荐课程</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}

{% endblock %}