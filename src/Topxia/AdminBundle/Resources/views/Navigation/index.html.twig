{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% set script_controller = 'navigation/page' %}
{% set menus = menus("admin",'admin_setting', 1) %}
{% set menu = 'admin_setting' %}
{% set types = {top:'顶部', foot:'底部'} %}
{% set submenu = 'admin_'~type~'_navigation' %}
{% block title %}{{ getTitle('admin_'~type~'_navigation')}}{% endblock %}

{% block main %}

<div class="mbl">

{% include 'TopxiaAdminBundle::tab.html.twig' with {menus:menus,type:submenu} %}
</div>

<div class="clearfix well well-sm">
  <button class="btn btn-info btn-sm pull-right" id="add-navigation-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_navigation_create', {type: type}) }}">新增{{ types[type] }}导航</button>
</div>

<table id="navigation-table" class="table table-striped table-hover navigation-table">
	<thead>
	  <tr>
	    <th width="50%">名称</th>
	    <th width="10%">新开窗口</th>
	    <th width="10%">状态</th>  
	    <th width="30%">操作</th>
	  </tr>
	</thead>
    
 	{% include 'TopxiaAdminBundle:Navigation:tbody.html.twig' %}
</table>
    


{% endblock %}
