{% extends 'old-bootstrap-modal-layout.html.twig' %}


{% set modalSize = 'large' %}

{% block title %}{{'classroom.student_remark'|trans}}{% endblock %}
{% block body %}

<form id="student-remark-form" method="post" action="{{ path('classroom_manage_student_remark', {classroomId:classroom.id, userId:user.id}) }}" data-user="{{default.user_name|default('classroom.student'|trans)}}">

  <div class="form-group">
    <div class="controls">
    	<input class="form-control" id="student-remark" name="remark" value="{{member.remark}}" >
      <div class="help-block">{{'classroom.student_remark_tips'|trans}}</div>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>

{% endblock %}

{% block footer %}
  <button type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#student-remark-form">{{'form.btn.save'|trans}}</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'form.btn.cancel'|trans}}</button>
{% include 'seajs_loader_compatible.html.twig' with {topxiawebbundle: true} %}
  <script>app.lazyLoad = function() { app.load('topxiawebbundle/controller/classroom/student-remark') };</script>
{% endblock %}
