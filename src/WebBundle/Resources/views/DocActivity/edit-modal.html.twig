{% extends 'WebBundle:Activity:activity-form-layout.html.twig' %}
{% do script(['http://cdn.qiqiuyun.net/js-sdk/uploader/v1/sdk.js', 'web/activity-manage/doc/index.js']) %}
{% set mediaType = 'document' %}
{% block activity_content %}
  <div class="form-group">
    <div class="col-xs-2 control-label">
      <label for="media" class="style">文档</label>
    </div>
    <div class="hidden-data">
      <input type="hidden" value="{{ doc.mediaId|default(0) }}" name="mediaId" id="mediaId"/>
    </div>
    <div id="file-choose-type" class="hidden" data-type="doc"></div>
    {% include 'WebBundle:FileChooser:file-choose.html.twig' %}
  </div>
{% endblock %}

{% block activity_finish %}
  <div class=" form-group">
    <div class="col-xs-2 control-label">
      <label for="condition-select">{{ '完成条件'|trans }}</label>
    </div>
    <div class="col-xs-4 controls">
      <select class="form-control" id="condition-select" name="finishType">
        <option value="click" {% if doc.finishType|default('click') == 'click'
  %}selected{% endif %}>点击看过了</option>
        <option value="time" {% if doc.finishType|default('click') == 'time' %}selected{% endif %}>至少观看X分钟</option>
      </select>
    </div>
  </div>
  <div class="form-group {% if doc.finishType|default('click') != 'time' %}hidden{% endif %}" id="condition-group">
    <div class="col-xs-2 control-label">
      <label for="condition-detail">{{ '至少观看'|trans }}</label>
    </div>
    <div class="col-xs-4 controls">
      <input id="condition-detail" class="form-control" type="text" name="finishDetail" value="{{ doc.finishDetail|default(1) }}">
    </div>
    <div class="col-xs-4 controls">
      <p class="form-control-static">分钟</p>
    </div>
  </div>
{% endblock %}
