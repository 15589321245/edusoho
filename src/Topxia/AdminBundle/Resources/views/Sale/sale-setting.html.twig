{% extends 'TopxiaAdminBundle:Sale:layout.html.twig' %}

{% block title %}全局设置 - {{ parent() }}{% endblock %}

{% set menu = 'admin_sale_setting' %}

{% set script_controller = 'sale/linksale-web-setting' %}

{% block main %}
<div class="page-header"><h1>网站链接推广佣金设置</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" id="linksale-web-form" novalidate>

  <fieldset>
    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommissionType-field">佣金计算类型</label>
      <div class="col-md-6 controls">
        <div class="controls col-md-8 radios">
          {{ radios('webCommissionType', {'ratio':'比例'}, linksaleWebSetting.webCommissionType) }}
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommission-field">佣金额度</label>
      <div class="col-md-6 controls">
        

         <div class="input-group">
          <input class="form-control" id="course-adCommission-field" type="text" name="webCommission" value="{{ linksaleWebSetting.webCommission }}" required/>
          <span class="input-group-addon">%</span>
        </div>
        
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="course-adCommissionDay-field">有效天数</label>
      <div class="col-md-6 controls">
        <input class="form-control" id="course-adCommissionDay-field" type="text" name="webCommissionDay" value="{{ linksaleWebSetting.webCommissionDay }}" >
      </div>
    </div>

  </fieldset>
  <br>

  <div class="form-group">
    <div class="controls col-md-offset-3 col-md-8">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>

{% endblock %}