{% extends 'TopxiaWebBundle:Question:question-base-layout.html.twig' %}

{% block heading %}
  {{ question.stem|bbCode2Html|raw }}
{% endblock %}

{% block body %}

  {% include 'TopxiaWebBundle:Question:question-choice-options.html.twig' %}

{% if itemResult.answer %}
  {% set answerChoiceIndex = (65+itemResult.answer)|chr %}
{% endif %}

  <div class="question-choices-inputs">
    {% for key, choice in question.metas.choices %}
      {% set choiceIndex = (65+key)|chr %}
      <label class="checkbox-inline">
        <input id="question-{{ question.id }}-input-{{ choiceIndex }}" type="checkbox" name="answer[{{ question.id }}][]" value="{{ key }}"  {% if answerChoiceIndex|default('') == choiceIndex %}checked{% endif %}> {{ choiceIndex }}
      </label>
    {% endfor %}
  </div>

{% endblock %}

{% block footer %}

{% endblock %}