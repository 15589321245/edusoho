{% extends 'TopxiaAdminBundle:OpenCourseAnalysis:layout.html.twig' %}

{% set nav = 'conversion' %}
{% block analysis_content %}

	<table class="table table-striped table-hover" id="course-table" style="word-break:break-all;">
    <thead>
	    <tr>
	      <th width="35%">{{ '课程名称'|trans }}</th>
	      <th width="35%">{{ '购买转化数'|trans }}</th>
	      <th>{{ '课程点击数'|trans }}</th>
	      <th>{{ '购买转化率'|trans }}</th>
	    </tr>
    </thead>
    <tbody>
      {% for refererLog in refererLogs %}
        {% set course = courses[refererLog.targetId]|default(null)%}
        {% include 'TopxiaAdminBundle:OpenCourseAnalysis/Conversion:table-tr.html.twig' %}
      {% else %}
        <tr><td colspan="20"><div class="empty">{{ '暂无记录'|trans }}</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  <div>
  	总购买转化率：
		{% if totalData.orderCount and totalData.visitCount %}
			{{ (totalData.orderCount / totalData.visitCount * 100 )|number_format(2,'.') }} %
		{% else %}
			0 %
		{% endif %}
  </div>
  {{ web_macro.paginator(paginator) }}
{% endblock %}