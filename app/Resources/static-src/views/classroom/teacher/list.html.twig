{% extends 'classroom/content-layout.html.twig' %}

{% set nav = 'teachers' %}
{% block description %}{{ classroomDescription|default('')|plain_text(100) }}{% endblock %}

{% block main %}
  {% do load_script('topxiawebbundle/controller/classroom/detail/teacher-list') %}
  {% include 'seajs_loader_compatible.html.twig' with {'topxiawebbundle':true} %}

  <div class="teacher-list no-shadow row">
  {% for teacher in teachers %}
    {% set isFollowed = (teacher.id in Myfollowings)|default(false) %}
    {% set member = members[teacher.id] %}
    {% include 'classroom/teacher/item.html.twig' %}
  {% endfor %}
  </div>

{% endblock %}
