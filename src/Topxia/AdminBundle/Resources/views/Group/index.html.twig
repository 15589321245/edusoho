{% extends 'TopxiaAdminBundle:Group:layout.html.twig' %}
{% set menu = 'group' %}
{% block title %}小组管理{% endblock %}
{% set script_controller='group/group' %}
{% block main %}
  <div class="page-header">
    <h1>小组管理</h1>
  </div>

  <form id="message-search-form" class="form-inline well well-sm" action="" method="get" novalidate>

    <div class="form-group">

      <select class="form-control" name="status">
        {{ select_options(dict('groupstatus'), app.request.query.get('status'), '小组状态') }}
      </select>

    </div>

    <div class="form-group">
      <input class="form-control" type="text" placeholder="小组名" name="title" value="{{ app.request.get('title') }}">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" placeholder="创建者" name="ownerName" value="{{ app.request.get('ownerName') }}">
    </div>

    <button class="btn btn-primary">搜索</button>

  </form>
  {% if groupinfo%}
  <table class="table table-striped table-hover" id="group-table">
    <thead>
    <tr>
      <th>编号</th>
      <th width="20%">名称</th>
      <th>创建者</th>
      <th>成员数</th>
      <th>话题数</th>
      <th>回复数</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>

   {% for group in groupinfo %}

      {% include 'TopxiaAdminBundle:Group:table-tr.html.twig' with {group:group} %}

   {% endfor %}

    </tbody>

  </table>
  {% else %}
    <div class="empty">暂无小组信息!</div>
  {% endif %}
  <div class="pull-right">
 {{ web_macro.paginator(paginator) }}
</div>
{% endblock %}