{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}


{% block title %}完成批改{% endblock %}

{% block body %}
<div id="homework-check-body">
	
	<div class="form-group">
	  <div class="controls">
	    <textarea class="form-control" rows='4' id="homework-teacherSay-input" placeholder="请输入评语"></textarea>
	  </div>
	</div>

	<div class="form-group">
	  <div class="controls">
	    <select class="form-control" id="homework-teacherSay-select">
	      <option value="">---常用评语---</option>
	      <option value="1">继续努力，继续进步！</option>
	      <option value="2">不错，有进步，再努力些就会更棒！</option>
	      <option value="3">你真棒！我为你骄傲！</option>
	      <option value="4">有点松懈了吧？继续加油吧！</option>
	      <option value="5">用心、专注、坚持，你能做的更好的！</option>
	    </select>
	  </div>
	</div>
</div>

<script type="text/javascript">
app.load('customwebbundle/controller/homework/check-review')
</script>
  
{% endblock %}

{% block footer %}

<div id ="homework-check-foot">
	<a href="javascript:;" class="btn btn-default" data-dismiss="modal">取消</a>
	<button class="btn btn-success" data-url="{{ path('homework_review_create',{homeworkResultId:homeworkResultId}) }}" id="homework-check-btn"
	{% if source|default('course') == 'classroom' %}
    data-goto="{{ path('classroom_manage_homework',{id:targetId,status:'reviewing'}) }}"
  {% else %}
    data-goto="{{ path('my_teaching_homework_list',{status:'reviewing'}) }}"
  {% endif %}
	>完成批改</button>
</div>

{% endblock %}