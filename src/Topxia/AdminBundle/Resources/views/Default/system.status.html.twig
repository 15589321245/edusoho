<table class="table table-condensed table-bordered table-striped table-hover" >
  {% set status = 0  %}
  {% if error != "error" %}
    {% if mainAppUpgrade %}
      {% set status = 1 %}
      <tr>
        <td>{{'主系统'|trans}}</td>
        <td>
          <a class="btn btn-xs btn-info pull-right" href="{{path("admin_app_upgrades")}}">{{'立即更新'|trans}}</a>
          <span class="glyphicon glyphicon-info-sign text-info"></span>
          {{'最新版本'|trans}}:{{ mainAppUpgrade.package.toVersion }}
          {{'当前版本'|trans}}: {{ constant('Topxia\\System::VERSION') }}
        </td>
      </tr>
    {% else %}
      <tr>
        <td>{{'主系统'|trans}}</td>
        <td>
          <span class="glyphicon glyphicon-ok-sign text-success"></span>
          {{'已是最新版本'|trans}} {{ constant('Topxia\\System::VERSION') }}
        </td>
      </tr>
    {% endif %}

  {% endif %}

      {% if error == "error" %}
        <tr><td>{{'主系统'|trans}}</td><td rowspan="4"><div class="empty"><span  style="color:#cc0000;float:left;text-align:left;">{{'云平台参数设置不正确，会影响到系统正常的运行，'|trans}}<a href="{{path('admin_setting_cloud')}}">{{'请修改设置。'|trans}}</a></sapn></div></td></tr>
        <tr><td>{{'应用更新'|trans}}</td></tr>

        <tr ><td>{{'新应用'|trans}}</td></tr>

        <tr><td>{{'云视频'|trans}}</td></tr>

      {% else %}
        <tr><td>{{'应用更新'|trans}}</td><td>{% if app_count %}
          {% if status|default(0) == 1 and app_count == 1 %}
          <span class="glyphicon glyphicon-ok-sign text-success"></span> {{'所有应用都已是最新版本'|trans}}
          {% else %}<span class="glyphicon glyphicon-info-sign text-info"></span> {{'还有'|trans}} <span class="badge" style="background-color:#cc0000;">
          {% if status|default(0) == 1 %}{{app_count - 1}}{% else %}
          {{app_count}}
          {% endif %}</span> {{'个应用没有更新'|trans}} <a class="btn btn-xs btn-info pull-right" href="{{path("admin_app_upgrades")}}">{{'立即更新'|trans}}</a>
          {% endif %}
          {% else %}<span class="glyphicon glyphicon-ok-sign text-success"></span> {{'所有应用都已是最新版本'|trans}}
      {% endif %}</td></tr>

        <tr><td>{{'新应用'|trans}}</td><td>{% if unInstallAppCount>0 %}<span class="glyphicon glyphicon-info-sign text-info"></span> {{'还有'|trans}} <span class="badge">{{unInstallAppCount}}</span> {{'个应用没有安装'|trans}}<a class="pull-right" href="{{path("admin_app_center",{postStatus : 'all'})}}">{{'查看'|trans}}</a>{% else %}<span class="glyphicon glyphicon-ok-sign text-success"></span> {{'已安装了全部应用'|trans}}
      {% endif %}</td></tr>

        <tr><td>{{'云视频'|trans}}</td><td>{% if setting("storage.cloud_bucket")!="" %}<span class="glyphicon glyphicon-ok-sign text-success"></span> {{'已开通'|trans}}{% if setting("storage.upload_mode") != 'cloud' %}({{'尚未启用'|trans}})<a class="pull-right" href="{{path("admin_setting_cloud_video")}}">{{'查看'|trans}}</a>{% endif %}{% else %}<span class="glyphicon glyphicon-info-sign text-info"></span> {{'还未开通'|trans}}<a class="pull-right" href="{{path("admin_setting_cloud_video")}}">{{'查看'|trans}}</a>
      {% endif %}</td>
      </tr>
      {% endif %}
        <tr>
          <td>{{'直播'|trans}}</td>
          <td>
            {% if setting("course.live_student_capacity", 0)>0 %}
              <span class="glyphicon glyphicon-ok-sign text-success"></span>
              {{'已开通'|trans}}
              {% if setting("course.live_course_enabled")==0 %}
                ({{'尚未启用'|trans}})
                <a class="pull-right" href="{{path("admin_setting_course_setting")}}#live-course-set">{{'查看'|trans}}</a>
              {% else %}
                {% if (liveCourseStatus|length) > 0 %}
                  {% if (liveCourseStatus.type|default('')) == "normal" and liveCourseStatus.expire|default(0) > 0  %}
                    ({{'有效期至'|trans}}{{(liveCourseStatus.expire|default('0'))|date('Y-m-d')}} )
                  {% elseif (liveCourseStatus.type|default('')) == "tryOut" %}
                    ({{'体验用户'|trans}})
                  {% endif %}
                {% endif %}
              {% endif %}

            {% else %}
              <span class="glyphicon glyphicon-info-sign text-info"></span>
              {{'还未开通'|trans}}
              <a class="pull-right" href="{{path("admin_setting_course_setting")}}#live-course-set">{{'查看'|trans}}</a>
            {% endif %}
          </td>
        </tr>

        <tr><td>{{'移动客户端'|trans}}</td><td>{% if setting("mobile").enabled|default(null) %}<span class="glyphicon glyphicon-ok-sign text-success"></span> {{'已启用'|trans}}{% else %}<span class="glyphicon glyphicon-info-sign text-info"></span> {{'还未启用'|trans}}<a class="pull-right" href="{{path("admin_setting_mobile")}}">{{'查看'|trans}}</a>
      {% endif %}</td></tr>

</table>
