{% set modalSize = 'large' %}
{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %}{{ '课程复制' }}{% endblock %}
{% block body %}

    <form id="course-copy-form" class="form-horizontal">

        <div class="row form-group">
            <div class="col-md-3 control-label">
                <label for="course_title" >{{'课程新标题'|trans}}</label>
            </div>
            <div class="col-md-8 controls">
                <input type="text" id="course_title" name="title"  class="form-control"  value="{{courseSet.title}}">
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

    </form>
{% endblock %}

{% block footer %}
    <button id="js-course-clone-btn" data-submiting-text="{{'正在复制'|trans}}" data-course-set-id="{{ courseSet.id }}" type="submit" class="btn btn-primary pull-right">{{'复制'|trans}}</button>
    <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'取消'|trans}}</button>
    <script>app.load('course-set/clone-detail.js');</script>
{% endblock %}
