{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_cloud_consult_setting' %}

{% block main %}
  {{ web_macro.flash_messages() }}
  <div class="page-heading">
    云客服开关
  </div>
  <form class="form-horizontal" role="form" method="post" novalidate>
    <div class="form-group">
      <label for="" class="col-sm-3 control-label">启用云客服：</label>
      <div class="controls col-md-9 radios">
        <div class="form-group">
          <label>
            <input type="radio" name="cloud_consult_setting_enabled"
                   value="1" {% if cloud_consult.cloud_consult_enabled and cloud_consult.cloud_consult_setting_enabled %} checked {% endif %} {% if not cloud_consult.cloud_consult_enabled %} disabled{% endif %}> 开启
          </label>
          <label>
            <input type="radio" name="cloud_consult_setting_enabled"
                   value="0" {% if not cloud_consult.cloud_consult_enabled or not cloud_consult.cloud_consult_setting_enabled %} checked {% endif %} {% if not cloud_consult.cloud_consult_enabled %} disabled{% endif %}> 关闭
          </label>
        </div>
        <div class="help-block">
          开启云客服,让您的网络课堂更智能。
          {% if cloud_consult.cloud_consult_landing_url | default('')%}
            <a href=" {{ cloud_consult.cloud_consult_landing_url }} " target="_blank">登录云客服</a>。
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row form-group">
      <div class="controls col-md-offset-3 col-md-8">
        <button type="submit" class="btn btn-primary">提交</button>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}