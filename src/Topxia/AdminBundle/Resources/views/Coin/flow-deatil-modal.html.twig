{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% block title %}{{user.nickname}}
<span class="pull-right mrl">
<span style="color:#1bb974;" class="mll">充值:{{userInCash(user.id,timeType)|default("0.00")}}</span>
<span style="color:#ff7b0e;" class="mll">消费:{{userOutCash(user.id,timeType)|default("0.00")}}</span>
<span style="color:#ff7b0e;" class="mll">账户余额:{{userAccount(user.id).cash}}</span>
</span>
{% endblock %}
{% block body %}
    <div class="table-responsive">
      <table class="table table-striped">
        {% if cashes|default(null) %}
        <tr>
          <th>名称</th>          
          <th>充值</th>
          <th>消费</th>
          <th>创建时间</th>  
        </tr>
        {% for cash in cashes %}
           <tr>
            <td><span class="text-sm">{{cash.name}}</span></td>

            {% if cash.type =="inflow" %}
            <td style="color:#1bb974;">
               {{cash.amount}} 
            </td>
            <td></td>
            {% endif %}
            {% if cash.type =="outflow" %}
            <td></td>
            <td style="color:#ff7b0e;">
               -&nbsp;{{cash.amount}}               
            </td>
            {% endif %}            
            <td><span class="text-sm">{{cash.createdTime|date('Y-m-d H:i:s')}}</span></td> 
          </tr>
        {% endfor %}
        {% else %}
        <div class="empty">暂无记录</div>
        {% endif %}
      </table>
    </div>
     {{ web_macro.paginator(paginator) }}
{% endblock %}

{% block footer %}

  <button type="button" class="btn btn-default pull-right" data-dismiss="modal">关闭</button>
{% endblock %}