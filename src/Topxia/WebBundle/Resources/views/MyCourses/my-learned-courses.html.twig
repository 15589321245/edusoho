{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}已学完的课程... - {{ parent() }}{% endblock %}

{% set nav = 'my-courses' %}

{% set bodyClass = 'learned-courses' %}

{% block content %}

<div class="row">
    
    {% include 'TopxiaWebBundle:My:my-nav.html.twig' %}

    <div class="col-lg-9">
        
        {% include 'TopxiaWebBundle:MyCourses:my-courses-nav.html.twig' %}

        {% if learnedCourses is empty %}
         <h3>你还没有学完任何课程，<a href="{{ path('course_explore') }}">来探索更多课程吧！ </a>
            </h3>
        {% else %}

        {% include 'TopxiaWebBundle:MyCourses:my-courses-list.html.twig' with { users: users, courses: learnedCourses } %}

        {% endif %}
        {{ web_macro.paginator(paginator) }} 
    </div>

</div>


{% endblock %}
