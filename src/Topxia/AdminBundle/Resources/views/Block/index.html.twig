{% extends 'TopxiaAdminBundle:Block:layout.html.twig' %}
{% set tab_menus = permissions('admin_operation_block',"tab") %}
{% set menu = 'block' %}
{% set submenu = 'block' %}
{% block title %}{{ parent() }}-{{ admin_macro.title(tab_menus,submenu) }}{% endblock %}

{% set script_controller = 'block/list' %}
{% block main %}


<div class="clearfix mbs">
  {% if setting('developer.debug') %}
      {% set btn_menus = permissions("admin_operation_block","button") %}
                {% include 'TopxiaAdminBundle::button.html.twig' with {menus : btn_menus} %}
  {% endif %}
</div>

<table id="block-table" class="table table-striped">
  <thead>
    <tr>
      <th width="50%">标题</th>
      <th width="25%">最近更新</th>
      <th width="25%">操作</th>
    </tr>
  </thead>
  <tbody>
    {% if blocks %}
      {% for block in blocks %}
        {% include 'TopxiaAdminBundle:Block:list-tr.html.twig' %}
      {% endfor %}
  {% else %}
        <tr><td colspan="20"><div class="empty">暂无编辑区记录</div></td></tr>
  {% endif %}
   </tbody>
</table>

 {{ web_macro.paginator(paginator) }} 
{% endblock %}