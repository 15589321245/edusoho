{% extends 'TopxiaAdminBundle::layout.html.twig' %}

{% set menu = 'admin_setting_cloud_video' %}
{% set script_controller = 'setting/cloud-video-overview.js' %}

{% if overview.video.isBuy == true %}
  {% set script_arguments = {spaceItems: spaceItems, flowItems: flowItems}  %}
{% endif %}
{#{% block tabs %}{% include 'PermissionBundle:Templates:tabs.html.twig' %}{% endblock %}#}

{% block main %}
{% if overview.video.isBuy == true %}
  {% include 'TopxiaAdminBundle:EduCloud/Video:video-show.html.twig' %}
{% else %}
  {% include 'TopxiaAdminBundle:EduCloud/Video:video-buy.html.twig' %}
{% endif %}

{% if overview.yearPackage.isBuy == true %}
  {% include 'TopxiaAdminBundle:EduCloud/Video:flow-show.html.twig' %}
{% else %}
  {% include 'TopxiaAdminBundle:EduCloud/Video:flow-buy.html.twig' %}
{% endif %}

{% if overview.video.isBuy == true %}
  <div class="panel panel-default panel-chart">
      <div class="panel-heading">存储空间使用趋势<span class="text-muted">（最近7个月）</span><a class="pull-right" href="">更多&ensp;></a></div>
      <div class="panel-body">
        <div id="spaceItemChart" style="width: 100%;height:400px;"></div>
      </div>
  </div>
  <div class="panel panel-default panel-chart">
    <div class="panel-heading">
      流量使用趋势
      <span class="text-muted">（最近7个月）</span>
      <a class="pull-right" href="">更多&ensp;></a>
    </div>
    <div class="panel-body">
      <div id="flowItemChart" style="width: 100%;height:400px;"></div>
    </div>
  </div>
{% endif %}

{% endblock %}