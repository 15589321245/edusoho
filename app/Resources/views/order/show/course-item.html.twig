<div class="order-detail clearfix">
  <div class="order-img hidden-xs">
    <a href="{{ path('course_show', {id: product.targetId}) }}">
      <img class="img-responsive" src="{{ filepath(course_set_cover(product.courseSet, 'middle'), 'courseSet.png') }}" alt="{{ product.title }}"></a>
  </div>

  <div class="order-info text-overflow">《{{ product.courseSet.title }}》- {{ product.title }}</div>
  <div class="order-price">
    <span role="total-price" class="pay-rmb">{{ product.originPrice|price_format }}</span>
  </div>
</div>