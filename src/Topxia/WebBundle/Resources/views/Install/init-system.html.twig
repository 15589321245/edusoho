{% extends 'TopxiaWebBundle::layout-for-install.html.twig' %}

{% block title %}初始化系统 - {{ parent() }}{% endblock %}

{% set script_controller = 'install/init-system' %}

{% block content %}
	
<div class="container" style="width:940px">
    
  <div class="es-row-wrap">

      <div class="row">

        <div class="col-md-12">
          
          <div class="es-box">
            
            <div class="setup-wizard">
              <span class="pull-left text-primary" style="font-weight:900;font-size:250%">Edusoho</span>
              &nbsp;&nbsp;&nbsp;&nbsp;
              <span class="text-success" style="font-weight:900;font-size:250%">安装向导</span>
            </div>
            <hr>

           <ul class="nav nav-pills nav-justified">
            <li class="disabled"><a style="color:green">1 环境检测</a></li>
            <li class="disabled"><a style="color:green">2 创建数据库</a></li>
            <li class="active disabled"><a>3 初始化系统</a></li>
            <li class="disabled"><a>4 完成安装</a></li>
          </ul>
          <hr>

		<form class="form-horizontal" id="create-data-form" action=" " role="form" action="" method="post">
           
            <div class="form-group">
              <label for="site-name" class="col-sm-4 control-label">站点名称</label>
              <div class="col-sm-5">
                <input type="text" id="site-name" name="site-name" class="form-control input">
                <p class="help-block"><span class="text-danger"></span></p>
              </div>
            </div>

            <div class="form-group">
              <label for="super_manager" class="col-sm-4 control-label">超级管理员昵称</label>
              <div class="col-sm-5">
                <input type="text" id="super_manager" name="super_manager" class="form-control input">
                <p class="help-block"><span class="text-danger"></span></p>
              </div>
            </div>


           <div class="form-group">
              <label for="super_manager_pd" class="col-sm-4 control-label">密码</label>
              <div class="col-sm-5">
                <input type="password" class="form-control input" id="super_manager_pd" name="super_manager_pd">
                <p class="help-block"><span class="text-danger"></span></p>
              </div>
            </div>


            <div class="form-group">
              <label for="super_manager_ckpd" class="col-sm-4 control-label">重复密码</label>
              <div class="col-sm-5">
                <input type="password" class="form-control input" id="super_manager_ckpd">
                <p class="help-block"><span class="text-danger"></span></p>
              </div>
            </div>


             <div class="form-group">
              <label for="super_manager_email" class="col-sm-4 control-label">Email</label>
              <div class="col-sm-5">
                <input type="email" class="form-control" name="super_manager_email" id="super_manager_email">
                <p class="help-block"><span class="text-danger"></span></p>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-4 control-label">
              </div>
              <div class="controls col-md-8 radios">
                
                <div>
                  <input type="checkbox" id="upload_mode" name="upload_mode">我已经购买云存储服务
                </div>
                
              </div>
            </div>

            <div class="row form-group cloud-storage" style="display:none">
              <div class="col-sm-4 control-label">
                <label for="cloud_access_key">云服务器AccessKey</label>
              </div>
              <div class="controls col-sm-6 radios">
                <input type="text" id="cloud_access_key" class="form-control" name="cloud_access_key" 
                value="">
              </div>
            </div>

            <div class="row form-group cloud-storage" style="display:none">
              <div class="col-sm-4 control-label">
                <label for="cloud_secret_key">云服务器SecretKey</label>
              </div>
              <div class="controls col-sm-6 radios">
                <input type="text" id="cloud_secret_key" class="form-control" name="cloud_secret_key" 
                value="">
              </div>
            </div>

            <div class="row form-group cloud-storage" style="display:none">
              <div class="col-sm-4 control-label">
                <label for="cloud_bucket">云服务器空间名</label>
              </div>
              <div class="controls col-sm-5 radios">
                <input type="text" id="cloud_bucket" class="form-control" name="cloud_bucket" 
                value="">
              </div>
            </div>

            <div class="tac">
              <button type="submit" id="init-system" class="btn btn-primary btn-lg">初始化系统</button>
            </div>

        </form>
        
          </div>

        </div>

      </div>

  </div>

</div>

{% endblock %}