{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class= "modal-lg" %}

{% block title %}选择课程{% endblock %}
{% block body %}
<style>
.course-item:hover {
    cursor: pointer;
}
.course-wide-list .course-item .select{

}
</style>

<ul class="nav nav-tabs mbm">
  <li  {% if filter  == 'openCourse' %} class="active" {% endif %}><a href="{{ url('course_manage_open_course_pick', {filter: 'openCourse',id:courseId}) }}">我的公开课</a></li>
  <li {% if filter == 'otherCourse' %} class="active" {% endif %}><a href="{{ url('course_manage_open_course_pick', {filter: 'otherCourse',id:courseId}) }}">我的其它课程</a></li>
  <li {% if filter == 'normal' %} class="active"{% endif %}><a href="{{ url('course_manage_open_course_pick', {filter: 'normal',id:courseId}) }}">所有课程</a></li>
</ul>

<form class="form-inline form-search" role="search-form">
      <div class="form-group ">
       <input type="text" class="form-control" name="title" id="enterSearch" value="" placeholder="按课程标题或关键字" data-url="">
      </div>
      <button type="button" class="btn btn-primary"  id="search"  data-url="">搜索</button>
      <a class="btn btn-primary" id="all-courses" data-url="">清除搜索</a>
</form>

<div class="row mtl">
    <div class="col-md-12">
      <div class="courses-list">
        {% include('TopxiaWebBundle:Course:course-select-list.html.twig') %}
        {{ web_macro.paginator(paginator) }}
      </div>
    </div>
</div>

{% endblock %}

{% block footer %}
  <button id="sure" class="btn btn-primary pull-right" data-url="">添加</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>

  <script>app.load('topxiawebbund/controller/open-course-manage/pick')</script>
{% endblock %}