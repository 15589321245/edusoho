{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}

{% if students %}
  <div class="es-panel student-column">
    <div class="panel-heading clearfix">最新学员<span class="student-icon"></span></div>
    <div class="panel-body">
      <ul>
        {% for  student in students %}
          {% set user = data('User',{userId:student.id})%}
          <li>
            {{ web_macro.user_avatar(student, '', 'avatar-sm') }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}