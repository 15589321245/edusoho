{% extends 'admin/layout.html.twig' %}

{% set script_controller = 'reward-point/index' %}
{% set menu = 'admin_reward_point_set' %}

{% block page_title %}
  <span>{{ '课程奖励列表'|trans }}</span>
  <a href="{{ path('admin_reward_point_set') }}" style="font-size: 14px;">{{'返回'|trans}}</a>
{% endblock %}

{% block main %}
<div class="well well-sm">
  <form class="form-inline">
    <div class="form-group">
      <select class="form-control" name="keywordType">
        {{ select_options({courseSetId:'课程ID'|trans, courseTitle: '教学计划'|trans, courseSetTitle:'课程标题'|trans}, app.request.get('keywordType')) }}
      </select>
    </div>

    <div class="form-group">
      <input class="form-control" type="text" placeholder="{{'关键词'|trans}}" name="keyword" value="{{ app.request.get('keyword') }}">
    </div>

    <button class="btn btn-primary" type="submit">{{'搜索'|trans}}</button>
  </form>
</div>

  <div id="thread-table-container">
    <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>{{'课程编号'|trans}}</th>
      <th>{{'课程标题'|trans}}</th>
      <th>{{'教学计划'|trans}}</th>
      <th>{{'价格'|trans}}</th>
      <th>{{'任务完成奖励'|trans}}</th>
      <th>{{'教学计划完成奖励'|trans}}</th>
    </tr>
    </thead>
    <tbody>
    {% if courses %}
      {% for course in courses %}
      <tr data-role="item">
        {% if course %}
          {% set courseSet = data('CourseSet',{'id':course.courseSetId|default(-1)}) %}
        {% endif %}
        <td>{{ courseSet.id }}</td>
        <td>{{ courseSet.title }}</td>
        <td>{{ course.title }}</td>
        <td>{{ course.price }}</td>
          <td class="js-task-reward-point">
            <span class="">{{ course.taskRewardPoint }}</span>
            <a id="" class="hidden" data-id="{{ course.id }}"><i class="glyphicon glyphicon-edit mrs text-xlg"></i></a>
            <input id="taskRewardPoint" class="hidden" name="taskRewardPoint" value="{{ course.taskRewardPoint }}" data-url="{{ path('admin_reward_point_update',{id:course.id} ) }}">
          </td>
        <td class="js-reward-point">
          <span class="">{{ course.rewardPoint }}</span>
          <a id="rewardPoint" class="hidden" data-id="{{ course.id }}"><i class="glyphicon glyphicon-edit mrs text-xlg"></i></a>
          <input id="rewardPoint" class="hidden" name="rewardPoint" value="{{ course.rewardPoint }}" data-url="{{ path('admin_reward_point_update',{id:course.id} ) }}">
        </td>
      </tr>
    {% else %}
      <tr><td colspan="20"><div class="empty">{{'暂无课程'|trans}}</div></td></tr>
      {% endfor %}
    {% endif %}
    </tbody>
  </table>
  </div>

  {{ admin_macro.paginator(paginator) }}
{% endblock %}