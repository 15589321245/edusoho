{% if course.type == 'open' or course.type == 'liveOpen' %}
  {% set layout = 'TopxiaWebBundle:OpenCourseManage:open-course-layout.html.twig' %}
{% else %}
  {% set layout = 'TopxiaWebBundle:CourseManage:layout.html.twig' %}
{% endif %}
{% extends layout %}
{% block title %}{{'文件管理'|trans}} - {{ parent() }}{% endblock %}
{% set side_nav = 'files' %}
{% set tab = 'courseLesson' %}
{% set script_controller = 'course-manage-file/index' %}
{% block main %}
  <style type="text/css">
  .tooltip-inner{
  max-width: 600px;
  }
  </style>
  <div class="panel panel-default panel-col">
    <div class="panel-heading">
    {% if course.type == 'normal' or course.type == 'live' %}
      {% if type == 'courselesson' %}
        <a class="btn btn-info btn-sm pull-right"
        data-toggle="modal" data-target="#modal"
        data-url="{{path('uploader_batch_uplod', {token:uploader_token('courselesson', course.id, 'private')}) }}"
        >
        <i class="glyphicon glyphicon-cloud-upload"></i>{{'上传课时文件'|trans}}
        </a>
      {% elseif type == 'coursematerial' %}
        <a class="btn btn-info btn-sm pull-right"
        data-toggle="modal" data-target="#modal"
        data-url="{{path('uploader_batch_uplod', {token:uploader_token('coursematerial', course.id, 'private')}) }}"
        >
        <i class="glyphicon glyphicon-cloud-upload"></i>{{'上传备用资料文件'|trans}}
        </a>
      {% endif %}
    {% elseif course.type == 'open' or course.type == 'liveOpen' %}
     <button class="btn btn-info btn-sm pull-right"
        data-html5-url="{{ path('open_course_manage_files_batch_upload', {id:course.id, targetType:'opencourselesson'}) }}"
        data-normal-url="{{ path('open_course_manage_files_upload', {id:course.id, targetType:'opencourselesson'}) }}"
        data-storage="{{storageSetting.upload_mode}}"
        >
        <i class="glyphicon glyphicon-cloud-upload"></i>{{'上传课时文件'|trans}}
        </button>
    {% endif %}
      {{'文件管理'|trans}}
    </div>
    <div class="panel-body" id="file-manage-panel">
    {% if course.type == 'open' or course.type == 'liveOpen' %}
      {% set filesUrl = 'open_course_manage_files' %}
    {% else %}
      {% set filesUrl = 'course_manage_files' %}
    {% endif %}

    <ul class="nav nav-tabs mbm">
      <li {% if type == 'courselesson' %} class="active" {% endif %}>
      <a href="{{ path(filesUrl, {id:course.id, type:'courselesson'}) }}">{{'课时文件'|trans}}</a></li>
      <li {% if type == 'coursematerial' %} class="active" {% endif %}><a href="{{ path(filesUrl, {id:course.id, type:'coursematerial'}) }}">{{'备用资料文件'|trans}}</a></li>
    </ul>
    
      <table class="table table-striped table-hover" id="course-lesson-table">
        <thead>
          <tr>
            <th width="5%"><input type="checkbox"  data-role="batch-select"></th>
            <th>{{'文件名'|trans}}</th>
            <th>{{'类型'|trans}}</th>
            <th>{{'大小'|trans}}</th>
            <th>{{'最后更新'|trans}}</th>
          </tr>
        </thead>
        <tbody>
         {% if course.type == 'normal' or course.type == 'live' %}
          {% if type == 'courselesson' %}
            {% for uploadFile in files %}
              {% include 'TopxiaWebBundle:CourseFileManage:tbody-tr.html.twig' %}
            {% else %}
              <tr class="empty"><td colspan="20">{{'无文件记录'|trans}}</td></tr>
            {% endfor %}
          {% elseif type == 'coursematerial' %}
            {% for uploadFile in files %}
              {% include 'TopxiaWebBundle:CourseFileManage:tbody-tr-coursematerial.html.twig' %}
            {% else %}
              <tr class="empty"><td colspan="20">{{'无文件记录'|trans}}</td></tr>
            {% endfor %}
          {% endif %}
         {% elseif course.type =='open' or course.type =='liveOpen' %} 
          {% for uploadFile in courseLessons %}
              {% include 'TopxiaWebBundle:CourseFileManage:tbody-tr.html.twig' %}
            {% else %}
              <tr class="empty"><td colspan="20">{{'无文件记录'|trans}}</td></tr>
            {% endfor %}
         {% endif %}   
        </tbody>
      </table>

      <label class="checkbox-inline mrm mbm"><input type="checkbox" data-role="batch-select"> {{'全选'|trans}}</label>

      <div class="btn-group mbm">
        {% if course.type == 'normal' or course.type =='live'  %}
        <button class="btn btn-danger btn-sm" data-role="batch-delete" data-name="{{'文件记录'|trans}}" data-url="{{ path('course_manage_upload_course_delete_files', {id:course.id, type:tab}) }}">
        <i class="glyphicon glyphicon-trash"></i>
        {{'删除'|trans}}</button>
        {% elseif course.type == 'open' or course.type == 'liveOpen' %}
        <button class="btn btn-danger btn-sm" data-role="batch-delete" data-name="{{'文件记录'|trans}}" data-url="{{ path('open_course_manage_files_delete', {id:course.id, type:tab}) }}">
        <i class="glyphicon glyphicon-trash"></i>
        {{'删除'|trans}}</button>
        {% endif %}
      </div>

      <nav class="text-center">
        {{ web_macro.paginator(paginator) }}
      </nav>
      {% if type == 'coursematerial' %}
        <div class="alert alert-info">
          <ul>
            <li>{{'上传备用资料文件成功后，在添加课时资料时可直接选取。'|trans}}</li>
            <li><strong><a href="{{ path('course_materials', {id:course.id}) }}">课程资料区</a></strong>显示的是所有课时下的资料文件。</li>
          </ul>
        </div>
      {% endif %}

    </div>
  </div>
{% endblock %}
