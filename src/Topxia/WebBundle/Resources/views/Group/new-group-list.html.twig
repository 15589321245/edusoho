{% if newGroups %}
  <div class="panel panel-default">
    <div class="panel-heading">新晋小组</div>
    <div class="panel-body">
      <ul class="media-list group-grids">
        {% for group in newGroups %}
          {% if loop.index <= 3 %}
          <li class="grid media media-group">
            <div class="media-left">
              <a href="{{path('group_show',{id:group.id})}}" title="{{group.title}}">
                <img src="{{filepath(group.logo, 'group.png')}}" alt="{{group.title}}" class="avatar-square-md">
              </a>
            </div>
            <div class="media-body">
              <div class="title">
                <a class="link-light" href="{{path('group_show',{id:group.id})}}" title="{{group.title}}">{{group.title|sub_text(9)}}</a>
              </div>
              <div class="metas">
                <span><i class="es-icon es-icon-people"></i>{{ group.memberNum }}</span>
                <span><i class="es-icon es-icon-textsms"></i>{{ group.threadNum }}</span>
              </div>
            </div>
          </li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}