{% extends 'bootstrap-modal-layout.html.twig' %}
{% set modalSize = 'large' %}
{% block title %}{% if setting('default.user_name') %}{{ setting('default.user_name')|default('site.default.student'|trans) }}{% else %}{{'site.default.student'|trans}}{% endif %}{{'备注'|trans}}{% endblock %}
{% block body %}
<form id="student-remark-form" method="post" action="{{ path('course_set_manage_course_students_remark', {courseSetId: course.courseSetId, courseId:course.id, userId:user.id}) }}" data-user="{{ default.user_name|default('site.default.student'|trans) }}">
  <div class="form-group">
    <div class="controls">
    	<input class="form-control" id="student-remark" name="remark" value="{{member.remark}}" >
    	<div class="help-block">
        {{'course.members_manage.official_student.remark.tips'|trans({'%student%':{% if setting('default.user_name') %}{{ setting('default.user_name')|default('site.default.student') }}{% else %}{{'site.default.student'|trans}}{% endif %}})}}
      </div>
    </div>
  </div>
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>
{% endblock %}
{% block footer %}
  <button type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#student-remark-form">{{'form.btn.save'|trans}}</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'form.btn.cancel'|trans}}</button>
<script>app.load('course-manage/student-remark')</script>
{% endblock %}
