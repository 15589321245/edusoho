{% extends 'WebBundle:Activity:activity-form-layout.html.twig' %}
{% do script(['http://cdn.qiqiuyun.net/js-sdk/uploader/v1/sdk.js', 'web/activity-manage/ppt/index.js']) %}
{% set mediaType = 'ppt' %}
{% block activity_content %}
  <div class="form-group">
    <div class="col-xs-2 control-label">
      <label for="media" class="style">PPT</label>
    </div>
    <div id="file-choose-type" class="hidden" data-type="ppt"></div>
    <div class="hidden-data">
      <input type="hidden" value="{{ ppt.mediaId|default(0) }}" name="mediaId" id="mediaId"/>
    </div>
    <div class="col-xs-10">{% include 'WebBundle:FileChooser:file-choose.html.twig'  with {mediaType: 'ppt',fileType:'ppt',file: ppt.media|default(null) } %}</div>
  </div>
{% endblock %}


{% block activity_finish %}
  <div class=" form-group">
    <div class="col-xs-2 control-label">
      <label for="condition-select">{{ '完成条件'|trans }}</label>
    </div>

    <div class="col-xs-4 controls">
      <select class="form-control" id="condition-select" name="finishType">
        <option value="end" {% if ppt.finishType|default('end') == 'end' %}selected{% endif %}>观看到最后一页</option>
        <option value="time" {% if ppt.finishType|default('end') == 'time' %}selected{% endif %}>至少观看X分钟</option>
      </select>
    </div>
  </div>
  <div class=" form-group {% if ppt.finishType|default('end') != 'time' %}hidden{% endif %}" id="condition-group">
    <div class="col-xs-2 control-label">
      <label for="condition-detail">{{ '至少观看'|trans }}</label>
    </div>
    <div class="col-xs-4 controls">
      <input id="condition-detail" class="form-control" type="text" name="finishDetail" value="{{ ppt.finishDetail|default(1) }}">
    </div>
    <div class="col-xs-4 controls">
      <p class="form-control-static">分钟</p>
    </div>
  </div>
{% endblock %}