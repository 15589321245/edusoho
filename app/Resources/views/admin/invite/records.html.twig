{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_operation_invite_record' %}

{% block main %}
    <form  class="form-inline well well-sm" action="{{path('admin_invite')}}" method="get" novalidate>
        <input class="form-control" type="text" name="nickname" placeholder="{{'admin.operation_invite.nickname.placeholer'|trans}}" value="{{ app.request.query.get('nickname')}}">
        <button class="btn btn-primary" type="submit">{{'form.btn.search'|trans}}</button>
    </form>

    <table class="table table-hover table-striped" >
        <thead>
        <tr>
            <th width="10%">邀请人</th>
            <th width="10%">注册用户</th>
            <th width="20%">订单消费总额</th>
            <th width="15%">订单虚拟币总额</th>
            <th width="15%">订单现金总额</th>
            <th width="10%">邀请码</th>
            <th width="10%">注册时间</th>
        </tr>
        </thead>
        <tbody>
        {% if records %}
            {% for record in records %}
                {% set inviteUser = users[record.inviteUserId] %}
                {% set invitedUser = users[record.invitedUserId] %}
               <tr>
                   <td>{{ inviteUser.nickname }}</td>
                   <td>{{ invitedUser.nickname }}</td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td>{{ inviteUser.inviteCode|default('-') }}</td>
                   <td width="10%">{{ invitedUser.createdTime|date('Y-m-d H:i:s') }}</td>
               </tr>
            {% endfor %}
        {% else %}
            <tr><td colspan="20"><div class="empty">{{'site.datagrid.empty'|trans}}</div></td></tr>
        {% endif %}
        </tbody>
    </table>

    {{ admin_macro.paginator(paginator) }}
{% endblock %}