{% extends 'TopxiaAdminBundle:Operation:article.layout.html.twig' %}

{% block title %}栏目管理{% endblock %}

{% set submenu = 'category' %}

{% block maincontent %}

<div class="clearfix">
  <button class="btn btn-sm btn-info pull-right add-category" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_operation_article_category_create') }}">新建栏目</button>
</div>

<table class="table table-hover" id="category-table">
  <thead>
    <tr>
      <th width="45%">栏目名称</th>
      <th width="20%">编码</th>
      <th width="10%">显示序号</th>
      <th width="20%">操作</th>
    </tr>
  </thead>
  {% include 'TopxiaAdminBundle:ArticleCategory:tbody.html.twig' %}
</table>
{% endblock %}