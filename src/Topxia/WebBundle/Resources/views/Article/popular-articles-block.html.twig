  <div class="panel panel-default popular-articles">
    <div class="panel-heading">
      <h3 class="panel-title">热门文章</h3>
    </div>
    <div class="panel-body">
      <ul class="media-list">
        {% for key,article in articles %}
          <li class="media">
            <span class="rank_num">{{ key+1 }}</span>
            <div class="media-body"><a href="{{ path('article_detail', { id:article.id }) }}">{{ article.title|plain_text(35) }}</a></div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>