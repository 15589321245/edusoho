{% extends layout %}

{% set menu = 'admin_course_category' %}

{% block main %}

<div class="well well-sm clearfix">
  
  <button class="btn btn-sm btn-success pull-right add-category " data-toggle="modal" data-target="#modal" data-url="{{ path('admin_category_create', {groupId:group.id}) }}">添加分类</button>
</div>

<table class="table table-hover" id="category-table">
  <thead>
    <tr>
      <th width="50%">名称</th>
      <th width="15%">编码</th>
      <th width="15%">显示序号</th>
      <th width="20%">操作</th>
    </tr>
  </thead>
  {% include 'TopxiaAdminBundle:Category:tbody.html.twig' %}
</table>
{% endblock %}