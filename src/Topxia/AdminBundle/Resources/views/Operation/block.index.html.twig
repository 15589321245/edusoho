{% extends 'TopxiaAdminBundle:Operation:block.layout.html.twig' %}

{% block title %}编辑区管理{% endblock %}

{% set submenu = 'block' %}
{% set script_controller = 'block/list' %}
{% block maincontent %}
<div class="clearfix mbs">
  {% if setting('developer.debug') %}
      {% set menus = permissions("admin_operation_block","button") %}
            {{ admin_macro.btn_group(menus) }} 
  {% endif %}
</div>

<table id="block-table" class="table table-striped">
  <thead>
    <tr>
      <th width="50%">标题</th>
      <th width="25%">最近更新</th>
      <th width="25%">操作</th>
    </tr>
  </thead>
  <tbody>
    {% if blocks %}
      {% for block in blocks %}
        {% include 'TopxiaAdminBundle:Operation:block-tr.html.twig' %}
      {% endfor %}
  {% else %}
        <tr><td colspan="20"><div class="empty">暂无编辑区记录</div></td></tr>
  {% endif %}
   </tbody>
</table>

 {{ web_macro.paginator(paginator) }} 
{% endblock %}