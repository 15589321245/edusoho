{% import "TopxiaAdminBundle::macro.html.twig" as admin_macro %}

<table class="table table-condensed table-noborder table-overflow">
  <thead>
  <tr>
    <th width="60%">{{ '关键词'|trans }}</th>
    <th width="30%">{{ '搜索次数'|trans }}</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {% for  searchRanking in searchRankings %}
    {% if searchRanking.words %}
      <tr>
        <td>
          <a class="link-primary" href="">{{ searchRanking.words }}</a>
        </td>
        <td class="text-middle">
          <div class="search-count js-cloud-search" data-count="{{ searchRanking.amount }}"></div>
        </td>
        <td>{{ searchRanking.amount }}</td>
      </tr>
    {% endif %}
  {% else %}
    <div class="empty">暂无搜索数据</div>
  {% endfor %}
  </tbody>
</table>
