{% extends 'activity/content-layout.html.twig' %}

{% do script(['app/js/activity/download/index.js']) %}

{% block body %}
<div class="iframe-parent-content">
  <ul class="download-activity-list">
    {% for material in materials %}
    <li>
      <a class="link-darker" href="{{ path('course_activity_download', {courseId:courseId, activityId:material.lessonId , materialId:material.id }) }}" target="_blank">{{ material.title }}
        {% if material.link|default(null) %}
        (link)
        {% else %}
        ({{ material.fileSize|file_size }})
        {% endif %}
        <i class="es-icon es-icon-filedownload download-icon"></i>
      <div class="text-xs color-gray mts">{{ material.description|default('') }}</div>
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}