{% extends 'TopxiaWebBundle:Group:layout.html.twig' %}

{% block title %}小组logo设置 - {{ parent() }}{% endblock %}
{% set script_controller = 'group/group_logo' %}

{% block main %}

  {% embed "TopxiaWebBundle:Bootstrap:panel.html.twig" with {class:'panel-col'} %}
    {% block heading %}<span class="glyphicon "></span> 小组logo设置{% endblock %}
    {% block body %}
    
      <form id="group-avatar-form" class="form-horizontal" method="post" enctype="multipart/form-data" action="{{path ('grouplogo_set',{id:id})}}">
        {{ web_macro.flash_messages() }}
       
 <div class="form-group">
          <div class="col-md-2 control-label"><b>当前logo</b></div>
          <div class="controls col-md-8 controls">
            {% if logo %}
               <img src="{{file_path(logo)}}">
            {% else %}
               <img src="{{asset('assets/img/default/group.png')}}">
            {% endif %}
         
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label">
          {{ form_label(form.avatar, '新logo ') }}
          </div>
          <div class="controls col-md-8 controls">
            {{ form_widget(form.avatar,{'attr' : { 'accept': 'image/gif,image/jpeg,image/png'}}) }}
            <p class="help-block">你可以上传JPG、GIF或PNG格式的文件，文件大小不能超过<strong>{{ upload_max_filesize() }}</strong>。</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"></div>
          <div class="controls col-md-8 controls">
            {{ form_rest(form) }}
              <button id="group-save-btn" data-submiting-text="正在上传" type="submit" class="btn btn-primary">上传</button>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
          </div>
        </div>
         
      </form>
    {% endblock %}
  {% endembed %}

{% endblock %}