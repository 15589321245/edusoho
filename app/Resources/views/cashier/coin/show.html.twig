{% set currency = (setting('coin.coin_enabled') and setting('coin.price_type') == 'Coin') ? 'coin' : 'default' %}

<div class="order-center-deduction">
  <span class="order-center-deduction__title">
    {{ coinSetting.coin_name }}
  </span>
  <span class="order-center-deduction__content">
    {% if isPasswordSet %}
      {% if currency == 'coin' %}
        {{ 'order.confirm.current_account_cash_simple'|trans({ '%amount%':balance.amount|fen_to_yuan(0), '%coin_name%':coinSetting.coin_name }) }}
      {% else %}
         {{ 'order.confirm.current_account_cash'|trans({
          '%amount%':balance.amount|fen_to_yuan(0), '%coin_name%':coinSetting.coin_name, '%rmb%': (balance.amount|fen_to_yuan(0) / coinSetting.cash_rate), '%rmb_unit%': (1 / coinSetting.cash_rate)
        }) }}
      {% endif %}
    {% else %}
      {{ 'pay_center.pay.coin.password_not_set.tips'|trans }} 
      <a class="cd-link-primary" href="javascript:;" data-toggle="modal" data-target="#modal" data-url="{{ path('settings_pay_password') }}">
        {{ 'pay_center.pay.set_pay_password'|trans }}
      </a>
    {% endif %}
  </span>
</div>

<div class="order-center-coin-use" id="coin-use-section" data-max-allow-coin="{{ maxCoin }}" data-coin-balance="{{ balance.amount }}" 
  data-coin-rate="{{ setting('coin.cash_rate') }}" data-price-type="{{ currency }}">
  <div class="form-group cd-form-group">
    <label>{{ 'pay_center.pay.coin_input_tips'|trans }}</label>
    <input type="text" class="form-control js-coin-amount" autocomplete="off" name="coinAmount" value="0">
  </div>
  <div class="form-group cd-form-group">
    <label>{{ 'user.fields.pay_password'|trans }}</label>
    <input type="password" class="form-control js-pay-password" name="payPassword" autocomplete="off"
          data-url="{{ path('cashier_password_check') }}" data-type="get"
          data-display="{{ 'order.confirm.forget_password_tips'|trans }}">
  </div>
  <a href="{{path('settings_find_pay_password')}}" target='_blank' class="cd-link-gray cd-ml16 hidden-xs">
    {{ 'order.confirm.forget_password_btn'|trans }}
  </a>
</div>

<div class="order-center-line"></div>