{% import "TopxiaWebBundle::macro.html.twig" as web_macro %}
<tr >
  <td class="media" style="vertical-align: middle;">
    {{ web_macro.user_avatar(refund['user'], 'pull-left', 'avatar-sm') }}
    <a target="_blank" href="{{ path('user_show', {id:refund['user'].id}) }}">{{ refund['user'].nickname }}</a>
    <div class="text-muted text-sm">加入班级时间：{{ refund['student'][0].createdTime|date('Y-n-d H:i') }}</div>
    
  </td>
  <td style="vertical-align: middle;">
      {{ refund.reasonNote }}
  </td>
  <td style="vertical-align: middle;">
      {{ refund.createdTime|date('Y-n-d H:i') }}
  </td>
</tr>