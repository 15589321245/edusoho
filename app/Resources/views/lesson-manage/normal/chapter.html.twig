<li id="chapter-{{chapter.id}}" class="task-manage-item drag task-manage-{{chapter.type}} js-task-manage-{{chapter.type}}  clearfix">
  <div class="item-content">
    {{'course.plan_task.which_chapter'|trans({'%chapterNumber%':chapter.number, '%chapter%':course_chapter_alias(chapter.type)|trans, '%title%':chapter.title|sub_text(30)})|raw }}
  </div>
  <div class="item-actions">
    <span class="dropdown">
      <a class="dropdown-toggle dropdown-more btn gray-darker" id="dropdown-more" data-toggle="dropdown" href="#"><i class="es-icon es-icon-anonymous-iconfont mrs"></i>
          {{'course.lesson'|trans}}
      </a>
      <ul class="dropdown-menu pull-right dropdown-menu-more" role="menu" style="margin-top:12px;min-width:144px" aria-labelledby="dLabel" style="display:none;">
          <li>
            <a href="#" data-toggle="modal" data-target="#modal" data-url="{{ path('course_manage_chapter_manage', {courseId:course.id, type:'unit', parentId:'chapter-'~chapter.id}) }}">
              {{'course.plan_task.create_part'|trans({'%partName%': course_chapter_alias('unit')|trans}) }}        
            </a>
          </li>
          <li>
            <a href="#" data-toggle="modal" data-target="#modal" data-url="{{ path('course_manage_chapter_manage', {courseId:course.id,type:'lesson', chapterId:'chapter-'~chapter.id}) }}">
              {{'course.manage.create_lesson'|trans }}
            </a>
          </li>
      </ul>
    </span>
    {% include 'lesson-manage/normal/chapter-action.html.twig' with {courseId: course.id, chapterId: chapter.id} %}
    <a href="javascript:;" class="btn gray-darker js-chapter-toggle-show">
      <i class="es-icon es-icon-keyboardarrowup mr5 js-remove-icon"></i>
      <span class="js-remove-text" >{{'site.btn.collapse'|trans}}</span>
    </a>
  </div>
</li>
