  <div class="row">
    <div class="col-md-3">
      {{ render(controller('AppBundle:Course/CourseSetManage:sidebar', {courseSetId:courseSet.id, curCourse: course|default(null), sideNav: side_nav|default(null)})) }}
    </div>
    <div class="col-md-9">
      {% block main %}{% endblock %}
    </div>
  </div>
  {% endblock %}

{% block bottom %}
{% endblock %}