{% for index,imglink in carousel|default(null) if imglink.src|default('') %}
  <div class="item {% if loop.index == 1 %}active{% endif %}" {% if attribute(color,index).value|default(null) %}style="background:{{ attribute(color,index).value }};"{% endif %}>
    <a href="{{ imglink.href|default('') }}" target="{{ imglink.target }}"><img src="{{ imglink.src|default('') }}" alt="{{ imglink.alt|default('') }}"></a>
  </div>
{% endfor %}
