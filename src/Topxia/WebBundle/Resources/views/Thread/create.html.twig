{% set thread = thread|default(null) %}


<form id="thread-form" class="form-horizontal" method="post" 
  {% if thread %}
    action="{{ path(target.type ~ '_thread_update', {(target.type ~ 'Id'): target.id, threadId:thread.id}) }}"
  {% else %}
    action="{{ path(target.type ~ '_thread_create', {(target.type ~ 'Id'): target.id, type:type}) }}"
    {% endif %}
  >

  <div class="form-group">
      <label for="title" class="col-sm-2 control-label">活动标题</label>
    <div class="col-sm-10">
      <input type="type" id="title" class="form-control" placeholder="标题" ata-display="标题" name= "title" value="{{ thread.title|default('') }}">
      </div>
  </div>

  <div class="js-event-content" {% if type != 'event' %}style="display:none;" {% endif %}>
    <div class="form-group">
       <label for="startTime" class="col-sm-2 control-label">活动时间</label>
      <div class="col-sm-10">
        <input type="type" id="startTime" class="form-control" placeholder="活动开始时间" name="startTime" value="{% if thread.startTime|default(null) %}{{ thread.startTime|date('Y-m-d H:i') }}{% endif %}">
        </div>
    </div>

    <div class="form-group">
        <label for="location" class="col-sm-2 control-label">活动地点</label>
      <div class="col-sm-10">
        <input type="type" id="location" class="form-control" placeholder="活动地点" name= "location" value="{{ thread.location|default('') }}">
        </div>
    </div>

    <div class="form-group">
        <label for="maxUsers" class="col-sm-2 control-label">名额限制</label>
      <div class="col-sm-3">
        <input type="type" id="maxUsers" class="form-control" placeholder="不限" name= "maxUsers" value="{{ thread.maxUsers|default('') }}">
        </div>
        <label class="control-label">人</label>
    </div>

  <!--     <div class="form-group">
        <label for="inputTitle" class="col-sm-2 control-label">封面图片</label>
        <div class="col-sm-2">
          <a href="" class="btn btn-default btn-block">浏览...</a>
        </div>
      </div> -->

      <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        提示：报名参加时需要提供姓名、手机号码。活动创建后将会给所有{{ setting('classroom.name')|default("班级") }}学员群发系统通知。
      </div>

  </div>

  <div class="form-group">
    <div class="controls col-md-12">
      <textarea id="thread-content-field" class="form-control" rows="15" data-display="内容" name="content"
        data-image-upload-url="{{ path('editor_upload', {token:upload_token('default')}) }}">{{ thread.content|default('') }}</textarea>
    </div>
  </div>

  <div class="clearfix">
      {% if thread %}
        <button type="submit" class="btn btn-primary pull-right">保存</button>
        <a href="{{ path(target.type ~ '_thread_show', {(target.type ~ 'Id'): target.id, threadId:thread.id}) }}" class="btn btn-link pull-right color-gray">取消</a>

      {% else %}
        <button type="submit" class="btn btn-primary pull-right">发表</button>
        <a href="{{ path(target.type ~ '_threads', {(target.type ~ 'Id'): target.id}) }}" class="btn btn-link pull-right color-gray">取消</a>

      {% endif  %}
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  <input type="hidden" name="type" value="{{ type }}">
</form>
