{% extends 'TopxiaWebBundle:Card:layout.html.twig' %}

{% set main_nav = 'cards' %}

{% block main_body %}
<!-- 卡包列表 -->
<div class="clearfix mbl mhm">
	<ul class="nav nav-pills inline-block" role="active">
		<li role="presentation" class="active"><a href="javascript:;">优惠劵</a></li>
		<li role="presentation"><a href="javascript:;">学习卡</a></li>
	</ul>
	<div class="pull-right mtm hidden-xs">
		<label class="checkbox-inline">
		  <input type="checkbox" id="inlineCheckbox1" value="option1">未抵扣
		</label>
		<label class="checkbox-inline">
		  <input type="checkbox" id="inlineCheckbox2" value="option2">已抵扣
		</label>
		<label class="checkbox-inline">
		  <input type="checkbox" id="inlineCheckbox3" value="option3">已过期
		</label>
	</div>
</div>
<div class="jm-card-list">
	<div class="row">
		{% if is_plugin_installed('Coupon') %}
			{% if cards.receive is defined %}
				{% for card in cards.receive %}
					<!--正常优惠码-->
					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="jm-card-item">
							<div class="jm-card-img {% if card.deadline < time_stamp() %}yhjed{% else %}yhjing{% endif %}">
								<div class="jm-card-info">
									{% if card.targetType == "course" %}
										{% if card.targetId == 0 %}
											<p class="title">可用于抵扣全站课程</p>
										{% else %}
											<p class="title">用于抵扣指定课程</p>
										{% endif %}
									{% endif %}

									{% if card.targetType == "classroom" %}
										<p class="title">可用于抵扣全站班级</p>
									{% endif %}

									{% if card.targetType == "vip" %}
										{% if card.targetId == 0 %}
											<p class="title">可用于抵扣全站会员</p>
										{% else %}
											<p class="title">用于抵扣指定会员</p>
										{% endif %}
									{% endif %}
									<p class="price">
										<strong>{% if card.type == "minus" %}￥{% endif %}{{ card.rate }}{% if card.type == "discount" %}折{% endif %}</strong>
									</p>
									<p>有效期截止：<span>{{ card.deadline|date('Y年n月d日') }}</span></p>
								</div>
								{% if card.deadline < time_stamp() %}<div class="carded"></div>{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}

			{% if cards.used is defined %}
				{% for card in cards.used %}
					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="jm-card-item">
							<div class="jm-card-img yhjing">
								<div class="jm-card-info">
									{% if card.targetType == "course" %}
										{% if card.targetId == 0 %}
											<p class="title">可用于抵扣全站课程</p>
										{% else %}
											<p class="title">用于抵扣指定课程</p>
										{% endif %}
									{% endif %}

									{% if card.targetType == "classroom" %}
										<p class="title">可用于抵扣全站班级</p>
									{% endif %}

									{% if card.targetType == "vip" %}
										{% if card.targetId == 0 %}
											<p class="title">可用于抵扣全站会员</p>
										{% else %}
											<p class="title">用于抵扣指定会员</p>
										{% endif %}
									{% endif %}
									<p class="price">
										<strong>{% if card.type == "minus" %}￥{% endif %}{{ card.rate }}{% if card.type == "discount" %}折{% endif %}</strong>
									</p>
									<p>有效期截止：<span>{{ card.deadline|date('Y年n月d日') }}</span></p>
								</div>
								<!--优惠劵已使用-->
								<div class="card-done"></div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}

		{% else %}
			<p>空空如也，您的口袋里还没有优惠卡</p>
		{% endif %}
		
	  <!-- 正常学习卡-->
	  <div class="col-lg-4 col-md-6 col-sm-6">
			<div class="jm-card-item">
				<div class="jm-card-img xxking">
					<div class="jm-card-info">
						<h4>学习卡</h4>
						<p class="title">仅用于抵扣测试直播课程</p>
						<p class="price">
							<strong>￥400</strong>
						</p>
						<p>有效期：<span>2015年11月12日</span></p>
					</div>
				</div>
			</div>
		</div>
		<!-- 过期学习卡-->
	  <div class="col-lg-4 col-md-6 col-sm-6">
			<div class="jm-card-item">
				<div class="jm-card-img xxked">
					<div class="jm-card-info">
						<h4>学习卡</h4>
						<p class="title">仅用于抵扣测试直播课程</p>
						<p class="price">
							<strong>￥400</strong>
						</p>
						<p>有效期：<span>2015年11月12日</span></p>
					</div>
					<!--学习卡已过期-->
					<div class="carded"></div>
				</div>
			</div>
		</div>
		<!-- 已使用学习卡-->
	  <div class="col-lg-4 col-md-6 col-sm-6">
			<div class="jm-card-item">
				<div class="jm-card-img xxking">
					<div class="jm-card-info">
						<h4>学习卡</h4>
						<p class="title">仅用于抵扣测试直播课程</p>
						<p class="price">
							<strong>￥400</strong>
						</p>
						<p>有效期：<span>2015年11月12日</span></p>
					</div>
					<!--学习卡已过期-->
					<div class="card-done"></div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}