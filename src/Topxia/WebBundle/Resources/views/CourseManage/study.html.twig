{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}

{% block title %}学习设置 - {{ parent() }}{% endblock %}

{% set side_nav = 'study' %}

{% block main %}

       
<div class="panel panel-default panel-col">
  <div class="panel-heading">学习设置</div>
  <div class="panel-body">

    <form id="study-form" class="form-horizontal" method="post">
      {{ web_macro.flash_messages() }}

      <div class="form-group">
        <div class="col-md-2 control-label">
          <label>是否依次学习课程</label>
        </div>
        <div class="col-md-7 controls">
          {{ radios('sequence', {1:'开启', 0:'关闭'}, course.sequence|default(0)) }}
        <div class="help-block">开启后，学员必须学完当前课程才能继续学习下一节课程</div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-8 controls">
          <button type="submit" class="btn btn-fat btn-primary">保存</button>
        </div>  
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

    </form>
  </div>
</div>

{% endblock %}