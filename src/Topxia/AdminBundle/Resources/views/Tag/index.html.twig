{% extends 'TopxiaAdminBundle:Course:layout.html.twig' %}

{% set menus = menus("admin",'admin_course_tag', 1) %}
{% block title %}{{ getTitle('admin_course_tag')}}{% endblock %}

{% set menu = 'admin_course_tag' %}
{% set script_controller = 'tag/list' %}
{% block main %}

<div class="well well-sm clearfix">

  {% set menus = menus("admin",'admin_course_tag', 2) %}
 
  {% include 'TopxiaAdminBundle::button.html.twig' with {menus:menus,type:menu} %}
</div>

<table id="tag-table" class="table table-striped">
    <thead>
        <th width="10%">ID</th>
        <th width="60%">名称</th>
        <th width="20%">添加时间</th>
        <th width="10%">操作</th>
    </thead>
    <tbody>
      {% if tags %}
        {% for tag in tags %}
          {% include 'TopxiaAdminBundle:Tag:list-tr.html.twig' %}
        {% endfor %}
      {% else %}
       <tr><td colspan="20"><div class="empty">暂无标签记录</div></td></tr>
      {% endif %}

    </tbody>
</table>

{{ web_macro.paginator(paginator) }}


{% endblock %}