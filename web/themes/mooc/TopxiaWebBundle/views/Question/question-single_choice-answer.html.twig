{% set choiceIndex = (65+itemResult.answer[0]|default(-1))|chr %}
{% if itemResult %}
	<div class="homework-question-result">
		{% if itemResult.status=='noAnswer' %}
			未答题，
		{% else %}
			选择了<strong class="question-text-danger">{{ choiceIndex }}</strong>，
		{% endif %}
		{% if itemResult.status == 'right' %}
			<span class="glyphicon glyphicon-ok question-text-success"></span> 答对了!
		{% else %}
			正确答案是
			<strong class='question-text-success'>
				{% for answer in question.answer %}
					{{ (65+answer)|chr }}
				{% endfor %}，
			</strong>
			<span class="glyphicon glyphicon-remove question-text-danger"></span> 答错了
		{% endif %}
	</div>
{% endif %}