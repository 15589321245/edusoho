{% extends 'open-course-manage/header.html.twig' %}

{% block js %}
{% endblock %}

{% block btn %}
  {% if course.status != 'published' %}
    <a class="cd-btn cd-btn-ghost-default cd-mr16" href="{{ path('open_course_show',{courseId:course.id,as:'preview'}) }}" target="_blank">{{ 'course.preview.course'|trans }}</a>
  {% else %}
    <a class="cd-btn cd-btn-ghost-default cd-mr16" target="_blank" href="{{ path('open_course_show',{courseId:course.id}) }}">{{'my.learning.course.watch'|trans}}</a>
  {% endif %}
  {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
    <a class="cd-btn cd-btn-ghost-primary" target="_blank" href="{{ path('open_course_manage', {id:course.id}) }}">{{ 'course.manage_btn'|trans }}</a>
  {% elseif 'ROLE_TEACHER' in app.user.roles %}
    <a class="cd-btn cd-btn-ghost-primary" target="_blank" href="{{ path('open_course_manage', {id:course.id}) }}">{{'my.teaching.open_course.view_btn'|trans}}</a>
  {% endif %}
{% endblock %}

{% block coursesetTitle %}
  {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
    <a class="cd-link-major" target="_blank" href="{{ path('open_course_manage', {id:course.id}) }}">{{ course.title }}</a>
  {% elseif 'ROLE_TEACHER' in app.user.roles %}
    <a class="cd-link-major" target="_blank" href="{{ path('open_course_manage', {id:course.id}) }}">{{ course.title }}</a>
  {% endif %}
{% endblock %}

