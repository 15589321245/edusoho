{% if currentType|default(false) %}
  <ul class="es-step es-step-3 clearfix js-es-step">
    <li>
      <span class="number">1</span>
      选择教学手段
    </li>
    <li class="doing">
      <span class="number">2</span>
      设置内容
    </li>
    <li>
      <span class="number">2</span>
      设置完成条件
    </li>
  </ul>
     
  {% if not renderer is null and currentType|default(false) %}
    {% if activity|default(false) %}
      {{ renderer.renderEditing(activity.id)|raw }}
    {% else %}
      {{ renderer.renderCreating()|raw }}
    {% endif %}
  {% endif %}

{% endif %}