{% extends 'reward-point/layout.html.twig' %}

{% set nav = 'rule' %}

{% block reward_point_content %}
  {% if setting('reward_point.enable') == 1|default() %}
  <table class="table table-striped table-hover" id="keyword-table" data-search-form="#keyword-search-form">
    <thead>
    <tr>
      <th width="50%">{{ 'my.reward_point.rule_reward_behavior'|trans }}</th>
      <th width="25%">{{ 'my.reward_point.rule_reward'|trans }}</th>
      <th width="25%">{{ 'my.reward_point.rule_daily_limit'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% if settings.enable==1|default() %}
      {% if  settings.create_question['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.create_question'|trans }}</td>
          <td>{{ settings.create_question['amount'] }}</td>
          <td>{% if  settings.create_question['daily_limit'] == 0 %}不限{% else %}{{ settings.create_question['daily_limit'] }}{% endif %}</td>
        </tr>
      {% endif %}
      {% if  settings.reply_question['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.reply_question'|trans }}</td>
          <td>{{ settings.reply_question['amount'] }}</td>
          <td>{% if  settings.reply_question['daily_limit'] == 0 %}不限{% else %}{{ settings.reply_question['daily_limit'] }}{% endif %}</td>
        </tr>
      {% endif %}
      {% if  settings.create_discussion['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.create_discussion'|trans }}</td>
          <td>{{ settings.create_discussion['amount'] }}</td>
          <td>{% if  settings.create_discussion['daily_limit'] == 0 %}不限{% else %}{{ settings.create_discussion['daily_limit'] }}{% endif %}</td>
        </tr>
      {% endif %}
      {% if  settings.reply_discussion['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.reply_discussion'|trans }}</td>
          <td>{{ settings.reply_discussion['amount'] }}</td>
          <td>{% if  settings.reply_discussion['daily_limit'] == 0 %}不限{% else %}{{ settings.reply_discussion['daily_limit'] }}{% endif %}</td>
        </tr>
      {% endif %}
      {% if  settings.elite_thread['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.elite_thread'|trans }}</td>
          <td>{{ settings.elite_thread['amount'] }}</td>
          <td>--</td>
        </tr>
      {% endif %}
      {% if  settings.appraise_course_classroom['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.appraise_course_classroom'|trans }}</td>
          <td>{{ settings.appraise_course_classroom['amount'] }}</td>
          <td>--</td>
        </tr>
      {% endif %}
      {% if  settings.daily_login['enable'] == 1 %}
        <tr>
          <td>{{ 'admin.reward_point.setting.rule.daily_login'|trans }}</td>
          <td>{{ settings.daily_login['amount'] }}</td>
          <td>--</td>
        </tr>
      {% endif %}
    {% endif %}
    </tbody>
  </table>
  {% else %}
    <div class="alert alert-danger">{{ 'my.reward_point.rule.permissions'|trans({'%name%':setting('reward_point').name|default('admin.reward_point'|trans)}) }}</div>
  {% endif %}
{% endblock %}