{% extends 'TopxiaWebBundle:Default:layout.html.twig' %}

{% block title %}{{ setting('article.name') }} - {{ parent() }}{% endblock %}

{% block content %}

<div class="es-row-wrap container-gap">

  <div class="row row-8-4 article-row" style="margin-top:20px;">
    <div class="col-md-8">
      <ul class="nav nav-pills" style="margin-bottom:20px;">
        <li class="active"><a href="{{ path('article_show') }}">{{ setting('article.name') }}</a></li>
        {% for category in categoryTree %}
          {% if category.parentId == 0 %}
            <li><a href="{{ path('article_category', {categoryCode:category.code}) }}">{{ category.name }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
      <h2 class="thread-title">{{article.title}}</h2>
         <div class="published-time pull-left">{{ article.publishedTime|date('Y-m-d H:i:s') }}</div>
         <p><br></p>
      <div class="thread-body">{{article.body |raw }}</div>
       标签:
      {% for tag in tags %}
           <span class="label label-info">{{tag.name}}</span>
      {% endfor %}
      <p><br></p>
      分类:&nbsp;<span><a href="{{ path('article_category', {categoryCode:categoryCode}) }}">{{categoryName}}</a></span>
      <ul class="pager">
        {% if article_previous %}
          <li class="previous"><a href="/article/{{article_previous.id}}">&larr; 上一篇</a></li>
        {% else %}
          <li class="previous disabled"><a href="javascript:;">&larr; 上一篇</a></li>
        {% endif %}

          {% if article_next %}
          <li class="next"><a href="/article/{{article_next.id}}"> 下一篇 &rarr;</a></li>
        {% else %}
          <li class="next disabled"><a href="javascript:;"> 下一篇 &rarr;</a></li>
        {% endif %}
      </ul>
     <hr>
      文章评论:<br><br>
      <textarea class="textarea" hidefocus="true" tabindex="" style="width: 100%; height: 172px;">xxx</textarea><br><br>

      <button class="btn-primary pull-right">发表评论</button>
      <br><br>
