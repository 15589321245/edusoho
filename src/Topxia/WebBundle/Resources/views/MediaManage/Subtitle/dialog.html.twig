<div class="js-subtitle-dialog">
  <ul class="list-unstyled plm js-subtitle-list">
    {% for subtitle in subtitles %}
      <li class="pvs">
        <span class="subtitle-name prl">{{ subtitle.name }}</span>
        <a href="javascript:;" class="btn-link pll color-primary js-subtitle-delete">删除</a>
      </li>
    {% endfor %}
  </ul>
  {% set token = uploader_token('subtitle', media.id, 'private') %}
  <div class="col-md-2 caption-uploader js-select-file" id="subtitle-uploader" style="width: 130px" 
  data-media-id="{{ media.id }}"
  data-media-global-id="{{ media.globalId }}"
  data-subtitle-create-url="{{ url('media_subtitle_create', {mediaId: media.id}) }}"
  data-init-url="{{ url('uploader_init', {token:token}) }}"
  data-finish-url="{{ url('uploader_finished', {token:token}) }}"
  >
  </div>
</div>