{% set teachers = data('RecommendTeachers',{'count':config.count|default(8)}) %}
<section class="mooc-teacher hidden-xs hidden-sm">
  <div class="container">
    <div class="mooc-index-title">
      {{ config.title|default(config.defaultTitle) }}
    </div>
     {#  <div class="row swiper-container teach-list">
        <div class="swiper-wrapper">
          {% for teacher in teachers %}
            <div class="teach-item swiper-slide col-md-3">
            {% include 'TopxiaWebBundle:Teacher:teacher-item.html.twig' %}
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pager"></div>
      </div>   #}

    <div class="carousel slide carousel-fade">
      <ol class="carousel-indicators mooc-carousel-indicators">
      </ol>
      <div class="teach-list">
        <div class="carousel-inner" role="listbox">
        {% for teacher in teachers %}
          {% if (loop.index-1) % 4 == 0 %}
          <div class="item {% if loop.index == 1 %}active{% endif %} ">
             <div class="row teach-item">
          {% endif %}
           
              
                 <div class="col-md-3">
                    <div class="teach-wrapper">  
                      <div class="teacher-img">
                         <a href="">
                            <img class="avatar-ll" src="{{ filepath(teacher.largeAvatar,'avatar.png') }}" alt=""> 
                         </a>   
                      </div>
                      <div class="teacher-name">
                        <a href="">{{ teacher.nickname|default() }}</a>
                      </div>
                      <div class="teacher-position">
                         {{ teacher.title }}
                      </div>
                          <div class="teacher-about">{{ teacher.about|plain_text(40) }}</div>
                      <div class="teacher-kown">
                        <a href="">了解老师</a>
                      </div>
                    </div>
                 </div>

          {% if loop.index % 4 == 0 %} 
            </div>
          </div>
          {% endif %}
        {% endfor %}
        </div>  

      </div>
    </div>
  </div>
</section>