{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set block = block|default(null) %}
{% set modal_class = 'modal-lg' %}

{% block title %}
  设置广告页
{% endblock %}
{% block body %}
<form class="form-horizontal" id="ad-setting-form"  action="{{ path('admin_ad_setting_create') }}" method="post">

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="targetUrl">网站页URL</label>
    </div>
    <div class="col-md-8 controls">
        <input class="form-control" type="text" id="targetUrl" value="{{setting.targetUrl}}" name="targetUrl"   placeholder="/xxx/yyy" data-url="{{ path('admin_ad_setting_target_url_check') }}"  data-fid="ad-setting-form" >
      <div class="help-block"  id="targetUrl_info">请输入网站URL，以/开头，不包括域名信息</div>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="showUrl">广告编辑区或页面URL</label>
    </div>
    <div class="col-md-8 controls">
      <input class="form-control" type="text" id="showUrl" value="{{setting.showUrl}}" name="showUrl"  required/>
      <p class="help-block" id="showUrl_info">请输入编辑区Id，页面URL以/或http开头</p>
    </div>
  </div>


  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="showMode">广告形式</label>
    </div>
    <div class="col-md-8 controls">
      <div class="input-group">
        <select class="form-control" name="showMode" required>
            {{ select_options(dict('adShowModeType'), setting.showMode, '广告形式') }}
        </select>
      </div>
    </div>
  </div>
  
  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="showWhen">针对群体</label>
    </div>
    <div class="col-md-8 controls">
      <div class="input-group">
        <select class="form-control" name="scope" required>
            {{ select_options(dict('adShowScopeType'), setting.scope, '针对群体') }}
        </select>
      </div>
    </div>
  </div>

 

  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="name">备注描述</label>
    </div>
    <div class="col-md-8 controls">
      <input class="form-control" type="text" id="name" value="{{setting.name}}" name="name" required/>
    </div>
  </div>
 
  <input type="hidden" name="id" value="{{ setting.id }}">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}"></form>

<script type="text/javascript">app.load('sale/ad-setting-create-modal')</script>
{% endblock %}

{% block footer %}
<button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
<button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#ad-setting-form">保存</button>
{% endblock %}