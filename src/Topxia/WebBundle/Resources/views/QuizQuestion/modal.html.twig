{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}
{% import 'TopxiaWebBundle::macro.html.twig' as macro %}

{% block title %}添加题目 - {{ parent() }}{% endblock %}

{% set parentId = parentId |default(0)%}
{% set isEdit = isEdit |default(null)%}
{% set side_nav = 'quizQuestion' %}
{% set script_controller = 'quiz-question/create' %}

{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading clearfix">
    题目管理
  </div>
  <div class="panel-body">

    <ol class="breadcrumb">
      <li><a href="{{ path('course_manage_question',{courseId:course.id}) }}">题目管理</a></li>
      {% if parentId %}
        <li><a href="{{ path('course_manage_question',{courseId:course.id,parentId: parentId}) }}">材料题</a></li>
      {% endif %}
      <li class="active">
        {% if isEdit %} 修改{{dict('unquestionType')[type]}}  {% else %}  添加{{dict('unquestionType')[type]}}  {% endif %}
      </li>
    </ol>
    
    <div id="question-creator-widget" data-upload-url="{{ path('course_manage_question_upload', {courseId:course.id, type:type}) }}">
      <form id="question-create-form" data-role="question-form" class="form-horizontal quiz-question" method="post" action="
      {% if isEdit %}
        {{ path('course_manage_question_update',{courseId:course.id, id:question.id, goto:app.request.get('goto')}) }}
      {% else %}
        {{ path('course_manage_question_create',{courseId:course.id, type:type, parentId:parentId, goto:app.request.get('goto')}) }}
      {% endif %}
      ">
        {{ web_macro.flash_messages() }}

        {% if not parentId %}
        <div class="form-group">
          <div class="col-md-2 control-label"><label>从属</label></div>
          <div class="col-md-8 controls">
            <select class="form-control width-input width-input-large" name="target" data-role="target"></select>
            <div class="help-block">可以针对本课程或者某个课时出题</div>
            <script type="text/plain" data-role="targets-data">{{ targets|json_encode|raw }}</script>
          </div>
        </div>
        {% endif %}

        <div class="form-group">
          <div class="col-md-2 control-label"><label>难度</label></div>
          <div class="col-md-8 controls radios">
            {{ radios('difficulty', {'simple':'简单', 'normal':'一般', 'difficulty':'困难'}, question.difficulty | default('normal')) }}
          </div>          
        </div>

        <div class="form-group">
          <div class="col-md-2 control-label"><label for="question-stem-field">{% if type == 'material' %}材料{% else %}题干{% endif %}</label></div>
          <div class="col-md-8 controls">
            <textarea class="form-control" id="question-stem-field" name="stem">{{question.stem | default('')}}</textarea>
            {% if type == 'fill' %}
              <div class="help-block">点击编辑器按钮【 】可以插入填空项；也可手工输入，例如“今年是[[2014|马]]年”，回答“2014”或者“马”都算答对</div>
            {% endif %}
          </div>
          <div class="col-md-2" style="padding-left:0;">
            <button class="btn btn-sm btn-default" data-role="stem-uploader" data-target="#question-stem-field"><i class="glyphicon glyphicon-picture"></i></button>
          </div>
        </div>

        {% if type == 'choice' or type == 'single_choice' %}


        {% elseif type == 'essay' %}
          <div class="form-group">
            <div class="col-md-2 control-label"><label for="question-answer-field">答案</label></div>
            <div class="col-md-8 controls">
              <textarea class="form-control" id="question-answer-field" name="answer[]">{{question.answer|default('')|join}}</textarea>
            </div>
            <div class="col-md-2" style="padding-left:0;">
              <button class="btn btn-sm btn-default" data-role="answer-uploader" data-target="#question-answer-field"><i class="glyphicon glyphicon-picture"></i></button>
            </div>
          </div>

        {% elseif type == 'determine' %}
          <div class="form-group">
            <div class="col-md-2 control-label"><label>答案</label></div>
            <div class="col-md-8 controls radios ">
              {{ radios('answer[]', {'1':'正确', '0':'错误'}, question.answer|default(['-1'])|join) }}
            </div>
          </div>

        {% elseif type == 'fill' %}
        
        {% endif %}

        <div class="form-group">
          <div class="col-md-8 col-md-offset-2 controls ">
              <a data-toggle="collapse" data-role="advanced-collapse" data-target="#advanced-collapse" class="text-success collapsed">&raquo; 显示/隐藏 高级选项 ...</a>
          </div>
        </div>
        
        <div id="advanced-collapse" class="advanced-collapse collapse">
          <div class="form-group">
            <div class="col-md-2 control-label"><label for="question-analysis-field">解析</label></div>
            <div class="col-md-8 controls">
                <textarea class="form-control" id="question-analysis-field" name="analysis">{% if isEdit %}{{question.analysis}}{% endif %}</textarea>
            </div>
            <div class="col-md-2" style="padding-left:0;">
              <button class="btn btn-sm btn-default" data-role="analysis-uploader"><i class="glyphicon glyphicon-picture"></i></button>
            </div>

          </div>

          <div class="form-group">
            <div class="col-md-2 control-label"><label for="question-score-field">分值</label></div>
            <div class="col-md-4 controls">
              <input class="form-control" value="{{question.score|default(2)}}" type="text" id="question-score-field" name="score" />
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-2 control-label"><label for="categoryId">类别</label></div>
            <div class="col-md-8 controls">
                <select class="form-control width-input width-input-large" name="categoryId" data-role="category">
                  <option value=''> 请选择类别 </option>
                </select>
                <script type="text/plain" data-role="category-data">{{ category|json_encode|raw }}</script>
            </div>
          </div>

        </div>



        <div class="form-group">
          <div class="col-md-8 col-md-offset-2 controls">
            
            {% if not isEdit and type != 'material' %}
                <button type="submit" data-role="submit" class="btn btn-primary" data-submission="continue">保存并继续</button>
            {% endif %}

            {% if type == 'material' and not isEdit %}
              <button type="submit" data-role="submit" class="btn btn-primary" data-submission="submit">保存并添加子题</button>
            {% else %}
              <button type="submit" data-role="submit" class="btn btn-primary" data-submission="submit">保存</button>
            {% endif %}

            {% if isEdit %}
                <a href="{{ path('course_manage_question',{courseId:course.id,parentId:question.parentId}) }}" class="btn btn-link">返回</a>
            {%else%}
                <a href="{{ path('course_manage_question',{courseId:course.id,parentId:parentId}) }}" class="btn btn-link">返回</a>
            {% endif %}

          </div>
        </div>

        <input type="hidden" name="submission">
        <input type="hidden" name="type" value="{{ type }}">
        <input type="hidden" name="parentId" value="{{ parentId }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

      </form>

    </div>
    
  </div>
</div>





{% endblock %}



 