{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{ course.title }} - {{ parent() }}{% endblock %}
{% set bodyClass = 'course-dashboard-page' %}
{% set script_arguments = {course_uri: path('course_show', {id:course.id})} %}

{% block content %}
  <div class="course-detail row">
    <div class="col-lg-9 col-md-8  course-detail-main">
      <section class="es-section">{% block course_main %}{% endblock %}</section>
    </div>

    <div class="col-lg-3 col-md-4  course-sidebar">
      {% block course_sidebar %}
        {% include 'TopxiaWebBundle:Course:Part/normal-sidebar-teachers.html.twig' %}
        {% include 'TopxiaWebBundle:Course:Part/normal-sidebar-students.html.twig' %}
        {% include 'TopxiaWebBundle:Course:Part/normal-sidebar-statuses.html.twig' %}

      {% endblock %}
    </div>
  </div>
{% endblock %}
