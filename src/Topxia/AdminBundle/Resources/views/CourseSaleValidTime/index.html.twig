{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set course = course|default(null) %}

{% block title %}
设置推广佣金
{% endblock %}
{% block body %}
  <form class="form-horizontal" id="course-form" action="{{ path('admin_course_ad_commission', {id:course.id}) }}" method="post">

    <div class="form-group">
      <label class="col-md-3 control-label" for="course-saleValidTime-field">销售有效期</label>
      <div class="col-md-6 controls">
        <input class="form-control" id="course-saleValidTime-field" type="text" name="saleValidTime" value="{{ course.saleValidTime | date('Y-n-d H:i') }}" >
      </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
  <script type="text/javascript">app.load('CourseSaleValidTime/save-modal')</script>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal">取消</button>
  <button type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#course-form">保存</button>
{% endblock %}
