{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}

{% block title %}课件管理 - {{ parent() }}{% endblock %}

{% set side_nav = 'files' %}
{% set tab = 'courseWare' %}
{% set script_controller = 'course-manage-file/index' %}

{% block main %}

<div class="panel panel-default panel-col">

  {% include 'TopxiaWebBundle:CourseFileManage:panel-heading.html.twig' %}

  <div class="panel-body" id="course-ware-table-container"> 

    <table class="table table-striped table-hover" id="course-ware-table">
      <thead>
        {% include 'TopxiaWebBundle:CourseFileManage:thead-tr.html.twig' %}
      </thead>
      <tbody>
        {% for uploadFile in courseWares %}
          {% include 'TopxiaWebBundle:CourseFileManage:tbody-tr.html.twig' %}
        {% else %}
          <tr class="empty"><td colspan="8">无课件记录</td></tr>
        {% endfor %}
      </tbody>
    </table>
    
    <label class="checkbox-inline"><input type="checkbox" data-role="batch-select"> 全选</label>
    
    {% include 'TopxiaWebBundle:CourseFileManage:operations-button-group.html.twig' %}

    {{ web_macro.paginator(paginator) }}

  </div>

</div>

{% endblock %}